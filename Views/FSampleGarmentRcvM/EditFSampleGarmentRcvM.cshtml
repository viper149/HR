@model CreateFSampleGarmentRcvMViewModel

@{
    ViewData["Title"] = "Sample Garments Receive";
}

<div class="container-fluid">

    <h2><i class="fa fa-edit text-warning" aria-hidden="true"></i> Edit @ViewData["Title"]</h2>

    <form id="form" role="form" asp-action="EditFSampleGarmentRcvM" enctype="multipart/form-data">
        <div class="panel panel-default">
            <div class="panel-body row">
                @Html.HiddenFor(e => e.FSampleGarmentRcvM.SGRID)
                @Html.HiddenFor(e => e.FSampleGarmentRcvM.EncryptedId)
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FSampleGarmentRcvM.SGRDATE" class="control-label"></label>
                        <input asp-for="FSampleGarmentRcvM.SGRDATE" class="form-control" />
                        <span asp-validation-for="FSampleGarmentRcvM.SGRDATE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FSampleGarmentRcvM.SEC.SECNAME" class="control-label"></label>
                        @Html.DropDownListFor(lc => lc.FSampleGarmentRcvM.SECID, new SelectList(Model.FBasSections, "SECID", "SECNAME"), "Select a Section", htmlAttributes: new { @class = "form-control js-example-data-ajax" })
                        <span asp-validation-for="FSampleGarmentRcvM.SECID" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FSampleGarmentRcvM.EMP.FIRST_NAME" class="control-label">Handover Employe</label>
                        @Html.DropDownListFor(lc => lc.FSampleGarmentRcvM.EMPID, new SelectList(Model.FHrEmployees, "EMPID", "FIRST_NAME"), "Select an Employee", htmlAttributes: new { @class = "form-control js-example-data-ajax" })
                        <span asp-validation-for="FSampleGarmentRcvM.EMPID" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FSampleGarmentRcvM.SFTRNO" class="control-label"></label>
                        <input asp-for="FSampleGarmentRcvM.SFTRNO" class="form-control" />
                        <span asp-validation-for="FSampleGarmentRcvM.SFTRNO" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FSampleGarmentRcvM.SFTRDATE" class="control-label"></label>
                        <input asp-for="FSampleGarmentRcvM.SFTRDATE" class="form-control" />
                        <span asp-validation-for="FSampleGarmentRcvM.SFTRDATE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FSampleGarmentRcvM.IFRNO" class="control-label"></label>
                        <input asp-for="FSampleGarmentRcvM.IFRNO" class="form-control" />
                        <span asp-validation-for="FSampleGarmentRcvM.IFRNO" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FSampleGarmentRcvM.REMARKS" class="control-label"></label>
                        <input asp-for="FSampleGarmentRcvM.REMARKS" class="form-control" />
                        <span asp-validation-for="FSampleGarmentRcvM.REMARKS" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h2 class="panel-title text-success"><i class="fa fa-hand-o-right"></i> Receive Details</h2>
                    <hr />
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 row">
                    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="FSampleGarmentRcvD.DEV_NO" class="control-label"></label>
                            <input asp-for="FSampleGarmentRcvD.DEV_NO" class="form-control" />
                            <span asp-validation-for="FSampleGarmentRcvD.DEV_NO" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="FSampleGarmentRcvD.SITEM.NAME" class="control-label"></label>
                            @Html.DropDownListFor(lc => lc.FSampleGarmentRcvD.SITEMID, new SelectList(Model.FSampleItemDetailses, "SITEMID", "NAME"), "Select an Item Name", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                            <span asp-validation-for="FSampleGarmentRcvD.SITEMID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="FSampleGarmentRcvD.FABCODENavigation.FABCODE" class="control-label fa fa-hand-o-right"></label>
                            @Html.DropDownListFor(lc => lc.FSampleGarmentRcvD.FABCODE, new SelectList(Model.RndFabricinfos, "FABCODE", "STYLE_NAME"), "Select a Fabric Code", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                            <span asp-validation-for="FSampleGarmentRcvD.FABCODE" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="FSampleGarmentRcvD.LOC.NAME" class="control-label"></label>
                            <a asp-controller="FSampleLocation" asp-action="CreateFSampleLocation"><i class="fa fa-lightbulb-o text-warning fa-2x-custom" data-placement="top" data-toggle="tooltip" data-html="true" title="Click this icon to add more locations."></i></a>
                            @Html.DropDownListFor(lc => lc.FSampleGarmentRcvD.LOCID, new SelectList(Model.FSampleLocations, "LOCID", "NAME"), "Select a Location", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                            <span asp-validation-for="FSampleGarmentRcvD.LOCID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="FSampleGarmentRcvD.QTY" class="control-label"></label>
                            <input asp-for="FSampleGarmentRcvD.QTY" class="form-control" />
                            <span asp-validation-for="FSampleGarmentRcvD.QTY" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="FSampleGarmentRcvD.REMARKS" class="control-label"></label>
                            <input asp-for="FSampleGarmentRcvD.REMARKS" class="form-control" />
                            <span asp-validation-for="FSampleGarmentRcvD.REMARKS" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="FSampleGarmentRcvD.BUYER.BUYER_NAME" class="control-label fa fa-hand-o-right"></label>
                            <a asp-controller="BasicBuyerInfo" asp-action="CreateBasBuyerInfo"><i class="fa fa-lightbulb-o text-warning fa-2x-custom" data-placement="top" data-toggle="tooltip" data-html="true" title="Click this icon to add more buyers."></i></a>
                            @Html.DropDownListFor(lc => lc.FSampleGarmentRcvD.BUYERID, new SelectList(Model.BasBuyerinfos, "BUYERID", "BUYER_NAME"), "Select a Buyer", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                            <span asp-validation-for="FSampleGarmentRcvD.BUYERID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="FSampleGarmentRcvD.COLOR.COLOR" class="control-label"></label>
                            <label class="text-warning">(If required)</label>
                            @Html.DropDownListFor(lc => lc.FSampleGarmentRcvD.COLORID, new SelectList(Model.BasColors, "COLORCODE", "COLOR"), "Select a Color", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                            <span asp-validation-for="FSampleGarmentRcvD.COLORID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 pb-1" id="StyleInfo"></div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <button class="btn btn-warning pull-right" type="submit">Update</button>
                    <button id="btnAdd" class="btn btn-success pull-right" type="button">Add</button>
                    <a asp-action="GetFSampleGarmentRcvM" class="btn btn-dark pull-right">Back to List</a>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 table-responsive" id="FSampleGarmentRcvD">
                    @await Html.PartialAsync($"~/Views/FSampleGarmentRcvM/AddOrDeleteFSampleGarmentRcvMDetailsTable.cshtml", Model)
                </div>
            </div>
        </div>
    </form>
</div>

@section Styles {
    <link href="~/css/CustomCSS/Stepper.css" rel="stylesheet" asp-append-version="true" />
}

@section Scripts {
    @{await Html.RenderPartialAsync($"_ValidationScriptPartial_Except_jQuery");}
    <script asp-append-version="true" src="~/js/custom-js/Stepper.js"></script>
    <script asp-append-version="true" src="~/js/site-common.js"></script>
    <script asp-append-version="true" src="~/js/FSampleGarmentRcvM/CreateFSampleGarmentRcvM.js"></script>
}
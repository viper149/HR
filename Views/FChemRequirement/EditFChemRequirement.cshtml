

@model FChemRequirementViewModel

@{
    ViewData["Title"] = "Chemical Requirement";
}

<h2><i class="fa fa-edit text-warning" aria-hidden="true"></i> <ins>Edit @ViewData["Title"]</ins></h2>

<div class="container-fluid">
    <form id="form" enctype="multipart/form-data" role="form" asp-action="PostEditFChemRequirement">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="panel-body row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h2 class="panel-title text-success">
                    <i class="fa fa-cart-plus" aria-hidden="true"></i> <ins>Requirement Information</ins>
                </h2>
                <hr />
            </div>

            @Html.HiddenFor(e => e.FChemReqMaster.CSRID)
            @Html.HiddenFor(e => e.FChemReqMaster.EncryptedId)

            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FChemReqMaster.CSRDATE" class="control-label"></label>
                    <input asp-for="FChemReqMaster.CSRDATE" class="form-control" />
                    <span asp-validation-for="FChemReqMaster.CSRDATE" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FChemReqMaster.REQUISITIONBY" class="control-label">Requisition By</label>
                    @Html.DropDownListFor(dt => dt.FChemReqMaster.REQUISITIONBY, new SelectList(Model.ReqEmployees, "EMPID", "FIRST_NAME"),
                        "Select Requisition By", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                    <span asp-validation-for="FChemReqMaster.REQUISITIONBY" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FChemReqMaster.DEPTID" class="control-label"></label>
                    @Html.DropDownListFor(dt => dt.FChemReqMaster.DEPTID, new SelectList(Model.FBasDepartmentsList, "DEPTID", "DEPTNAME"),
                        "Select Department", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                    <span asp-validation-for="FChemReqMaster.DEPTID" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FChemReqMaster.FBasSection.SECNAME" class="control-label"></label>
                    @Html.DropDownListFor(dt => dt.FChemReqMaster.SECID, new SelectList(Model.FBasSectionsList, "SECID", "SECNAME"), "Select Section", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                    <span asp-validation-for="FChemReqMaster.SECID" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FChemReqMaster.FBasSubsection.SSECNAME" class="control-label"></label>
                    @Html.DropDownListFor(dt => dt.FChemReqMaster.SSECID, new SelectList(Model.FBasSubsections, "SSECID", "SSECNAME"), "Select Sub-Section", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                    <span asp-validation-for="FChemReqMaster.SSECID" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FChemReqMaster.REMARKS" class="control-label"></label>
                    <input asp-for="FChemReqMaster.REMARKS" class="form-control" />
                    <span asp-validation-for="FChemReqMaster.REMARKS" class="text-danger"></span>
                </div>
            </div>

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h2 class="panel-title text-success"><i class="fa fa-eye" aria-hidden="true"></i> <ins>Requirement Details</ins></h2>
                <hr />
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FChemReqDetails.PRODUCTID" class="control-label"></label>
                    @Html.DropDownListFor(dt => dt.FChemReqDetails.PRODUCTID, new SelectList(Model.FChemStoreProductinfosList, "PRODUCTID", "PRODUCTNAME"),
                        "Select Chemical", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                    <span asp-validation-for="FChemReqDetails.PRODUCTID" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FChemReqDetails.PRODUCT.UNITNAVIGATION.UNAME" class="control-label"></label>
                    <input asp-for="FChemReqDetails.PRODUCT.UNITNAVIGATION.UNAME" class="form-control" disabled="disabled" />
                    <span asp-validation-for="FChemReqDetails.PRODUCT.UNITNAVIGATION.UNAME" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FChemReqDetails.REQ_QTY" class="control-label"></label>
                    <input asp-for="FChemReqDetails.REQ_QTY" class="form-control" />
                    <span asp-validation-for="FChemReqDetails.REQ_QTY" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FChemReqDetails.REMARKS" class="control-label"></label>
                    <input asp-for="FChemReqDetails.REMARKS" class="form-control" />
                    <span asp-validation-for="FChemReqDetails.REMARKS" class="text-danger"></span>
                </div>
            </div>

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <button id="btnCreateChemReq" class="btn btn-warning nextBtn pull-right" type="submit">Update</button>
                <button id="addToList" class="btn btn-success pull-right" type="button">Add</button>
                <a asp-action="GetChemicalRequirement" class="btn btn-dark pull-right">Back to List</a>
            </div>

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 table-responsive table-hover" id="chemReqDetailsTable">
                @await Html.PartialAsync($"~/Views/FChemRequirement/ChemicalRequirementDetailsPartialView.cshtml", Model)
            </div>

        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync($"_ValidationScriptPartial_Except_jQuery");}
    <script asp-append-version="true" src="~/js/ChemicalRequirement/CreateChemRequirement.js"></script>
}

@model FFsFabricLoadingBillViewModel

@{
    ViewData["Title"] = "Fabric Loading Bill Information";
    Layout = Layout;
}

<h2><i class="fa fa-plus-circle fa-lg text-success" aria-hidden="true"></i> Create @ViewData["Title"]</h2>

<div class="container-fluid">
    <form id="form" role="form" asp-action="CreateFFsFabricLoadingBillInfo">

        <div class="panel-body row">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsFabricLoadingBill.TRANSDATE" class="control-label"></label>
                        <input asp-for="FFsFabricLoadingBill.TRANSDATE" type="date" class="form-control" id="datePick" />
                        <span asp-validation-for="FFsFabricLoadingBill.TRANSDATE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsFabricLoadingBill.BILL_NO" class="control-label"></label>
                        <input asp-for="FFsFabricLoadingBill.BILL_NO" class="form-control" />
                        <span asp-validation-for="FFsFabricLoadingBill.BILL_NO" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsFabricLoadingBill.VEHICLE_ID" class="control-label"></label>

                        @Html.DropDownListFor(c => c.FFsFabricLoadingBill.VEHICLE_ID, new SelectList(Model.VehicleList, "VID", "VNUMBER"), "Select a Vehicle", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="FFsFabricLoadingBill.VEHICLE_ID" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsFabricLoadingBill.OPT1" class="control-label"></label>       @*other vehicle*@
                        <input asp-for="FFsFabricLoadingBill.OPT1" class="form-control text-uppercase" />
                        <span asp-validation-for="FFsFabricLoadingBill.OPT1" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsFabricLoadingBill.START_TIME" class="control-label"></label>
                        <input asp-for="FFsFabricLoadingBill.START_TIME" class="form-control" id="stTime" />
                        <span asp-validation-for="FFsFabricLoadingBill.START_TIME" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsFabricLoadingBill.END_TIME" class="control-label"></label>
                        <input asp-for="FFsFabricLoadingBill.END_TIME" class="form-control" id="endTime" />
                        <span asp-validation-for="FFsFabricLoadingBill.END_TIME" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsFabricLoadingBill.TOTAL_TIME" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="FFsFabricLoadingBill.TOTAL_TIME" class="form-control" readonly="readonly" />
                            <div class="input-group-append">
                                <span class="input-group-text">Hrs</span>
                            </div>
                            <span asp-validation-for="FFsFabricLoadingBill.TOTAL_TIME" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-1 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsFabricLoadingBill.ROLL_QTY" class="control-label"></label>
                        <input asp-for="FFsFabricLoadingBill.ROLL_QTY" class="form-control" />
                        <span asp-validation-for="FFsFabricLoadingBill.ROLL_QTY" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-1 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsFabricLoadingBill.RATE" class="control-label"></label>
                        <input asp-for="FFsFabricLoadingBill.RATE" class="form-control" />
                        <span asp-validation-for="FFsFabricLoadingBill.RATE" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsFabricLoadingBill.REMARKS" class="control-label"></label>
                        <input asp-for="FFsFabricLoadingBill.REMARKS" class="form-control" />
                        <span asp-validation-for="FFsFabricLoadingBill.REMARKS" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <button asp-action="CreateFFsFabricLoadingBillInfo" id="btnCreateLoan" class="btn btn-success nextBtn pull-right" type="submit">Create</button>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 table-responsive table-hover">
                @await Html.PartialAsync($"~/Views/FFsFabricLoadingBill/GetFFsFabricLoadingBillInfo.cshtml", Model.FFsFabricLoadingBill)
            </div>
        </div>
    </form>
</div>

@section Styles
{
    <link asp-append-version="true" href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

@section Scripts
{
    @{await Html.RenderPartialAsync($"_ValidationScriptPartial_Except_jQuery");}
    <script asp-append-version="true" src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script asp-append-version="true" src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script asp-append-version="true" src="~/js/FFsFabricLoadingBill/GetFFsFabricLoadingBillInfo.js"></script>
    <script asp-append-version="true" src="~/js/FFsFabricLoadingBill/CreateFFsFabricLoadingBillInfo.js"></script>

}


@model FGsProductInformationViewModel

@{
    ViewData["Title"] = "General Store Product Information";
    Layout = Layout;
}

<h2><i class="fa fa-plus-circle text-success" aria-hidden="true"></i> Create @ViewData["Title"]</h2>
<hr />

<div class="container-fluid">
    <form id="form" role="form" asp-action="CreateFGsProductInformation">
        <div class="panel panel-default setup-content" id="step-1">
            <div class="panel-body row">
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FGsProductInformation.PRODNAME" class="control-label"></label>
                        <input asp-for="FGsProductInformation.PRODNAME" class="form-control" />
                        <span asp-validation-for="FGsProductInformation.PRODNAME" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FGsProductInformation.CATID" class="control-label"></label>
                        @Html.DropDownListFor(dt => dt.FGsProductInformation.CATID, new SelectList(Model.FGsItemcategoriesList, "CATID", "CATNAME"), "Select Category", new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="FGsProductInformation.CATID" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FGsProductInformation.SCATID" class="control-label"></label>
                        <select asp-for="FGsProductInformation.SCATID" class="form-control js-example-basic-single">
                            <option value="">Select Sub-Category</option>
                        </select>
                        <span asp-validation-for="FGsProductInformation.SCATID" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FGsProductInformation.UNIT" class="control-label"></label>
                        @Html.DropDownListFor(dt => dt.FGsProductInformation.UNIT, new SelectList(Model.FBasUnitsList, "UID", "UNAME"), "Select Unit", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="FGsProductInformation.UNIT" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FGsProductInformation.PARTNO" class="control-label"></label>
                        <input asp-for="FGsProductInformation.PARTNO" class="form-control" />
                        <span asp-validation-for="FGsProductInformation.PARTNO" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FGsProductInformation.DESCRIPTION" class="control-label"></label>
                        <input asp-for="FGsProductInformation.DESCRIPTION" class="form-control" />
                        <span asp-validation-for="FGsProductInformation.DESCRIPTION" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FGsProductInformation.PROD_LOC" class="control-label"></label>
                        <input asp-for="FGsProductInformation.PROD_LOC" class="form-control" />
                        <span asp-validation-for="FGsProductInformation.PROD_LOC" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FGsProductInformation.REMARKS" class="control-label"></label>
                        <input asp-for="FGsProductInformation.REMARKS" class="form-control" />
                        <span asp-validation-for="FGsProductInformation.REMARKS" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <button class="btn btn-success pull-right" type="submit">Create</button>
                    <a asp-action="GetFGsProductInformation" class="btn btn-dark pull-right">Back to List</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync($"_ValidationScriptPartial_Except_jQuery");}
    <script asp-append-version="true" src="~/js/FGsProductInformation/CreateFGsProductInformation.js"></script>
}
@using DevExpress.AspNetCore
@using DenimERP.Reports.Weaving
@using rptLoomCard = DenimERP.Reports.Weaving.rptLoomCard
@model int
@{
    ViewData["Title"] = "Loom Card Report";
}
<h2>@ViewData["Title"]</h2>

@{
    @Html.DevExpress().WebDocumentViewer("WebDocumentViewer").Height("1000px").Bind(new rptLoomCard(Model))
}

@section Styles {
    <partial name="_LayoutReport" />
}

@section Scripts {
    <script asp-append-version="true" src="~/js/jquery-resizable/jquery-resizable.js"></script>
}
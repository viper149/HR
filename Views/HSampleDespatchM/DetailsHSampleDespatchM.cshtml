@model CreateHSampleDespatchMViewModel

@{
    ViewData["Title"] = "Details Head Office Sample Dispatch";
    Layout = Layout;
}

@{
    if (Model != null)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="m-b-md">
                            <h2 class="text-white btn btn-info">@Html.DisplayNameFor(e => e.HSampleDespatchM.SDDATE) : [ @Html.DisplayFor(e => e.HSampleDespatchM.SDDATE) ]</h2>
                            <hr />
                        </div>
                    </div>
                </div>
                <div class="row details">
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="HSampleDespatchM.GPNO" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.HSampleDespatchM.GPNO)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="HSampleDespatchM.GPDATE" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.HSampleDespatchM.GPDATE)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="HSampleDespatchM.BRAND.BRANDNAME" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.HSampleDespatchM.BRAND.BRANDNAME)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="HSampleDespatchM.PURPOSE" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.HSampleDespatchM.PURPOSENavigation.UNAME)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="HSampleDespatchM.STATUS" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.HSampleDespatchM.STATUS)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="HSampleDespatchM.RTNDATE" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.HSampleDespatchM.RTNDATE)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="HSampleDespatchM.HST.TEAM_NAME" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.HSampleDespatchM.HST.TEAM_NAME)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="HSampleDespatchM.THROUGH" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.HSampleDespatchM.THROUGH)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="HSampleDespatchM.COST_STATUS" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.HSampleDespatchM.COST_STATUS)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="HSampleDespatchM.REMARKS" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.HSampleDespatchM.REMARKS)
                            </span>
                        </div>
                    </div>

                    @if (Model.HSampleDespatchDs.Any())
                    {
                        <div class="col-12 table-responsive">
                            <h2 class="panel-title text-success"><i class="fa fa-truck fa-flip-horizontal"></i> Dispatch Details</h2>
                            <table class="table table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>#</th>
                                        <th>@Html.DisplayNameFor(model => model.HSampleDespatchD.BARCODE)</th>
                                        <th>@Html.DisplayNameFor(model => model.HSampleDespatchD.QTY)</th>
                                        <th>@Html.DisplayNameFor(model => model.HSampleDespatchD.CS_PRICE)</th>
                                        <th>@Html.DisplayNameFor(model => model.HSampleDespatchD.NEGO_PRICE)</th>
                                        <th>@Html.DisplayNameFor(model => model.HSampleDespatchD.REMARKS)</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @{
                                        foreach (var item in Model.HSampleDespatchDs.Select((value, index) => new { index, value }))
                                        {
                                            <tr>
                                                <td>@(item.index + 1) </td>
                                                <td>@item.value.BARCODE</td>
                                                <td>@item.value.QTY</td>
                                                <td>@item.value.CS_PRICE</td>
                                                <td>@item.value.NEGO_PRICE</td>
                                                <td>@item.value.REMARKS</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>

                <div class="col-md-12">
                    @Html.ActionLink("Edit", $"EditHSampleDespatchM", new { hsdId = Model.HSampleDespatchM.EncryptedId }, new { @class = "btn btn-warning pull-right mt-2" })
                    <a class="btn btn-dark pull-right mt-2" asp-action="GetHSampleDespatchM" asp-controller="HSampleDespatchM">Back to List</a>
                </div>
            </div>
        </div>
    }
}

@model CreateHSampleDespatchMViewModel

@if (Model.HSampleDespatchDs.Any())
{
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>@Html.DisplayNameFor(e => e.HSampleDespatchD.BARCODE)</th>
                <th>@Html.DisplayNameFor(e => e.HSampleDespatchD.QTY)</th>
                <th>@Html.DisplayNameFor(e => e.HSampleDespatchD.CS_PRICE)</th>
                <th>@Html.DisplayNameFor(e => e.HSampleDespatchD.NEGO_PRICE)</th>
                <th>@Html.DisplayNameFor(e => e.HSampleDespatchD.REMARKS)</th>
                <th>@Html.DisplayName("Actions")</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.HSampleDespatchDs.Count; i++)
            {
                <tr>
                    <td>
                        @Html.Raw(Model.HSampleDespatchDs[i].SDID > 0 ? $"<i class=\"fa fa-database text-danger\"></i> {(i + 1)}" : $"<i class=\"fa fa-plus text-primary\"></i> {i + 1}")
                    </td>
                    <td>
                        @Html.HiddenFor(e => e.HSampleDespatchDs[i].SDDID)
                        @Html.HiddenFor(e => e.HSampleDespatchDs[i].SDID)
                        @Html.HiddenFor(e => e.HSampleDespatchDs[i].RCVDID)
                        @Html.HiddenFor(e => e.HSampleDespatchDs[i].BARCODE)
                        @Html.Raw(Model.HSampleDespatchDs[i].BARCODE == null ? "Will be generate." : $"<span>{Model.HSampleDespatchDs[i].BARCODE}</span>")
                        <barcode code="SN34RD1A" type="RM4SCC" />
                    </td>
                    <td>
                        @Html.HiddenFor(e => e.HSampleDespatchDs[i].QTY)
                        @Model.HSampleDespatchDs[i].QTY
                    </td>
                    <td>
                        @Html.HiddenFor(e => e.HSampleDespatchDs[i].CS_PRICE)
                        @Model.HSampleDespatchDs[i].CS_PRICE
                    </td>
                    <td>
                        @Html.HiddenFor(e => e.HSampleDespatchDs[i].NEGO_PRICE)
                        @Model.HSampleDespatchDs[i].NEGO_PRICE
                    </td>
                    <td>
                        @Html.HiddenFor(e => e.HSampleDespatchDs[i].REMARKS)
                        @Model.HSampleDespatchDs[i].REMARKS
                    </td>
                    <td>
                        <i class="fa fa-trash fa-2x text-danger" onclick="removeFromList(@i)" aria-hidden="true"></i>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>Empty!</strong> Please add data to see the list.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

}
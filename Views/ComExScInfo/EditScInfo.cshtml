    <script type="text/javascript" asp-append-version="true">
        $(function () {
            $("#qty").on("change", function () {
                $('#amount').val($('#qty').val() * $('#rate').val());
            });

            $("#rate").on("change", function () {
                $('#amount').val($('#qty').val() * $('#rate').val());
            });

            $("#btnAdd").on('click', function () {
                $.ajax({
                    async: true,
                    cache: false,
                    data: $('#form').serialize(),
                    type: "POST",
                    url: '/ComExScInfo/AddScDetails',
                    success: function (partialView) {
                        $('#scDetails').html(partialView);
                    },
                    error: function (e) {
                        console.log(e);
                    }
                });
            });

            
            //Retrieve PI Details List
            $.ajax({
                async: true,
                cache: false,
                type: "POST",
                data: { scNo: $('#cOM_EX_SCINFO_SCID').val()},
                url: '/ComExScInfo/GetScDetailsList',
                success: function (partialView) {
                    $('#PreviousData').html(partialView);
                },
                error: function (e) {
                    console.log('Failed to Retrieve PI Details.', 'error');
                }
            });
        });
        
        //To Remove Existing SC Details List
        function RemoveScInfo(scNo, styleId) {
            $.ajax({
                async: true,
                cache: false,
                type: "POST",
                data: { scNo: scNo, styleId: styleId},
                url: '/ComExScInfo/RemoveExistingScDetails',
                success: function (partialView) {
                    toastrNotification('Successfully Deleted SC Details.', 'success');
                    $('#PreviousData').html(partialView);
                },
                error: function (e) {
                    toastrNotification('Failed to Delete SC Details.', 'error');
                }
            });
        };
    </script>


@model CreateFSampleFabricRcvMViewModel

@{
    ViewData["Title"] = "Sample Fabric Receive";
}

@{
    if (Model != null)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-lg-12">
                        <h2 class="text-white btn btn-info">@Html.DisplayNameFor(e => e.FSampleFabricRcvM.SFRDATE) : [ @Html.DisplayFor(e => e.FSampleFabricRcvM.SFRDATE) ]</h2>
                        <hr />
                    </div>
                </div>
                <div class="row details">
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="FSampleFabricRcvM.SEC.SECNAME" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.FSampleFabricRcvM.SEC.SECNAME)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label class="control-label">Handover Employee</label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @($"{Model.FSampleFabricRcvM.EMP?.FIRST_NAME} {Model.FSampleFabricRcvM.EMP?.LAST_NAME}")
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="FSampleFabricRcvM.SFTRNO" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.FSampleFabricRcvM.SFTRNO)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="FSampleFabricRcvM.SFTRDATE" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.FSampleFabricRcvM.SFTRDATE)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="FSampleFabricRcvM.REMARKS" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.FSampleFabricRcvM.REMARKS)
                            </span>
                        </div>
                    </div>

                    @await Html.PartialAsync($"~/Views/FSampleFabricRcvM/DetailsFSampleGarmentRcvMTable.cshtml", Model)

                </div>

                <div class="col-md-12">
                    <a asp-action="EditFSampleFabricRcvM" asp-controller="FSampleFabricRcvM" asp-route-sfrId="Model.FSampleFabricRcvM.EncryptedId" class="btn btn-warning pull-right">Edit</a>
                    <a asp-action="GetFSampleFabricRcvM" asp-controller="FSampleFabricRcvM" class="btn btn-dark pull-right">Back to List</a>
                </div>
            </div>
        </div>
    }
}
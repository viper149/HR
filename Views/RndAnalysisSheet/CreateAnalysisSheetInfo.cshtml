                </div>
                <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
                    <div class="form-group">
                        <label asp-for="RndAnalysisSheet.FINID" class="control-label"></label>
                        @Html.DropDownListFor(dt => dt.RndAnalysisSheet.FINID, new SelectList(Model.RndFinishTypes, "FINID", "TYPENAME"), "Select Finish Type", htmlAttributes: new { @class = "form-control js-example-basic-single" })

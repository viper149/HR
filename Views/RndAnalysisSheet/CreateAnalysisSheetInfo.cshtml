                        <input asp-for="RndAnalysisSheet.ADATE" class="form-control" />
                        <span asp-validation-for="RndAnalysisSheet.ADATE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
                    <div class="form-group">
                        <label asp-for="RndAnalysisSheet.RND_QUERY_NO" class="control-label"></label>
                        <input asp-for="RndAnalysisSheet.RND_QUERY_NO" class="form-control" readonly />
                        <span asp-validation-for="RndAnalysisSheet.RND_QUERY_NO" class="text-danger"></span>

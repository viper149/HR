                <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
                    <div class="form-group">
                        <label asp-for="RndAnalysisSheet.UTOTAL_ENDS" class="control-label"></label>
                        <input asp-for="RndAnalysisSheet.UTOTAL_ENDS" class="form-control" />
                        <span asp-validation-for="RndAnalysisSheet.UTOTAL_ENDS" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
                    <div class="form-group">
                        <label asp-for="RndAnalysisSheet.UREED_SPACE" class="control-label"></label>
                        <input asp-for="RndAnalysisSheet.UREED_SPACE" class="form-control" />
                        <span asp-validation-for="RndAnalysisSheet.UREED_SPACE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
                    <div class="form-group">
                        <label asp-for="RndAnalysisSheet.REMARKS" class="control-label"></label>
                        <input asp-for="RndAnalysisSheet.REMARKS" class="form-control" />
                        <span asp-validation-for="RndAnalysisSheet.REMARKS" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <button class="btn btn-info nextBtn pull-right" type="button">Next</button>
                    <a asp-action="GetAnalysisSheetInfo" class="btn btn-dark pull-right">Back to List</a>
                </div>
            </div>
        </div>

        <div class="panel panel-primary setup-content" id="step-2">
            <div class="panel-body row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h2 class="panel-title text-success"><i class="fa fa-eye" aria-hidden="true"></i> Yarn Details</h2>
                    <hr />
                </div>
                <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
                    <div class="form-group">
                        <label asp-for="RndAnalysisSheetDetails.YARN_FOR" class="control-label"></label>
                        <select class="form-control js-example-basic-single" asp-for="RndAnalysisSheetDetails.YARN_FOR">

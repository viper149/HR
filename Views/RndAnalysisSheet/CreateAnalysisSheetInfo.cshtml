                <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
                    <div class="form-group">
                        <label asp-for="RndAnalysisSheet.WA_WEIGHT" class="control-label"></label>
                        <input asp-for="RndAnalysisSheet.WA_WEIGHT" class="form-control" />

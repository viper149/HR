@model F_SAMPLE_LOCATION

@{
    ViewData["Title"] = "Details Factory Sample Location";
    Layout = Layout;
}


@{
    if (Model != null)
    {
        <div class="card flex-md-row mb-4 box-shadow h-md-250">
            <div class="card-body d-flex flex-column align-items-start">
                <table class="table table-borderless col-sm-12">
                    <thead class="thead-light">
                        <tr>
                            <th colspan="3" class="border border-info"><h2><i class="fa fa-info-circle"></i> @ViewData["Title"]</h2></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="text-primary">
                            <th scope="col">@Html.DisplayNameFor(e => e.NAME)</th>
                            <th scope="col"><i class="fa fa-angle-right"></i></th>
                            <th scope="col">@Html.DisplayFor(e => e.NAME)</th>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(e => e.DESCRIPTION)</th>
                            <th scope="col"><i class="fa fa-angle-right"></i></th>
                            <th scope="col">@Html.DisplayFor(e => e.DESCRIPTION)</th>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(e => e.REMARKS)</th>
                            <th scope="col"><i class="fa fa-angle-right"></i></th>
                            <th scope="col">@Html.DisplayFor(e => e.REMARKS)</th>
                        </tr>
                    </tbody>
                </table>
                <div class="col-sm-12 p-0">
                    <a class="btn btn-dark pull-left" asp-action="GetFSampleLocation" asp-controller="FSampleLocation">Back to List</a>
                    @Html.ActionLink("Edit", $"EditFSampleLocation", new { locationId = Model.EncryptedId }, new { @class = "btn btn-warning pull-left" })
                </div>
            </div>
            <img asp-append-version="true" class="card-img-right flex-auto d-none d-md-block" alt="Thumbnail [200x250]" style="width: 400px; height: 250px;" src="~/images/hanger/hanger.jpg" data-holder-rendered="true">
        </div>
    }
}
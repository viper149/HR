
@model F_BAS_DEPARTMENT

@{
    ViewData["Title"] = "Edit Employee Department";
    Layout = Layout;
}

<h2><i class="fa fa-edit fa-lg text-warning" aria-hidden="true"></i> Update Department</h2>
<hr />

<div class="row">
    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
        <form asp-action="EditEmpDepartment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(c=>c.DEPTID)
            @Html.HiddenFor(c=>c.EncryptedId)
            <div class="form-group">
                <label asp-for="DEPTNAME" class="control-label"></label>
                <input asp-for="DEPTNAME" class="form-control" />
                <span asp-validation-for="DEPTNAME" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="REMARKS" class="control-label"></label>
                <input asp-for="REMARKS" class="form-control" />
                <span asp-validation-for="REMARKS" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="GetEmpDepartment" class="btn btn-dark">Back to List</a>
                <input class="btn btn-warning" type="submit" value="Update" />
            </div>
        </form>
    </div>
</div>





@model ComImpLcInformationForCreateViewModel

@{
    ViewData["Title"] = "Commercial LC";
}

<h2><i class="fa fa-plus-circle text-success" aria-hidden="true"></i> @ViewData["Title"] <i class="fa fa-at text-info">Import</i></h2>

<div class="container-fluid">
    <div class="stepwizard">
        <div class="stepwizard-row setup-panel d-flex justify-content-around">
            <div class="stepwizard-step">
                <a href="#step-1" type="button" class="btn btn-success btn-circle">1</a>
                <p><small>LC Information - 1</small></p>
            </div>
            <div class="stepwizard-step">
                <a class="btn btn-default btn-circle" disabled="disabled" href="#step-2" type="button">2</a>
                <p><small>Finish</small></p>
            </div>
        </div>
    </div>

    <form id="form" role="form" asp-action="CreateComImpLcInformation" enctype="multipart/form-data">
        <div class="panel panel-default setup-content" id="step-1">

            <div class="panel-body row">
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="cOM_IMP_LCINFORMATION.ISFTT" class="control-label"></label>
                        <div class="form-control custom-form-control">
                            <label class="switch">
                                <input asp-for="cOM_IMP_LCINFORMATION.ISFTT" />
                                <span class="slider round"></span>
                                <span class="absolute-no">NO</span>
                            </label>
                        </div>
                        <span asp-validation-for="cOM_IMP_LCINFORMATION.ISFTT" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="panel-body row">
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="cOM_IMP_LCINFORMATION.FILENO" class="control-label"></label>
                        <input asp-for="cOM_IMP_LCINFORMATION.FILENO" class="form-control" id="cOM_IMP_LCINFORMATION_FILENO" />
                        <span asp-validation-for="cOM_IMP_LCINFORMATION.FILENO" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="cOM_IMP_LCINFORMATION.LCNO" class="control-label"></label>
                        <input asp-for="cOM_IMP_LCINFORMATION.LCNO" class="form-control" />
                        <span asp-validation-for="cOM_IMP_LCINFORMATION.LCNO" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="cOM_IMP_LCINFORMATION.LCDATE" class="control-label"></label>
                        <input asp-for="cOM_IMP_LCINFORMATION.LCDATE" class="form-control" />
                        <span asp-validation-for="cOM_IMP_LCINFORMATION.LCDATE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="cOM_IMP_LCINFORMATION.SHIPDATE" class="control-label"></label>
                        <input asp-for="cOM_IMP_LCINFORMATION.SHIPDATE" class="form-control" />
                        <span asp-validation-for="cOM_IMP_LCINFORMATION.SHIPDATE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="cOM_IMP_LCINFORMATION.EXPDATE" class="control-label"></label>
                        <input asp-for="cOM_IMP_LCINFORMATION.EXPDATE" class="form-control" id="cOM_IMP_LCINFORMATION_EXPDATE" />
                        <span asp-validation-for="cOM_IMP_LCINFORMATION.EXPDATE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="cOM_IMP_LCINFORMATION.COM_IMP_LCTYPE.TYPENAME" class="control-label"></label>
                        @Html.DropDownListFor(lc => lc.cOM_IMP_LCINFORMATION.LTID, new SelectList(Model.ComImpLctypes, "LTID", "TYPENAME"), "Select Type", htmlAttributes: new { @class = "form-control js-example-basic-single", @id = "cOM_IMP_LCINFORMATION_LTID" })
                        @Html.ValidationMessageFor(lc => lc.cOM_IMP_LCINFORMATION.LTID, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="cOM_IMP_LCINFORMATION.CATID" class="control-label"></label>
                        @Html.DropDownListFor(lc => lc.cOM_IMP_LCINFORMATION.CATID, new SelectList(Model.bAS_PRODCATEGORies, "CATID", "CATEGORY"), "Select Item Type", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                        @Html.ValidationMessageFor(lc => lc.cOM_IMP_LCINFORMATION.CATID, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="cOM_IMP_LCINFORMATION.CURRENCY" class="control-label"></label>
                        <select class="form-control js-example-basic-single" asp-for="cOM_IMP_LCINFORMATION.CURRENCY">
                            <option value="">Select Currency</option>
                            <option value="US$">USD$</option>
                            <option value="EUR€">EURO€</option>
                            <option value="CHFf">CHFf</option>
                            <option value="GBP£">GBP£</option>
                            <option value="JPY¥">JPY¥</option>
                        </select>
                        <span asp-validation-for="cOM_IMP_LCINFORMATION.CURRENCY" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="cOM_IMP_LCINFORMATION.SUPPID" class="control-label"></label>
                        @Html.DropDownListFor(lc => lc.cOM_IMP_LCINFORMATION.SUPPID, new SelectList(Model.bAS_SUPPLIERINFOs, "SUPPID", "SUPPNAME"), "Select Supplier", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                        @Html.ValidationMessageFor(lc => lc.cOM_IMP_LCINFORMATION.SUPPID, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="cOM_IMP_LCINFORMATION.BANKID" class="control-label"></label>
                        @Html.DropDownListFor(lc => lc.cOM_IMP_LCINFORMATION.BANKID, new SelectList(Model.bAS_BEN_BANK_MASTERs, "BANKID", "BEN_BANK"), "Select Bank", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                        @Html.ValidationMessageFor(lc => lc.cOM_IMP_LCINFORMATION.BANKID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="cOM_IMP_LCINFORMATION.TID" class="control-label"></label>
                        @Html.DropDownListFor(lc => lc.cOM_IMP_LCINFORMATION.TID, new SelectList(Model.ComTenors, "TID", "NAME"), "Select Tenor", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="cOM_IMP_LCINFORMATION.TID" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="cOM_IMP_LCINFORMATION.TOLLERANCE" class="control-label"></label>
                        <input asp-for="cOM_IMP_LCINFORMATION.TOLLERANCE" class="form-control" />
                        <span asp-validation-for="cOM_IMP_LCINFORMATION.TOLLERANCE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="cOM_IMP_LCINFORMATION.ORIGIN" class="control-label"></label>
                        <input asp-for="cOM_IMP_LCINFORMATION.ORIGIN" class="form-control" />
                        <span asp-validation-for="cOM_IMP_LCINFORMATION.ORIGIN" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="cOM_IMP_LCINFORMATION.DESPORT" class="control-label"></label>
                        <select class="form-control js-example-basic-single" asp-for="cOM_IMP_LCINFORMATION.DESPORT">
                            <option value="">Select Port</option>
                            <option value="Chattogram">Chattogram</option>
                            <option value="Dhaka">Dhaka</option>
                            <option value="Benapole">Benapole</option>
                        </select>
                        <span asp-validation-for="cOM_IMP_LCINFORMATION.DESPORT" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="cOM_IMP_LCINFORMATION.INSID" class="control-label"></label>
                        @Html.DropDownListFor(lc => lc.cOM_IMP_LCINFORMATION.INSID, new SelectList(Model.bAS_INSURANCEINFOs, "INSID", "INSNAME"), "Select Insurance", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                        @Html.ValidationMessageFor(lc => lc.cOM_IMP_LCINFORMATION.INSID, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="cOM_IMP_LCINFORMATION.CNOTEDATE" class="control-label"></label>
                        <input asp-for="cOM_IMP_LCINFORMATION.CNOTEDATE" class="form-control" />
                        <span asp-validation-for="cOM_IMP_LCINFORMATION.CNOTEDATE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="cOM_IMP_LCINFORMATION.CNOTENO" class="control-label"></label>
                        <input asp-for="cOM_IMP_LCINFORMATION.CNOTENO" class="form-control" />
                        <span asp-validation-for="cOM_IMP_LCINFORMATION.CNOTENO" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="cOM_IMP_LCINFORMATION.REMARKS" class="control-label"></label>
                        <input asp-for="cOM_IMP_LCINFORMATION.REMARKS" class="form-control" />
                        <span asp-validation-for="cOM_IMP_LCINFORMATION.REMARKS" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="LCPATH" class="control-label"></label>
                        <div class="custom-file">
                            <input asp-for="LCPATH" class="form-control custom-file-input" />
                            <label class="custom-file-label">Choose a pdf file...</label>
                        </div>
                    </div>
                </div>
                <div id="parentContainer">
                    <div id="includeInStepper" class="col-lg-12 col-md-12 col-sm-12 col-xs-12 row">

                    </div>
                    <div id="previousList" class="col-lg-12 col-md-12 col-sm-12 col-xs-12 row"></div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <button class="btn btn-info nextBtn pull-right" type="button">Next</button>
                    <a asp-action="GetComImpLcInformation" class="btn btn-dark pull-right">Back to List</a>
                </div>
            </div>

            <div class="col-12">
                <hr />
            </div>

            <div class="col-12 row p-0 d-none styleDetails">
                <div class="col-6 row">
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="cOM_IMP_LCINFORMATION.ComExLcinfo.LCNO" class="control-label"></label>
                            @Html.DropDownListFor(lc => lc.cOM_IMP_LCINFORMATION.LCID, new SelectList(Model.ComExLcinfos, "LCID", "LCNO"), "Please select a Master LC", htmlAttributes: new { @class = "form-control js-example-basic-single", @id = "masterLcNo" })
                            @Html.ValidationMessageFor(lc => lc.cOM_IMP_LCINFORMATION.LCID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="ComExLcinfo.LCDATE" class="control-label"></label>
                            <input asp-for="ComExLcinfo.LCDATE" class="form-control" readonly />
                            <span asp-validation-for="ComExLcinfo.LCDATE" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="ComExLcinfo.VALUE" class="control-label"></label>
                            <input asp-for="ComExLcinfo.VALUE" class="form-control" readonly />
                            <span asp-validation-for="ComExLcinfo.VALUE" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="ComExLcinfo.AMENTDATE" class="control-label"></label>
                            <input asp-for="ComExLcinfo.AMENTDATE" class="form-control" readonly />
                            <span asp-validation-for="ComExLcinfo.AMENTDATE" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="ComExLcinfo.AMENTVALUE" class="control-label"></label>
                            <input asp-for="ComExLcinfo.AMENTVALUE" class="form-control" readonly />
                            <span asp-validation-for="ComExLcinfo.AMENTVALUE" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-6 row">
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="ComExLcinfo.BANK_.PARTY_BANK" class="control-label"></label>
                            <input asp-for="ComExLcinfo.BANK_.PARTY_BANK" class="form-control" readonly />
                            <span asp-validation-for="ComExLcinfo.BANK_.PARTY_BANK" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="cOM_IMP_LCINFORMATION.LIENVAL" class="control-label"></label>
                            <input asp-for="cOM_IMP_LCINFORMATION.LIENVAL" class="form-control" id="cOM_IMP_LCINFORMATION_LIENVAL" readonly />
                            <span asp-validation-for="cOM_IMP_LCINFORMATION.LIENVAL" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="cOM_IMP_LCINFORMATION.BALANCE" class="control-label"></label>
                            <input asp-for="cOM_IMP_LCINFORMATION.BALANCE" class="form-control" readonly />
                            <span asp-validation-for="cOM_IMP_LCINFORMATION.BALANCE" class="text-danger"></span>
                        </div>
                    </div>

                    <input asp-for="ComExLcinfo.FILENO" type="hidden" value="dummy" />
                    <input asp-for="ComExLcinfo.LCNO" type="hidden" value="dummy" />

                </div>
            </div>
        </div>




        <div class="panel panel-primary setup-content" id="step-2">
            <div class="panel-body row">
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="cOM_IMP_LCDETAILS.LCNO" class="control-label"></label>
                        <span class="custom-form-control-bg form-control bg-e9ecef" id="lcNo">
                        </span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="cOM_IMP_LCDETAILS.HSCODE" class="control-label"></label>
                        <input asp-for="cOM_IMP_LCDETAILS.HSCODE" class="form-control" />
                        <span asp-validation-for="cOM_IMP_LCDETAILS.HSCODE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="cOM_IMP_LCDETAILS.PRODID" class="control-label"></label>
                        @Html.DropDownListFor(lc => lc.cOM_IMP_LCDETAILS.PRODID, new SelectList(Model.BasProductinfos, "PRODID", "PRODNAME"), "Select Product Name", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                        @Html.ValidationMessageFor(lc => lc.cOM_IMP_LCDETAILS.PRODID, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12 d-none">
                    <div class="form-group">
                        <label asp-for="cOM_IMP_LCDETAILS.TRNSDATE" class="control-label"></label>
                        <input asp-for="cOM_IMP_LCDETAILS.TRNSDATE" class="form-control" />
                        <span asp-validation-for="cOM_IMP_LCDETAILS.TRNSDATE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="cOM_IMP_LCDETAILS.PINO" class="control-label"></label>
                        <input asp-for="cOM_IMP_LCDETAILS.PINO" class="form-control" />
                        <span asp-validation-for="cOM_IMP_LCDETAILS.PINO" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="cOM_IMP_LCDETAILS.PIDATE" class="control-label"></label>
                        <input asp-for="cOM_IMP_LCDETAILS.PIDATE" class="form-control" />
                        <span asp-validation-for="cOM_IMP_LCDETAILS.PIDATE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="cOM_IMP_LCDETAILS.UNIT" class="control-label"></label>
                        @Html.DropDownListFor(lc => lc.cOM_IMP_LCDETAILS.UNIT, new SelectList(Model.FBasUnitses, "UID", "UNAME", Model.FBasUnitses.FirstOrDefault()?.UID), "Select An Unit", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="cOM_IMP_LCDETAILS.UNIT" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="cOM_IMP_LCDETAILS.QTY" class="control-label"></label>
                        <input asp-for="cOM_IMP_LCDETAILS.QTY" class="form-control" />
                        <span asp-validation-for="cOM_IMP_LCDETAILS.QTY" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="cOM_IMP_LCDETAILS.RATE" class="control-label"></label>
                        <input asp-for="cOM_IMP_LCDETAILS.RATE" class="form-control" />
                        <span asp-validation-for="cOM_IMP_LCDETAILS.RATE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="cOM_IMP_LCDETAILS.TOTAL" class="control-label"></label>
                        <input readonly asp-for="cOM_IMP_LCDETAILS.TOTAL" class="form-control" />
                        <span asp-validation-for="cOM_IMP_LCDETAILS.TOTAL" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="PIPATH" class="control-label"></label>
                        <div class="custom-file">
                            <input asp-for="PIPATH" class="form-control custom-file-input" />
                            <label class="custom-file-label">Choose a pdf file...</label>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <button class="btn btn-success pull-right" type="submit">Create</button>
                    <button id="btnAdd" class="btn btn-success pull-right" type="button">Add</button>
                    <button class="btn btn-info prevBtn pull-right" type="button">Prev</button>
                    <a asp-action="GetComImpLcInformation" class="btn btn-dark pull-right">Back to List</a>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 table-responsive table-hover" id="AttachToImportLC"></div>

            </div>
        </div>
    </form>
</div>

@section Styles {
    <link href="~/css/CustomCSS/Stepper.css" rel="stylesheet" asp-append-version="true" />
}

@section Scripts {
    @{await Html.RenderPartialAsync($"_ValidationScriptPartial_Except_jQuery");}
    <script src="~/js/custom-js/Stepper.js" asp-append-version="true"></script>
    <script src="~/js/comImpLC/CreateComImpLcInformation.js" asp-append-version="true"></script>
    <script src="~/js/comImpLC/CreateComImpLcInformation-Common.js" asp-append-version="true"></script>
}
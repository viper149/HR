                <input asp-for="Logo" class="form-control custom-file-input" />
            </div>

            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="CompanyInfo.COMPANY_NAME" class="control-label"></label>
                    <input asp-for="CompanyInfo.COMPANY_NAME" class="form-control" />
                    <span asp-validation-for="CompanyInfo.COMPANY_NAME" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="CompanyInfo.DESCRIPTION" class="control-label"></label>
                    <input asp-for="CompanyInfo.DESCRIPTION" class="form-control" />
                    <span asp-validation-for="CompanyInfo.DESCRIPTION" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="CompanyInfo.TAGLINE" class="control-label"></label>
                    <input asp-for="CompanyInfo.TAGLINE" class="form-control" />
                    <span asp-validation-for="CompanyInfo.TAGLINE" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="CompanyInfo.HEADOFFICE_ADDRESS" class="control-label"></label>
                    <input asp-for="CompanyInfo.HEADOFFICE_ADDRESS" class="form-control" />
                    <span asp-validation-for="CompanyInfo.HEADOFFICE_ADDRESS" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="CompanyInfo.FACTORY_ADDRESS" class="control-label"></label>
                    <input asp-for="CompanyInfo.FACTORY_ADDRESS" class="form-control" />
                    <span asp-validation-for="CompanyInfo.FACTORY_ADDRESS" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="CompanyInfo.WEB_ADDRESS" class="control-label"></label>
                    <input asp-for="CompanyInfo.WEB_ADDRESS" class="form-control" />
                    <span asp-validation-for="CompanyInfo.WEB_ADDRESS" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="CompanyInfo.EMAIL" class="control-label"></label>
                    <input asp-for="CompanyInfo.EMAIL" class="form-control" />
                    <span asp-validation-for="CompanyInfo.EMAIL" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="CompanyInfo.PHONE1" class="control-label"></label>
                    <input asp-for="CompanyInfo.PHONE1" class="form-control" />
                    <span asp-validation-for="CompanyInfo.PHONE1" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">

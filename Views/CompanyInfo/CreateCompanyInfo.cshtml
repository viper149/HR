                    <label asp-for="CompanyInfo.PHONE3" class="control-label"></label>
                    <input asp-for="CompanyInfo.PHONE3" class="form-control" />
                    <span asp-validation-for="CompanyInfo.PHONE3" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="CompanyInfo.BIN_NO" class="control-label"></label>
                    <input asp-for="CompanyInfo.BIN_NO" class="form-control" />
                    <span asp-validation-for="CompanyInfo.BIN_NO" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="CompanyInfo.ETIN_NO" class="control-label"></label>
                    <input asp-for="CompanyInfo.ETIN_NO" class="form-control" />
                    <span asp-validation-for="CompanyInfo.ETIN_NO" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="CompanyInfo.REMARKS" class="control-label"></label>
                    <input asp-for="CompanyInfo.REMARKS" class="form-control" />
                    <span asp-validation-for="CompanyInfo.REMARKS" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-group pull-right">
                    <a asp-action="GetCompanyInfo" class="btn btn-dark" accesskey="b">Back to List</a>
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts
{
    @{await Html.RenderPartialAsync($"_ValidationScriptPartial_Except_jQuery");}
    <script asp-append-version="true" src="~/js/custom-file-input.js"></script>
}

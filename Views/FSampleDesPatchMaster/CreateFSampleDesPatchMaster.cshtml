@model CreateFSampleDesPatchMasterViewModel

@{
    ViewData["Title"] = "Sample Garments Dispatch";
}

<div class="container-fluid">
    
    <h2><i class="fa fa-plus-circle text-success" aria-hidden="true"></i> Create @ViewData["Title"]</h2>

    <form id="form" role="form" asp-action="CreateFSampleDesPatchMaster" enctype="multipart/form-data">
        <div class="panel panel-default">
            <div class="panel-body row">
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FSampleDespatchMaster.GPDATE" class="control-label required"></label>
                        <input asp-for="FSampleDespatchMaster.GPDATE" class="form-control"/>
                        <span asp-validation-for="FSampleDespatchMaster.GPDATE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FSampleDespatchMaster.GPNO" class="control-label required"></label>
                        <input asp-for="FSampleDespatchMaster.GPNO" class="form-control" readonly/>
                        <span asp-validation-for="FSampleDespatchMaster.GPNO" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FSampleDespatchMaster.FSampleDespatchMasterType.TYPENAME" class="control-label required"></label>
                        @Html.DropDownListFor(lc => lc.FSampleDespatchMaster.TYPEID, new SelectList(Model.FSampleDespatchMasterTypes, "TYPEID", "TYPENAME"), "Select a Gate Pass For", htmlAttributes: new {@class = "form-control js-example-basic-single"})
                        @Html.ValidationMessageFor(lc => lc.FSampleDespatchMaster.TYPEID, "", new {@class = "text-danger"})
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FSampleDespatchMaster.GPTYPE.GPTYPENAME" class="control-label required"></label>
                        @Html.DropDownListFor(lc => lc.FSampleDespatchMaster.GPTYPEID, new SelectList(Model.GatepassTypes, "GPTYPEID", "GPTYPENAME"), "Select a Gate Pass Type", htmlAttributes: new {@class = "form-control js-example-basic-single"})
                        @Html.ValidationMessageFor(lc => lc.FSampleDespatchMaster.GPTYPEID, "", new {@class = "text-danger"})
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FSampleDespatchMaster.DR.DRIVER_NAME" class="control-label required"></label>
                        @Html.DropDownListFor(lc => lc.FSampleDespatchMaster.DRID, new SelectList(Model.FBasDriverinfos, "DRID", "DRIVER_NAME"), "Select a Driver", htmlAttributes: new {@class = "form-control js-example-basic-single"})
                        @Html.ValidationMessageFor(lc => lc.FSampleDespatchMaster.DRID, "", new {@class = "text-danger"})
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FSampleDespatchMaster.V.VNUMBER" class="control-label required"></label>
                        @Html.DropDownListFor(lc => lc.FSampleDespatchMaster.VID, new SelectList(Model.FBasVehicleInfos, "VID", "VNUMBER"), "Select a Vehicle Number", htmlAttributes: new {@class = "form-control js-example-basic-single"})
                        @Html.ValidationMessageFor(lc => lc.FSampleDespatchMaster.VID, "", new {@class = "text-danger"})
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FSampleDespatchMaster.REMARKS" class="control-label"></label>
                        <input asp-for="FSampleDespatchMaster.REMARKS" class="form-control"/>
                        <span asp-validation-for="FSampleDespatchMaster.REMARKS" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h2 class="panel-title text-success"><i class="fa fa-paw"></i> Dispatch Details</h2>
                    <div id="ItemAvailability"></div>
                    <hr/>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="display: contents;">

                    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="FSampleDespatchDetails.TRNS.BARCODE" class="control-label"></label>
                            <input asp-for="FSampleDespatchDetails.TRNS.BARCODE" class="form-control bg-dark text-white"/>
                            <span asp-validation-for="FSampleDespatchDetails.TRNS.BARCODE" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="FSampleDespatchDetails.TRNS.SITEM.NAME" class="control-label required"></label>
                            @Html.DropDownListFor(lc => lc.FSampleDespatchDetails.TRNSID, new SelectList(Model.ExtendFSampleGarmentRcvDs, "TRNSID", "ExsItem"), "Select an Item Name.", htmlAttributes: new {@class = "form-control js-example-basic-single"})
                            @Html.ValidationMessageFor(lc => lc.FSampleDespatchDetails.TRNSID, "", new {@class = "text-danger"})
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="FSampleDespatchDetails.U.UNAME" class="control-label required"></label>
                            @Html.DropDownListFor(lc => lc.FSampleDespatchDetails.UID, new SelectList(Model.FBasUnitses, "UID", "UNAME"), "Select an Unit.", htmlAttributes: new {@class = "form-control js-example-basic-single"})
                            @Html.ValidationMessageFor(lc => lc.FSampleDespatchDetails.UID, "", new {@class = "text-danger"})
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="FSampleDespatchDetails.BYER.BUYER_NAME" class="control-label required"></label>
                            @Html.DropDownListFor(lc => lc.FSampleDespatchDetails.BYERID, new SelectList(Model.BasBuyerinfos, "BUYERID", "BUYER_NAME"), "Select a Buyer.", htmlAttributes: new {@class = "form-control js-example-basic-single"})
                            @Html.ValidationMessageFor(lc => lc.FSampleDespatchDetails.BYERID, "", new {@class = "text-danger"})
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="FSampleDespatchDetails.ISSUE_PERSON" class="control-label"></label>
                            <input asp-for="FSampleDespatchDetails.ISSUE_PERSON" class="form-control"/>
                            <span asp-validation-for="FSampleDespatchDetails.ISSUE_PERSON" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="FSampleDespatchDetails.REQ_QTY" class="control-label"></label>
                            <input asp-for="FSampleDespatchDetails.REQ_QTY" class="form-control"/>
                            <span asp-validation-for="FSampleDespatchDetails.REQ_QTY" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="FSampleDespatchDetails.DEL_QTY" class="control-label"></label>
                            <input asp-for="FSampleDespatchDetails.DEL_QTY" class="form-control"/>
                            <span asp-validation-for="FSampleDespatchDetails.DEL_QTY" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="FSampleDespatchDetails.REMARKS" class="control-label"></label>
                            <input asp-for="FSampleDespatchDetails.REMARKS" class="form-control"/>
                            <span asp-validation-for="FSampleDespatchDetails.REMARKS" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <button class="btn btn-success pull-right" type="submit">Create</button>
                    <button id="btnAdd" class="btn btn-success pull-right" type="button">Add</button>
                    <a class="btn btn-dark pull-right" asp-action="GetFSampleDesPatchMaster">Back to List</a>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 table-responsive" id="FSampleDesPatchMaster"></div>
            </div>
        </div>
    </form>
</div>

@section Styles {
    <link href="~/css/CustomCSS/Stepper.css" rel="stylesheet" asp-append-version="true" />
}

@section Scripts {
    @{await Html.RenderPartialAsync($"_ValidationScriptPartial_Except_jQuery");}
    <script asp-append-version="true" src="~/js/custom-js/Stepper.js"></script>
    <script asp-append-version="true" src="~/js/FSampleDesPatchMaster/CreateFSampleDesPatchMaster.js"></script>
    <script asp-append-version="true" src="~/js/site-common.js"></script>
}
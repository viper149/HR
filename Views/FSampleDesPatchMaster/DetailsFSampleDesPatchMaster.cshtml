@model CreateFSampleDesPatchMasterViewModel

@{
    ViewData["Title"] = "Details Sample Garments Gate Pass";
    Layout = Layout;
}

@{
    if (Model != null)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="m-b-md">
                            <h2 class="text-white btn btn-info">@Html.DisplayNameFor(e => e.FSampleDespatchMaster.GPNO) : [ @Html.DisplayFor(e => e.FSampleDespatchMaster.GPNO) ]</h2>
                            <hr />
                        </div>
                    </div>
                </div>
                <div class="row details">
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="FSampleDespatchMaster.GPDATE" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.FSampleDespatchMaster.GPDATE)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="FSampleDespatchMaster.FSampleDespatchMasterType.TYPENAME" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.FSampleDespatchMaster.FSampleDespatchMasterType.TYPENAME)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="FSampleDespatchMaster.GPTYPE.GPTYPENAME" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.FSampleDespatchMaster.GPTYPE.GPTYPENAME)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="FSampleDespatchMaster.DR.DRIVER_NAME" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.FSampleDespatchMaster.DR.DRIVER_NAME)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="FSampleDespatchMaster.V.VNUMBER" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.FSampleDespatchMaster.V.VNUMBER)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="FSampleDespatchMaster.REMARKS" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.FSampleDespatchMaster.REMARKS)
                            </span>
                        </div>
                    </div>

                    @if (Model.FSampleDespatchDetailses.Any())
                    {
                        <div class="col-12 table-responsive">
                            <h2 class="panel-title text-success"><i class="fa fa-paw"></i>  Dispatch Details</h2>
                            <table class="table table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.FSampleDespatchDetails.TRNS.SITEM.NAME)</th>
                                        <th>@Html.DisplayNameFor(model => model.FSampleDespatchDetails.BYER.BUYER_NAME)</th>
                                        <th>@Html.DisplayNameFor(model => model.FSampleDespatchDetails.ISSUE_PERSON)</th>
                                        <th>@Html.DisplayNameFor(model => model.FSampleDespatchDetails.U.UNAME)</th>
                                        <th>@Html.DisplayNameFor(model => model.FSampleDespatchDetails.REQ_QTY)</th>
                                        <th>@Html.DisplayNameFor(model => model.FSampleDespatchDetails.DEL_QTY)</th>
                                        <th>@Html.DisplayNameFor(model => model.FSampleDespatchDetails.REMARKS)</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @{
                                        foreach (var item in Model.FSampleDespatchDetailses)
                                        {
                                            <tr>
                                                <td>@item.TRNS?.SITEM?.NAME</td>
                                                <td>@item.BYER?.BUYER_NAME</td>
                                                <td>@item.ISSUE_PERSON</td>
                                                <td>@item.U?.UNAME</td>
                                                <td>@item.REQ_QTY</td>
                                                <td>@item.DEL_QTY</td>
                                                <td>@item.REMARKS</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>

                <div class="col-md-12">
                    @{
                        if (!Model.IsLocked)
                        {
                            @Html.ActionLink("Edit", $"EditFSampleDesPatchMaster", new { dispatchId = Model.FSampleDespatchMaster.EncryptedId }, new { @class = "btn btn-warning pull-right mt-2" })
                        }
                    }
                    <a class="btn btn-dark pull-right mt-2" asp-action="GetFSampleDesPatchMaster" asp-controller="FSampleDesPatchMaster">Back to List</a>
                </div>
            </div>
        </div>
    }
}
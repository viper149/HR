
@model FFsFabricUPViewModel

@{
    ViewData["Title"] = "Fabric UP Information";
    ViewData["TitleDetails"] = "Details Of UP Information";
    Layout = Layout;
}


<h2><i class="fa fa-plus-circle fa-lg text-success" aria-hidden="true"></i>@ViewData["Title"]</h2>

<hr />
<div class="container-fluid">
    <form id="form" role="form" asp-action="CreateFFsFabricUP">
        <div class="panel panel-default">
            <div class="panel-body row">
                <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsUPMaster.UP_NO" class="control-label"></label>
                        <input asp-for="FFsUPMaster.UP_NO" class="form-control" />
                        <span asp-validation-for="FFsUPMaster.UP_NO" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsUPMaster.UP_DATE" class="control-label"></label>
                        <input asp-for="FFsUPMaster.UP_DATE" class="form-control" />
                        <span asp-validation-for="FFsUPMaster.UP_DATE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsUPMaster.UP_QTY" class="control-label"></label>
                        <input asp-for="FFsUPMaster.UP_QTY" class="form-control" />
                        <span asp-validation-for="FFsUPMaster.UP_QTY" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsUPMaster.TYPE" class="control-label"></label>
                        <select asp-for="FFsUPMaster.TYPE" class="form-select form-control">
                            <option selected>Select Type</option>
                            <option value="Fabric">Fabric</option>
                            <option value="Yarn">Yarn</option>
                        </select>
                        <span asp-validation-for="FFsUPMaster.TYPE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsUPMaster.REMARKS" class="control-label"></label>
                        <input asp-for="FFsUPMaster.REMARKS" class="form-control" />
                        <span asp-validation-for="FFsUPMaster.REMARKS" class="text-danger"></span>
                    </div>
                </div>

                <div class="pl-1 col-12">
                    <div>
                        <h2><i class="fa fa-info-circle fa-lg text-success" aria-hidden="true"></i>@ViewData["TitleDetails"]</h2>
                    </div>
                    <hr />
                </div>

                <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsFabricDetail.LC_ID" class="control-label"></label>
                        @Html.DropDownListFor(dt => dt.FFsFabricDetail.LC_ID, new SelectList(Model.ComExLCInfoList, "LCID", "LCNO"), "Select LC NO No.", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="FFsFabricDetail.LC_ID" class="text-danger"></span>
                    </div>
                </div>
                @*<div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
            <div class="form-group">
                <label class="control-label">LC Description</label>
                <span class="custom-form-control-bg form-control bg-e9ecef" id="lcDescription">
                </span>
            </div>
        </div>*@
                <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">Exp Date</label>
                        <span class="custom-form-control-bg form-control bg-e9ecef" id="expDate">
                        </span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">Party Name</label>
                        <span class="custom-form-control-bg form-control bg-e9ecef" id="partyName">
                        </span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">LC Qty</label>
                        <span class="custom-form-control-bg form-control bg-e9ecef" id="lcQty">
                        </span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsFabricDetail.REMARKS" class="control-label"></label>
                        <input asp-for="FFsFabricDetail.REMARKS" class="form-control" />
                        <span asp-validation-for="FFsFabricDetail.REMARKS" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12">
                    <button class="btn btn-success pull-right" type="submit" id="btn_submit">Create</button>
                    <button id="addToList" class="btn btn-success pull-right mr-2" type="button">Add</button>
                    <a asp-action="GetFFsFabricUP" class="btn btn-dark pull-right mr-2">Back to List</a>
                </div>
                @*<div id="ProgramSetDetails" class="col-12">
            @await Html.PartialAsync("~/Views/FFsFabricUP/AddFFsFabricUPList.cshtml", Model)
        </div>*@
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 table-responsive" id="fFsFabricUPDetailsAddItem"></div>

            </div>
        </div>

    </form>
</div>
@section Styles {
    <link asp-append-version="true" href="~/css/CustomCSS/Stepper.css" rel="stylesheet" />
}

@section Scripts {
    @{await Html.RenderPartialAsync($"_ValidationScriptPartial_Except_jQuery");}
    <script asp-append-version="true" src="~/js/custom-js/Stepper.js"></script>
    <script asp-append-version="true" src="~/js/site-common.js"></script>
    <script asp-append-version="true" src="~/js/FFsFabricUp/CreateFFsFabricUp.js"></script>
}
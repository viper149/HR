
@model LOOM_SETTING_STYLE_WISE_M

@{
    ViewData["Title"] = "Loom Setting";
    Layout = Layout;
}

@{
    <div class="x_panel">
        <div class="x_title">
            <h2>
                <i class="fa fa-list fa-lg text-info" aria-hidden="true"></i> Loom Setting <i class="fa fa-at text-info">(Style Wise)</i>
            </h2>
            <ul class="nav navbar-right panel_toolbox">
                <li class="mr-4">
                    <p>
                        <a asp-action="CreateLoomSetting" class="btn btn-primary">
                            <i class="fa fa-plus-circle" aria-hidden="true"></i> Add
                        </a>
                    </p>
                </li>
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content table-responsive">
            <table class="table" id="table">
                <thead>
                <tr>
                    <th>
                        @Html.HiddenFor(model => model.SETTING_ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FABCODE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LOOM_TYPE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RPM)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FILTER_VALUE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.REMARKS)
                    </th>
                    <th>Actions</th>
                </tr>
                </thead>
            </table>
        </div>
    </div>
}

@section Styles
{
    <link asp-append-version="true" href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

@section Scripts
{
    <script asp-append-version="true" src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script asp-append-version="true" src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script asp-append-version="true" src="~/js/loomSetting/GetLoomSettingInfoWithPaged.js"></script>
}

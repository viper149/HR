
@model FFsRollReceiveViewModel

@{
    ViewData["Title"] = "Roll Receive";
    Layout = Layout;
}

<h2><i class="fa fa-plus-circle fa-lg text-success" aria-hidden="true"></i> @ViewData["Title"]</h2>
<hr />

<div class="container-fluid">
    <div class="panel panel-default">
        <div class="panel-body row">
            <div class="col-3">
                <div class="form-group">
                    <strong>
                        <label asp-for="FFsFabricRcvMaster.RCVDATE" class="control-label"></label>
                    </strong>
                    <span class="custom-form-control form-control bg-e9ecef">
                        @Html.DisplayFor(model => model.FFsFabricRcvMaster.RCVDATE)
                    </span>
                </div>
            </div>
            <div class="col-3">
                <div class="form-group">
                    <strong>
                        <label asp-for="FFsFabricRcvMaster.SEC.SECNAME" class="control-label"></label>
                    </strong>
                    <span class="custom-form-control form-control bg-e9ecef">
                        @Html.DisplayFor(model => model.FFsFabricRcvMaster.SEC.SECNAME)
                    </span>
                </div>
            </div>
            <div class="col-3">
                <div class="form-group">
                    <strong>
                        <label asp-for="FFsFabricRcvMaster.REMARKS" class="control-label"></label>
                    </strong>
                    <span class="custom-form-control form-control bg-e9ecef">
                        @Html.DisplayFor(model => model.FFsFabricRcvMaster.REMARKS)
                    </span>
                </div>
            </div>

            <div class="col-12"  id="rollDetails">
                @await Html.PartialAsync($"~/Views/FFsRollReceive/RollDetailsList.cshtml",Model)
            </div>
        </div>
    </div>
</div>
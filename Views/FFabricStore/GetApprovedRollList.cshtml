@model F_FS_FABRIC_RCV_DETAILS
@{
    ViewData["Title"] = "Fabric Roll List";
    Layout = Layout;
}
@{
    <div class="x_panel">
        <div class="x_title">
            <h2>
                <i class="fa fa-list fa-lg text-info" aria-hidden="true"></i> Fabric Roll List
            </h2>
            <ul class="nav navbar-right panel_toolbox">
                <li class="mr-4">
                    <p>
                        @*<a asp-action="CreateRollReceive" class="btn btn-primary"><i class="fa fa-plus-circle" aria-hidden="true"></i> Add</a>*@
                    </p>
                </li>
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <table class="table" id="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.RCV.RCVDATE)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FABCODE)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SO_NO)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PO_NO)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ROLL_ID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.QTY_YARDS)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BALANCE_QTY)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.REMARKS)
                        </th>
                        <th>
                            @Html.DisplayName("Status")
                        </th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

}

@section Styles
{
    <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/lib/datatables/css/customerDatatable.css" rel="stylesheet" />
}

@section Scripts
{
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/datatables/js/customerDatatable.js"></script>

    <script>
        $(document).ready(function() {
            $('#table').dataTable({
                "searchPanes": true,
                "processing": true,
                "serverSide": true,
                "filter": true,
                "order": [[0, 'desc']],
                "pageLength": 25,
                "lengthMenu": [10, 25, 50, 100, 200, 500, 1000],
                "ajax": {
                    "async": "true",
                    "url": '@Url.Action("GetTableData", "FFabricStore")',
                    "type": "POST",
                    "datatype": "json"
                },
                "language": {
                    "searchPlaceholder": "Search for your desire results",
                    "search": '<i class="fa fa-2x fa-search" aria-hidden="true"></i>',
                    "emptyTable": '<h3>No data available</h3>',
                    "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                    "infoFiltered": "(filtered from _MAX_ total entries)",
                    "thousands": ",",
                    "processing": "<i class='fa fa-4x fa-spinner' aria-hidden='true'></i>",
                    "zeroRecords": "<h3>No matching records found</h3>",
                    "paginate": {
                        "first": "<i class='fa fa-angle-double-left' aria-hidden='true'></i>",
                        "last": "<i class='fa fa-angle-double-right' aria-hidden='true'></i>",
                        "next": "<i class='fa fa-angle-right' aria-hidden='true'></i>",
                        "previous": "<i class='fa fa-angle-left' aria-hidden='true'></i>"
                    },
                    "aria": {
                        "sortAscending": ": activate to sort column ascending",
                        "sortDescending": ": activate to sort column descending"
                    }
                },
                "columns": [
                    { "data": "rcv.rcvdate", "name": "RCV.RCVDATE", "autoWidth": true },
                    { "data": "fabcodeNavigation.stylE_NAME", "name": "FABCODE", "autoWidth": true },
                    { "data": "sO_NONavigation.sO_NO", "name": "SO_NO", "autoWidth": true },
                    { "data": "pO_NONavigation.pino", "name": "PO_NO", "autoWidth": true },
                    { "data": "rolL_.rollno", "name": "ROLL_ID", "autoWidth": true },
                    { "data": "qtY_YARDS", "name": "QTY_YARDS", "autoWidth": true },
                    { "data": "balancE_QTY", "name": "BALANCE_QTY", "autoWidth": true },
                    { "data": "rcv.remarks", "name": "REMARKS", "autoWidth": true },
                    {
                        "data": "opT1", "name": "OPT1", "autoWidth": true,
                        "render": function(data, type, row) {
                            if (data === "Approved") {
                                return "<span class='text-success'>" + data + "</span>";
                            } else if (data === "Rejected") {
                                return "<span class='text-danger'>" + data + "</span>";
                            } else {
                                return "<span class='text-warning'>" + data + "</span>";
                            }
                        }
                    }
                ]
            });
        });
    </script>
}
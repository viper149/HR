
@model AccExportDoMasterViewModel

@{
    ViewData["Title"] = "DO (Export)";
}

<div class="container-fluid">
    <h2><i class="fa fa-info-circle text-info" aria-hidden="true"></i> Details @ViewData["Title"]</h2>
    <hr />
    <div class="col-12 row">
        <div class="col-3">
            <div class="form-group">
                <label asp-for="ACC_EXPORT_DOMASTER.DODATE" class="control-label font-weight-bold"></label>
                <div class="form-control-dark">@Html.DisplayFor(model => model.ACC_EXPORT_DOMASTER.DODATE)</div>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <label asp-for="ACC_EXPORT_DOMASTER.DONO" class="control-label font-weight-bold"></label>
                <div class="form-control-dark">@Html.DisplayFor(model => model.ACC_EXPORT_DOMASTER.DONO)</div>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <label asp-for="ACC_EXPORT_DOMASTER.ComExLcInfo.LCNO" class="control-label font-weight-bold"></label>
                <div class="form-control-dark">@Html.DisplayFor(model => model.ACC_EXPORT_DOMASTER.ComExLcInfo.LCNO)</div>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <label asp-for="ACC_EXPORT_DOMASTER.ComExLcInfo.LCDATE" class="control-label font-weight-bold"></label>
                <div class="form-control-dark">@Html.DisplayFor(model => model.ACC_EXPORT_DOMASTER.ComExLcInfo.LCDATE)</div>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <label asp-for="ACC_EXPORT_DOMASTER.ComExLcInfo.FILENO" class="control-label font-weight-bold"></label>
                <div class="form-control-dark">@Html.DisplayFor(model => model.ACC_EXPORT_DOMASTER.ComExLcInfo.FILENO)</div>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <label asp-for="ACC_EXPORT_DOMASTER.ComExLcInfo.BUYER.BUYER_NAME" class="control-label font-weight-bold"></label>
                <div class="form-control-dark">@Html.DisplayFor(model => model.ACC_EXPORT_DOMASTER.ComExLcInfo.BUYER.BUYER_NAME)</div>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <label asp-for="ACC_EXPORT_DOMASTER.ComExLcInfo.BUYER.ADDRESS" class="control-label font-weight-bold"></label>
                <div class="form-control-dark">@Html.DisplayFor(model => model.ACC_EXPORT_DOMASTER.ComExLcInfo.BUYER.ADDRESS)</div>
            </div>
        </div>

        <div class="col-12">
            <h2 class="panel-title text-success"><i class="fa fa-user"></i> Audit Information</h2>
            <hr />
        </div>

        <div class="col-3">
            <div class="form-group">
                <label asp-for="ACC_EXPORT_DOMASTER.AUDITON" class="control-label font-weight-bold"></label>
                <div class="form-control-dark">@Html.DisplayFor(model => model.ACC_EXPORT_DOMASTER.AUDITON)</div>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <label asp-for="ACC_EXPORT_DOMASTER.AUDITBY" class="control-label font-weight-bold"></label>
                <div class="form-control-dark">@Html.DisplayFor(model => model.ACC_EXPORT_DOMASTER.AUDITBY)</div>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <label asp-for="ACC_EXPORT_DOMASTER.COMMENTS" class="control-label font-weight-bold"></label>
                <div class="form-control-dark">@Html.DisplayFor(model => model.ACC_EXPORT_DOMASTER.COMMENTS)</div>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <label asp-for="ACC_EXPORT_DOMASTER.IS_CANCELLED" class="control-label font-weight-bold"></label>
                <div class="form-control-dark">@(Model.ACC_EXPORT_DOMASTER.IS_CANCELLED ? "Yes" : "No")</div>
            </div>
        </div>

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 table-responsive table-hover" id="doDetails">
            @await Html.PartialAsync($"~/Views/AccExportDoMaster/DetailsAccDoMasterTable.cshtml", Model)
        </div>

    </div>


    <div class="pull-right">
        <a asp-action="GetAccDoMasterWithPaged" class="btn btn-dark">Back to List</a>
        @if (!User.IsInRole("Audit"))
        {
            <button class="btn btn-warning pull-right" type="submit">Update</button>
            <button id="btnAdd" class="btn btn-success pull-right mr-2" type="button" accesskey="a">Add</button>
        }
        @if (User.IsInRole("Audit") || Model.ACC_EXPORT_DOMASTER.COMMENTS == null || !Model.ACC_EXPORT_DOMASTER.IS_CANCELLED)
        {
            @Html.ActionLink("Edit", $"EditAccDoMaster", new { trnsId = Model.ACC_EXPORT_DOMASTER.EncryptedId }, new { @class = "btn btn-warning" })
        }
    </div>
</div>
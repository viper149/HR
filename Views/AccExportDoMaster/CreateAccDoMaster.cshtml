
@model AccExportDoMasterViewModel

@{
    ViewData["Title"] = "Account Export DO Information";
}


<div class="container-fluid">
    <h2><i class="fa fa-plus-circle text-success" aria-hidden="true"></i> Create @ViewData["Title"]</h2>
    <form id="form" role="form" asp-action="CreateAccDoMaster">
        <div class="panel panel-default">
            <div class="panel-body row">
                <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="ACC_EXPORT_DOMASTER.DODATE" class="control-label"></label>
                        <input asp-for="ACC_EXPORT_DOMASTER.DODATE" type="date" class="form-control" />
                        <span asp-validation-for="ACC_EXPORT_DOMASTER.DODATE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="ACC_EXPORT_DOMASTER.DONO" class="control-label"></label>
                        <input asp-for="ACC_EXPORT_DOMASTER.DONO" class="form-control" id="doNo" readonly />
                        <span asp-validation-for="ACC_EXPORT_DOMASTER.DONO" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="ACC_EXPORT_DOMASTER.REMARKS" class="control-label"></label>
                        <input asp-for="ACC_EXPORT_DOMASTER.REMARKS" class="form-control" />
                        <span asp-validation-for="ACC_EXPORT_DOMASTER.REMARKS" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h2 class="panel-title text-success"><i class="fa fa-file-text-o"></i> For L/C</h2>
                    <hr />
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="ACC_EXPORT_DOMASTER.LCID" class="control-label"></label>
                        @Html.DropDownListFor(dt => dt.ACC_EXPORT_DOMASTER.LCID, new SelectList(Model.cOM_EX_LCINFOs, "LCID", "LCNO"), "Select L/C No", htmlAttributes: new { @class = "form-control js-example-basic-single", @id = "lcNo" })
                        <span asp-validation-for="ACC_EXPORT_DOMASTER.LCID" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">L/C Date</label>
                        <span class="custom-form-control-bg form-control bg-e9ecef" id="lcDate">
                        </span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">L/C File No</label>
                        <span class="custom-form-control-bg form-control bg-e9ecef" id="lcFile">
                        </span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">Buyer</label>
                        <span class="custom-form-control-bg form-control bg-e9ecef" id="buyer">
                        </span>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">Address</label>
                        <span class="custom-form-control-bg form-control bg-e9ecef" id="address">
                        </span>
                    </div>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h2 class="panel-title text-success"><i class="fa fa-paint-brush"></i> Style Information</h2>
                    <hr />
                </div>
                <div class="col-lg-4 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="ACC_EXPORT_DODETAILS.STYLEID" class="control-label"></label>
                        <select asp-for="ACC_EXPORT_DODETAILS.STYLEID" class="form-control js-example-basic-single">
                            <option value="">Select Style Name</option>
                        </select>
                        <span asp-validation-for="ACC_EXPORT_DODETAILS.STYLEID" class="text-danger"></span>
                    </div>
                </div>
                @Html.HiddenFor(modelItem => Model.ACC_EXPORT_DODETAILS.PIID)
                <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">PI No.</label>
                        <span class="custom-form-control-bg form-control bg-e9ecef" id="piNo">
                        </span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="ACC_EXPORT_DODETAILS.QTY" class="control-label"></label>
                        <input asp-for="ACC_EXPORT_DODETAILS.QTY" class="form-control" readonly id="qty" />
                        <span asp-validation-for="ACC_EXPORT_DODETAILS.QTY" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="ACC_EXPORT_DODETAILS.RATE" class="control-label"></label>
                        <input asp-for="ACC_EXPORT_DODETAILS.RATE" class="form-control" readonly id="rate" />
                        <span asp-validation-for="ACC_EXPORT_DODETAILS.RATE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="ACC_EXPORT_DODETAILS.AMOUNT" class="control-label"></label>
                        <input asp-for="ACC_EXPORT_DODETAILS.AMOUNT" class="form-control" readonly id="amount" />
                        <span asp-validation-for="ACC_EXPORT_DODETAILS.AMOUNT" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="ACC_EXPORT_DODETAILS.REMARKS" class="control-label"></label>
                        <input asp-for="ACC_EXPORT_DODETAILS.REMARKS" class="form-control" id="remarks" />
                        <span asp-validation-for="ACC_EXPORT_DODETAILS.REMARKS" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <button class="btn btn-success pull-right" type="submit">Create</button>
                    <button id="btnAdd" class="btn btn-success pull-right mr-2" type="button" accesskey="a">Add</button>
                    <a asp-action="GetAccDoMasterWithPaged" class="btn btn-dark pull-right">Back to List</a>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 table-responsive table-hover" id="doDetails"></div>

            </div>
        </div>
    </form>
</div>

@section Styles {
    <link href="~/css/CustomCSS/Stepper.css" rel="stylesheet" asp-append-version="true" />
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptPartial_Except_jQuery");}
    <script src="~/js/custom-js/Stepper.js" asp-append-version="true"></script>
    <script asp-append-version="true" src="~/js/AccExportDoMaster/CreateAccExportDoMaster.js"></script>
}
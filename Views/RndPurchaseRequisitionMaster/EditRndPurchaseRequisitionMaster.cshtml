                    <label asp-for="RndPurchaseRequisitionMaster.ORDER_NO" class="control-label"></label>
                    @Html.DropDownListFor(dt => dt.RndPurchaseRequisitionMaster.ORDER_NO, new SelectList(Model.PoList, "POID", "OPT1"), "Select Order No.", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                    <span asp-validation-for="RndPurchaseRequisitionMaster.ORDER_NO" class="text-danger"></span>
                </div>
            </div>
            @* } *@

            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">

                                @Html.DisplayFor(modelItem => Model.RndPurchaseRequisitionMaster.ORDERNO_SNavigation.SDRF_NO)
                            </span>
                        </div>
                    </div>

                    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">@Html.DisplayNameFor(modelItem => Model.RndPurchaseRequisitionMaster.COSTREF.CSID)</label>
                            <span class="custom-form-control-bg form-control bg-e9ecef">
                                @Html.DisplayFor(modelItem => Model.RndPurchaseRequisitionMaster.COSTREF.CSID)
                            </span>
                        </div>
                    </div>

                }

                if (Model.RndPurchaseRequisitionMaster.ORDER_NO != null)
                {
                    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">@Html.DisplayNameFor(modelItem => Model.RndPurchaseRequisitionMaster.YARN_FOR)</label>
                            <span class="custom-form-control-bg form-control bg-e9ecef">
                                @Html.DisplayFor(modelItem => Model.RndPurchaseRequisitionMaster.YARN_FOR)
                            </span>
                        </div>
                    </div>

                    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">@Html.DisplayNameFor(modelItem => Model.RndPurchaseRequisitionMaster.ORDER_NONavigation.SO.SO_NO)</label>
                            <span class="custom-form-control-bg form-control bg-e9ecef">
                                @Html.DisplayFor(modelItem => Model.RndPurchaseRequisitionMaster.ORDER_NONavigation.SO.SO_NO)
                            </span>
                        </div>
                    </div>

                    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">@Html.DisplayNameFor(modelItem => Model.RndPurchaseRequisitionMaster.COSTREF.CSID)</label>
                            <span class="custom-form-control-bg form-control bg-e9ecef">
                                @Html.DisplayFor(modelItem => Model.RndPurchaseRequisitionMaster.COSTREF.CSID)
                            </span>
                        </div>
                    </div>
                }

                if (Model.RndPurchaseRequisitionMaster.BUYERID != null && Model.RndPurchaseRequisitionMaster.ORDERNO_S != null)
                {

                    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">@Html.DisplayNameFor(modelItem => Model.RndPurchaseRequisitionMaster.YARN_FOR)</label>
                            <span class="custom-form-control-bg form-control bg-e9ecef">
                                @Html.DisplayFor(modelItem => Model.RndPurchaseRequisitionMaster.YARN_FOR)
                            </span>
                        </div>
                    </div>

                    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">@Html.DisplayNameFor(modelItem => Model.RndPurchaseRequisitionMaster.BasBuyerinfo.BUYER_NAME)</label>
                            <span class="custom-form-control-bg form-control bg-e9ecef">
                                @Html.DisplayFor(modelItem => Model.RndPurchaseRequisitionMaster.BasBuyerinfo.BUYER_NAME)
                            </span>
                        </div>
                    </div>

                    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">@Html.DisplayNameFor(modelItem => Model.RndPurchaseRequisitionMaster.COSTREF.CSID)</label>
                            <span class="custom-form-control-bg form-control bg-e9ecef">
                                @Html.DisplayFor(modelItem => Model.RndPurchaseRequisitionMaster.COSTREF.CSID)
                            </span>
                        </div>
                    </div>
                }
            }

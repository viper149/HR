                        <div class="form-group">
                            <label class="control-label">@Html.DisplayNameFor(modelItem => Model.RndPurchaseRequisitionMaster.YARN_FOR)</label>
                            <span class="custom-form-control-bg form-control bg-e9ecef">
                                @Html.DisplayFor(modelItem => Model.RndPurchaseRequisitionMaster.YARN_FOR)

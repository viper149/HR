                        @Model.RndFabricCountInfos.Where(c => c.YARNFOR.Equals(1)).ToList()[i].DESCRIPTION
                    </td>
                    <td>
                        @Html.HiddenFor(c => c.RndFabricCountInfos.Where(e => e.YARNFOR.Equals(1)).ToList()[i].COLORCODE)
                        @Model.RndFabricCountInfos.Where(c => c.YARNFOR.Equals(1)).ToList()[i].Color?.COLOR
                    </td>
                    <td>
                        @Html.HiddenFor(c => c.RndFabricCountInfos.Where(e => e.YARNFOR.Equals(1)).ToList()[i].LOTID)
                        @Model.RndFabricCountInfos.Where(c => c.YARNFOR.Equals(1)).ToList()[i].LOT?.LOTNO
                    </td>
                    <td>
                        @Html.HiddenFor(c => c.RndFabricCountInfos.Where(e => e.YARNFOR.Equals(1)).ToList()[i].SUPPID)
                        @Model.RndFabricCountInfos.Where(c => c.YARNFOR.Equals(1)).ToList()[i].SUPP?.SUPPNAME
                    </td>
                    <td>
                        @Html.HiddenFor(c => c.RndFabricCountInfos.Where(e => e.YARNFOR.Equals(1)).ToList()[i].RATIO)
                        @Model.RndFabricCountInfos.Where(c => c.YARNFOR.Equals(1)).ToList()[i].RATIO
                    </td>
                    <td>
                        @Html.HiddenFor(c => c.RndFabricCountInfos.Where(e => e.YARNFOR.Equals(1)).ToList()[i].NE)
                        @Model.RndFabricCountInfos.Where(c => c.YARNFOR.Equals(1)).ToList()[i].NE
                    </td>
                    <td>
                        @Html.HiddenFor(c => c.RndFabricCountInfos.Where(e => e.YARNFOR.Equals(1)).ToList()[i].AMOUNT)
                        @Model.RndFabricCountInfos.Where(c => c.YARNFOR.Equals(1)).ToList()[i].AMOUNT
                    </td>
                    <td>
                        @Html.HiddenFor(c => c.RndFabricCountInfos.Where(e => e.YARNFOR.Equals(1)).ToList()[i].YARNTYPE)
                        @Model.RndFabricCountInfos.Where(c => c.YARNFOR.Equals(1)).ToList()[i].YARNTYPE
                    </td>
                    <td>
                        @Html.HiddenFor(c => c.RndFabricCountInfos.Where(e => e.YARNFOR.Equals(1)).ToList()[i].YARNFOR)
                        @Model.RndFabricCountInfos.Where(c => c.YARNFOR.Equals(1)).ToList()[i].YarnFor?.YARNNAME
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>Not found...</p>
    }


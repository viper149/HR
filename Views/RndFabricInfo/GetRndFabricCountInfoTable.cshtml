                    <th>@Html.DisplayNameFor(e => e.RndFabricCountInfos.FirstOrDefault().YarnFor.YARNNAME)</th>
                </tr>
            </thead>
            <tbody>
            
            @for (var i = 0; i < Model.RndFabricCountInfos.Count(c => c.YARNFOR.Equals(1)); i++)
            {
                <tr>
                    <td>
                        @Html.HiddenFor(c => c.RndFabricCountInfos.Where(e => e.YARNFOR.Equals(1)).ToList()[i].COUNTID)

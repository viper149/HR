
@model FGenSRequisitionViewModel

@{
    ViewData["Title"] = "General Store Indent";
}

<h2><i class="fa fa-edit text-warning" aria-hidden="true"></i> Update @ViewData["Title"]</h2>

<div class="container-fluid">
    <form asp-action="EditFGenSIndent" enctype="multipart/form-data" id="form" role="form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="panel-body row">

            @Html.HiddenFor(e => e.FGenSIndentmaster.GINDID)
            @Html.HiddenFor(e => e.FGenSIndentmaster.EncryptedId)

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 p-0 d-none">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 pull-left">
                    <h2 class="panel-title text-success"><i class="fa fa-american-sign-language-interpreting" aria-hidden="true"></i> Indent Information</h2>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 pull-right">
                    <div class="custom-control custom-switch float-right">
                        <input asp-for="FGenSIndentmaster.STATUS" class="custom-control-input" type="checkbox">
                        <label asp-for="FGenSIndentmaster.STATUS" class="custom-control-label pt-1"></label>
                    </div>
                </div>
            </div>

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <hr />
            </div>

            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FGenSIndentmaster.GINDNO" class="control-label"></label>
                    <input asp-for="FGenSIndentmaster.GINDNO" class="form-control" readonly="" />
                    <span asp-validation-for="FGenSIndentmaster.GINDNO" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FGenSIndentmaster.GINDDATE" class="control-label"></label>
                    <input asp-for="FGenSIndentmaster.GINDDATE" class="form-control" />
                    <span asp-validation-for="FGenSIndentmaster.GINDDATE" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FGenSIndentmaster.INDSL.INDSLID" class="control-label"></label>
                    @Html.DropDownListFor(dt => dt.FGenSIndentmaster.INDSLID, new SelectList(Model.FGenSPurchaseRequisitionMastersList, "INDSLID", "INDSLID"),
                        "Select Requisition No.", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                    <span asp-validation-for="FGenSIndentmaster.INDSLID" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FGenSIndentmaster.INDTYPE" class="control-label"></label>
                    @Html.DropDownListFor(dt => dt.FGenSIndentmaster.INDTYPE, new SelectList(Model.FGenSIndentTypes, "INDENTID", "INDENTTYPE"),
                        "Select Indent Type", new { @class = "form-control js-example-basic-single" })
                    <span asp-validation-for="FGenSIndentmaster.INDTYPE" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FGenSIndentmaster.REMARKS" class="control-label"></label>
                    <input asp-for="FGenSIndentmaster.REMARKS" class="form-control" />
                    <span asp-validation-for="FGenSIndentmaster.REMARKS" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
                <div class="form-group">
                    <label class="control-label">Indent By</label>
                    <span class="custom-form-control-bg form-control bg-e9ecef" id="FGenSIndentmaster_CN_PERSON">
                    </span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
                <div class="form-group">
                    <label class="control-label">Indent To</label>
                    <span class="custom-form-control-bg form-control bg-e9ecef" id="FGenSIndentmaster_EMP">
                    </span>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 d-none">
                <div class="form-group">
                    <label class="control-label">Department (Section)</label>
                    <span class="custom-form-control-bg form-control bg-e9ecef" id="FGenSIndentmaster_DEPT_SEC">
                    </span>
                </div>
            </div>

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h2 class="panel-title text-success"><i class="fa fa-eye" aria-hidden="true"></i> Indent Details</h2>
                <hr />
            </div>

            @Html.HiddenFor(c => c.FGenSIndentdetails.TRNSID)
            @Html.HiddenFor(c => c.FGenSIndentdetails.INDSLID)
            @Html.HiddenFor(c => c.FGenSIndentdetails.GINDID)

            @*<div class="col-2">
                    <div class="form-group">
                        <label asp-for="FGenSIndentdetails.PRODUCTID" class="control-label"></label>
                        @Html.DropDownListFor(dt => dt.FGenSIndentdetails.PRODUCTID, new SelectList(Model.FGsProductInformationsList, "PRODID", "PRODNAME"), "Select Product", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="FGenSIndentdetails.PRODUCTID" class="text-danger"></span>
                    </div>
                </div>*@


            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FGenSIndentdetails.PRODUCTID" class="control-label"></label>
                    <select asp-for="FGenSIndentdetails.PRODUCTID" class="form-control js-example-basic-single">
                        <option value="">Select Product</option>
                    </select>
                    <span asp-validation-for="FGenSIndentdetails.PRODUCTID" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
                <div class="form-group">
                    <label class="control-label">Unit</label>
                    <span class="custom-form-control-bg form-control bg-e9ecef" id="unit">
                    </span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FGenSIndentdetails.QTY" class="control-label"></label>
                    <input asp-for="FGenSIndentdetails.QTY" class="form-control" readonly="readonly" />
                    <span asp-validation-for="FGenSIndentdetails.QTY" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FGenSIndentdetails.VALIDITY" class="control-label"></label>
                    <input asp-for="FGenSIndentdetails.VALIDITY" class="form-control" />
                    <span asp-validation-for="FGenSIndentdetails.VALIDITY" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FGenSIndentdetails.FULL_QTY" class="control-label"></label>
                    <input asp-for="FGenSIndentdetails.FULL_QTY" class="form-control" />
                    <span asp-validation-for="FGenSIndentdetails.FULL_QTY" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FGenSIndentdetails.ADD_QTY" class="control-label"></label>
                    <input asp-for="FGenSIndentdetails.ADD_QTY" class="form-control" />
                    <span asp-validation-for="FGenSIndentdetails.ADD_QTY" class="text-danger"></span>
                </div>
            </div>
            @*<div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FGenSIndentdetails.BAL_QTY" class="control-label"></label>
                        <input asp-for="FGenSIndentdetails.BAL_QTY" class="form-control" />
                        <span asp-validation-for="FGenSIndentdetails.BAL_QTY" class="text-danger"></span>
                    </div>
                </div>*@
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FGenSIndentdetails.LOCATION" class="control-label"></label>
                    <input asp-for="FGenSIndentdetails.LOCATION" class="form-control" />
                    <span asp-validation-for="FGenSIndentdetails.LOCATION" class="text-danger"></span>
                </div>
            </div>
            @*<div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">Last Indent No.</label>
                        <span class="custom-form-control-bg form-control bg-e9ecef" id="FGenSIndentdetails_LASTIND">
                        </span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">Last Indent Date</label>
                        <span class="custom-form-control-bg form-control bg-e9ecef" id="FGenSIndentdetails_LASTIND_DATE">
                        </span>
                    </div>
                </div>*@
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FGenSIndentdetails.REMARKS" class="control-label"></label>
                    <input asp-for="FGenSIndentdetails.REMARKS" class="form-control" />
                    <span asp-validation-for="FGenSIndentdetails.REMARKS" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <button id="btn_submit" class="btn btn-info nextBtn pull-right" type="submit">Create</button>
                <button id="btnAdd" class="btn btn-success pull-right" type="button">Add</button>
                <a asp-action="GetFGenSIndent" class="btn btn-dark pull-right">Back to List</a>
            </div>

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 table-responsive table-hover" id="chemicalDetailsTable">
                @await Html.PartialAsync($"~/Views/FGenSIndent/FGenSDetailsPartialView.cshtml", Model)
            </div>
        </div>
    </form>
</div>

@section Styles {
    <link asp-append-version="true" href="~/css/CustomCSS/Stepper.css" rel="stylesheet" />
}

@section Scripts {
    @{await Html.RenderPartialAsync($"_ValidationScriptPartial_Except_jQuery");}
    <script asp-append-version="true" src="~/js/custom-js/Stepper.js"></script>
    <script asp-append-version="true" src="~/js/site-common.js"></script>
    <script asp-append-version="true" src="~/js/GeneralStore/Indent/CreateFGenSIndent.js"></script>
}

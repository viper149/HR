@model COM_TRADE_TERMS
@{
    ViewData["Title"] = "Edit Trade Terms";
    Layout = Layout;
}

<h2><i class="fa fa-edit fa-lg text-warning" aria-hidden="true"></i> Update Trade Terms</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditTradeTerms">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @Html.HiddenFor(c => c.TTID)
            @Html.HiddenFor(c => c.EncryptedId)

            <div class="form-group">
                <label asp-for="TRADE_TERMS" class="control-label"></label>
                <input asp-for="TRADE_TERMS" class="form-control" />
                <span asp-validation-for="TRADE_TERMS" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ISACTIVE" class="control-label"></label>
                <div class="form-control custom-form-control">
                    <label class="switch">
                        <input asp-for="ISACTIVE" />
                        <span class="slider round"></span>
                        <span class="absolute-no">NO</span>
                    </label>
                </div>
                <span asp-validation-for="ISACTIVE" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="REMARKS" class="control-label"></label>
                <input asp-for="REMARKS" class="form-control" />
                <span asp-validation-for="REMARKS" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="GetComTradeTerms" class="btn btn-dark">Back to List</a>
                <input type="submit" value="Update" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>
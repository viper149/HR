@model FFsWastageIssueViewModel

@{
    ViewData["Title"] = "Fabric Wastage Issue Information";
    Layout = Layout;
}

<h5><i class="fa fa-edit text-warning" aria-hidden="true"></i> <ins> Update @ViewData["Title"]</ins></h5>
<div class="container-fluid">
    <form id="form" role="form" asp-action="EditFFsWastageIssueInfo">
        <div class="panel-body row">
            @Html.HiddenFor(d => d.FFsWastageIssueM.EncryptedId)

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsWastageIssueM.WIDATE" class="control-label"></label>
                        <input asp-for="FFsWastageIssueM.WIDATE" type="date" class="form-control" id="datePick" />
                        <span asp-validation-for="FFsWastageIssueM.WIDATE" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsWastageIssueM.PID" class="control-label"></label>
                        @Html.DropDownListFor(c => c.FFsWastageIssueM.PID, new SelectList(Model.FFsWastagePartyList, "PID", "PNAME"), "Select Party Name", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="FFsWastageIssueM.PID" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsWastageIssueM.GPNO" class="control-label"></label>
                        <input asp-for="FFsWastageIssueM.GPNO" class="form-control" />
                        <span asp-validation-for="FFsWastageIssueM.GPNO" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsWastageIssueM.GPDATE" class="control-label"></label>
                        <input asp-for="FFsWastageIssueM.GPDATE" type="date" class="form-control" id="datePick" />
                        <span asp-validation-for="FFsWastageIssueM.GPDATE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsWastageIssueM.VEHICLENO" class="control-label"></label>
                        <input asp-for="FFsWastageIssueM.VEHICLENO" class="form-control" />
                        <span asp-validation-for="FFsWastageIssueM.VEHICLENO" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsWastageIssueM.THROUGH" class="control-label"></label>
                        <input asp-for="FFsWastageIssueM.THROUGH" class="form-control" />
                        <span asp-validation-for="FFsWastageIssueM.THROUGH" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsWastageIssueM.REMARKS" class="control-label"></label>
                        <input asp-for="FFsWastageIssueM.REMARKS" class="form-control" />
                        <span asp-validation-for="FFsWastageIssueM.REMARKS" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h2 class="panel-title text-success"><i class="fa fa-adjust" aria-hidden="true"></i>Fabric Wastage Issue Details</h2>
                    <hr />
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsWastageIssueD.WPID" class="control-label"></label>
                        @Html.DropDownListFor(c => c.FFsWastageIssueD.WPID, new SelectList(Model.FWasteProductList, "WPID", "PRODUCT_NAME"), "Select Product", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="FFsWastageIssueD.WPID" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">Unit </label>
                        <span class="custom-form-control-bg form-control bg-e9ecef" id="unitId">
                        </span>
                    </div>
                </div>

                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsWastageIssueD.TRNSDATE" class="control-label"></label>
                        <input asp-for="FFsWastageIssueD.TRNSDATE" type="date" class="form-control" id="datePick" />
                        <span asp-validation-for="FFsWastageIssueD.TRNSDATE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsWastageIssueD.ISSUE_QTY" class="control-label"></label>
                        <input asp-for="FFsWastageIssueD.ISSUE_QTY" class="form-control" />
                        <span asp-validation-for="FFsWastageIssueD.ISSUE_QTY" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsWastageIssueD.REMARKS" class="control-label"></label>
                        <input asp-for="FFsWastageIssueD.REMARKS" class="form-control" />
                        <span asp-validation-for="FFsWastageIssueD.REMARKS" class="text-danger"></span>
                    </div>
                </div>

            </div>




            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 row" id="AttachTo">

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <button asp-action="EditFFsWastageIssueInfo" id="editBtn" class="btn btn-success nextBtn pull-right" type="submit">Update</button>
                    <button id="addToListBtn" class="btn btn-info pull-right mr-2" type="button">Add to List</button>
                    <a asp-action="GetFFsWastageIssueInfo" class="btn btn-dark pull-right">Back to List</a>

                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 table-hover table-responsive" id="FFsWastageIssueTable">
                @await Html.PartialAsync($"~/Views/FFsWastageIssue/FFsWastageIssuePartialView.cshtml", Model)
            </div>
        </div>

    </form>
</div>

@section Styles {
    <link asp-append-version="true" href="~/css/CustomCSS/Stepper.css" rel="stylesheet" />

}

@section Scripts {
    @{await Html.RenderPartialAsync($"_ValidationScriptPartial_Except_jQuery");}
    <script asp-append-version="true" src="~/js/custom-js/Stepper.js"></script>
    <script asp-append-version="true" src="~/js/site-common.js"></script>
    <script asp-append-version="true" src="~/js/FFsWastageIssue/CreateFFsWastageIssueInfo.js"></script>
}


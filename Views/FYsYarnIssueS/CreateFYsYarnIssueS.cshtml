
@model FYsYarnIssueSViewModel

@{
    ViewData["Title"] = "Yarn Issue Information (Sample)";
    Layout = Layout;
}

<h2><i class="fa fa-plus-circle text-success" aria-hidden="true"></i> Create @ViewData["Title"]</h2>

<div class="container-fluid">
    <form id="form" enctype="multipart/form-data" role="form" asp-action="PostCreateFYsYarnIssueS">
        <div class="panel panel-default">
            <div class="panel-body row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h2 class="panel-title text-success"><i class="fa fa-hourglass-half" aria-hidden="true"></i>Create @ViewData["Title"]</h2>
                    <hr />
                </div>
                <div id="ysrdate" class="col-lg-2 col-md-3 col-sm-6 col-xs-12 d-none">
                    <div class="form-group">
                        <label asp-for="FYarnReqMasterS.YSRDATE" class="control-label"></label>
                        <input asp-for="FYarnReqMasterS.YSRDATE" class="form-control" />
                        <span asp-validation-for="FYarnReqMasterS.YSRDATE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="YarnIssueMasterS.YISSUEDATE" class="control-label"></label>
                        <input asp-for="YarnIssueMasterS.YISSUEDATE" class="form-control " />
                        <span asp-validation-for="YarnIssueMasterS.YISSUEDATE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="YarnIssueMasterS.ISSUEID" class="control-label"></label>
                        @Html.DropDownListFor(dt => dt.YarnIssueMasterS.ISSUEID, new SelectList(Model.IssueTypeList, "ISSUID", "ISSUTYPE"), "Select Issue Type", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="YarnIssueMasterS.ISSUEID" class="text-danger"></span>
                    </div>
                </div>
                <div id="yarnReqDD" class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label asp-for="YarnIssueMasterS.YSRID" class="control-label"></label>
                        <select asp-for="YarnIssueMasterS.YSRID" class="form-control js-example-basic-single">
                            <option value="">Select Requirement No.</option>
                        </select>
                        <span asp-validation-for="YarnIssueMasterS.YSRID" class="text-danger"></span>
                    </div>
                </div>
                <div id="issuetoDev" class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="YarnIssueMasterS.ISSUETO" class="control-label"></label>
                        <input asp-for="YarnIssueMasterS.ISSUETO" class="form-control " />
                        <span asp-validation-for="YarnIssueMasterS.ISSUETO" class="text-danger"></span>
                    </div>
                </div>
                <div id="purposeDEV" class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="YarnIssueMasterS.PURPOSE" class="control-label"></label>
                        <input asp-for="YarnIssueMasterS.PURPOSE" class="form-control " />
                        <span asp-validation-for="YarnIssueMasterS.PURPOSE" class="text-danger"></span>
                    </div>
                </div>
                <div id="isreturnableDev" class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="YarnIssueMasterS.ISREMARKABLE" class="control-label"></label>
                        <select class="form-control js-example-basic-single" asp-for="YarnIssueMasterS.ISREMARKABLE">
                            <option value="">Select Return Type-</option>
                            <option value="true">Yes</option>
                            <option value="false">No</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="YarnIssueMasterS.REMARKS" class="control-label"></label>
                        <input asp-for="YarnIssueMasterS.REMARKS" class="form-control " />
                        <span asp-validation-for="YarnIssueMasterS.REMARKS" class="text-danger"></span>
                    </div>
                </div>
                <hr />
                <table class="table">
                    <thead>
                        <tr>
                            <th>Order No</th>
                            <th>Count Name</th>
                            <th>R&D Count Name</th>
                            <th>Required Qty</th>
                        </tr>
                    </thead>
                    <tbody id="countlist">
                    </tbody>
                </table>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h2 class="panel-title text-success"><i class="fa fa-eye"></i> @ViewData["Title"] Details</h2>
                    <hr />
                </div>
                @Html.HiddenFor(c => c.YarnIssueDetailsS.REQ_DET_ID)
                @Html.HiddenFor(c => c.YarnIssueDetailsS.TRNSDATE)

                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="YarnIssueDetailsS.MAIN_COUNTID" class="control-label"></label>
                        @Html.DropDownListFor(dt => dt.YarnIssueDetailsS.MAIN_COUNTID, new SelectList(Model.CountNameList, "COUNTID", "COUNTNAME"), "Select Ref. Count", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="YarnIssueDetailsS.MAIN_COUNTID" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="YarnIssueDetailsS.COUNT.COUNTNAME" class="control-label"></label>
                        @Html.DropDownListFor(dt => dt.YarnIssueDetailsS.COUNTID, new SelectList(Model.CountNameList, "COUNTID", "COUNTNAME"), "Select Count", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="YarnIssueDetailsS.COUNTID" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="YarnIssueDetailsS.LOT.LOTNO" class="control-label"></label>
                        <select asp-for="YarnIssueDetailsS.LOTID" class="form-control js-example-basic-single">
                            <option value="">Select Lot</option>
                        </select>
                        <span asp-validation-for="YarnIssueDetailsS.LOTID" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="YarnIssueDetailsS.LOCATION.LOCNAME" class="control-label"></label>
                        @Html.DropDownListFor(dt => dt.YarnIssueDetailsS.LOCATIONID, new SelectList(Model.FYsLocationList, "LOCID", "LOCNAME"), "Select Location", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="YarnIssueDetailsS.LOCATIONID" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="YarnIssueDetailsS.UNIT" class="control-label"></label>
                        @Html.DropDownListFor(dt => dt.YarnIssueDetailsS.UNIT, new SelectList(Model.BasUnits, "UID", "UNAME", Model.BasUnits.FirstOrDefault().UID), "Select An Unit", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="YarnIssueDetailsS.UNIT" class="text-danger"></span>
                    </div>
                </div>
                <div id="reqQtyDiv" class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="YarnIssueDetailsS.TRANS.REQ_QTY" class="control-label"></label>
                        <input asp-for="YarnIssueDetailsS.TRANS.REQ_QTY" class="form-control " readonly="" />
                        <span asp-validation-for="YarnIssueDetailsS.TRANS.REQ_QTY" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="YarnIssueDetailsS.RCVDID" class="control-label"></label>
                        @Html.DropDownListFor(dt => dt.YarnIssueDetailsS.RCVDID, new SelectList(Model.FYsYarnReceiveDetailsList, "TRNSID", "YRCV.CHALLANNO"), "Select Challan", new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="YarnIssueDetailsS.RCVDID" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="YarnIssueDetailsS.ISSUE_QTY" class="control-label"></label>
                        <input asp-for="YarnIssueDetailsS.ISSUE_QTY" class="form-control " />
                        <span asp-validation-for="YarnIssueDetailsS.ISSUE_QTY" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="YarnIssueDetailsS.OPT1" class="control-label"></label>
                        <input asp-for="YarnIssueDetailsS.OPT1" class="form-control " />
                        <span asp-validation-for="YarnIssueDetailsS.OPT1" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="YarnIssueDetailsS.REMARKS" class="control-label"></label>
                        <input asp-for="YarnIssueDetailsS.REMARKS" class="form-control " />
                        <span asp-validation-for="YarnIssueDetailsS.REMARKS" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <button class="btn btn-success pull-right" type="submit">Create</button>
                    <button id="addToList" class="btn btn-info pull-right" type="button">Add</button>
                    <a asp-action="GetFYsYarnIssueS" class="btn btn-dark pull-right">Back to List</a>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 table-responsive" id="yarnIssueDetailsPartialView"></div>
            </div>
        </div>
    </form>
</div>

@section Styles {
    <link asp-append-version="true" href="~/css/CustomCSS/Stepper.css" rel="stylesheet" />

}

@section Scripts {
    @{await Html.RenderPartialAsync($"_ValidationScriptPartial_Except_jQuery");}
    <script asp-append-version="true" src="~/js/custom-js/Stepper.js"></script>
    <script asp-append-version="true" src="~/js/site-common.js"></script>
    <script asp-append-version="true" src="~/js/FYsYarnIssueS/CreateFYsYarnIssueS.js"></script>
}

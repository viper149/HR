@model COS_WASTAGE_PERCENTAGE
@{
    ViewData["Title"] = "Update Wastage(%)";
    Layout = Layout;
}

<h2><i class="fa fa-edit fa-lg text-warning" aria-hidden="true"></i> Update Wastage(%)</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCostWastagePercentage">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @Html.HiddenFor(c => c.WESTAGE_ID)
            @Html.HiddenFor(c => c.EncryptedId)

            <div class="form-group">
                <label asp-for="DESCRIPTION" class="control-label"></label>
                <input asp-for="DESCRIPTION" class="form-control" />
                <span asp-validation-for="DESCRIPTION" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VALUE" class="control-label"></label>
                <input asp-for="VALUE" class="form-control" />
                <span asp-validation-for="VALUE" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="REMARKS" class="control-label"></label>
                <input asp-for="REMARKS" class="form-control" />
                <span asp-validation-for="REMARKS" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="GetCosWastagePercentageList" class="btn btn-dark">Back to List</a>
                <input type="submit" value="Update" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>
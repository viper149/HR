
@model FGsReturnRcvGatePassViewModel

@{
    ViewData["Title"] = "CreateFGsReturnRcvGatePass";
}

<h2>General Store Receive Form</h2>
<hr />
<div class="row">
    <form id="form" enctype="multipart/form-data" role="form" asp-action="CreateFGsReturnRcvGatePass">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="panel-body row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 row pr-0 pl-2">
                <div class="pl-1 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <span class="h5 panel-title text-success pl-2">Gate Pass Return Receive </span>
                    <hr />
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FGsReturnableGpRcvM.RCVDATE" class="control-label boldText"></label>
                        <input asp-for="FGsReturnableGpRcvM.RCVDATE" class="form-control" />
                        <span asp-validation-for="FGsReturnableGpRcvM.RCVDATE" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FGsReturnableGpRcvM.GPID" class="control-label boldText"></label>
                        @Html.DropDownListFor(dt => dt.FGsReturnableGpRcvM.GPID, new SelectList(Model.FGsGatepassInformationMs, "GPID", "GPNO"),
                            "Select Gate Pass No.", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="FGsReturnableGpRcvM.GPID" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FGsReturnableGpRcvM.RCVD_BY" class="control-label boldText"></label>
                        @Html.DropDownListFor(dt => dt.FGsReturnableGpRcvM.RCVD_BY, new SelectList(Model.GetFHrEmployeeViewModels, "EMPID", "FULL_NAME"),
                            "Select Vehicle", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="FGsReturnableGpRcvM.RCVD_BY" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FGsReturnableGpRcvM.REMARKS" class="control-label boldText"></label>
                        <input asp-for="FGsReturnableGpRcvM.REMARKS" class="form-control" />
                        <span asp-validation-for="FGsReturnableGpRcvM.REMARKS" class="text-danger"></span>
                    </div>
                    <br />
                </div>
            </div>
        </div>

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 row pr-0 pl-2">
            <div class="pl-1 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <br />
                <span class="h5 panel-title text-success pl-2">Gate Pass Return Receive Details</span>
                <hr />
            </div>

            @Html.HiddenFor(c => c.FGsReturnableGpRcvD.RCVID)

            @*<div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FGsReturnableGpRcvD.PRODID" class="control-label boldText"></label>
                    @Html.DropDownListFor(dt => dt.FGsReturnableGpRcvD.PRODID, new SelectList(Model.FGsProductInformations, "PRODID", "PRODNAME"),
                        "Select Product", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                    <span asp-validation-for="FGsReturnableGpRcvD.PRODID" class="text-danger"></span>
                </div>
            </div>*@

            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FGsReturnableGpRcvD.RCV_QTY" class="control-label boldText"></label>
                    <input asp-for="FGsReturnableGpRcvD.RCV_QTY" class="form-control" />
                    <span asp-validation-for="FGsReturnableGpRcvD.RCV_QTY" class="text-danger"></span>
                </div>
            </div>

            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FGsReturnableGpRcvD.RCV_BAG" class="control-label boldText"></label>
                    <input asp-for="FGsReturnableGpRcvD.RCV_BAG" class="form-control" />
                    <span asp-validation-for="FGsReturnableGpRcvD.RCV_BAG" class="text-danger"></span>
                </div>
            </div>


            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FGsReturnableGpRcvD.GATE_ENTRYNO" class="control-label boldText"></label>
                    <input asp-for="FGsReturnableGpRcvD.GATE_ENTRYNO" class="form-control" />
                    <span asp-validation-for="FGsReturnableGpRcvD.GATE_ENTRYNO" class="text-danger"></span>
                </div>
            </div>

            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FGsReturnableGpRcvD.REMARKS" class="control-label boldText"></label>
                    <input asp-for="FGsReturnableGpRcvD.REMARKS" class="form-control" />
                    <span asp-validation-for="FGsReturnableGpRcvD.REMARKS" class="text-danger"></span>
                </div>
            </div>

            <br /><br />

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <button id="btnCreateYarnRequisition" class="btn btn-info nextBtn pull-right" type="submit">Create</button>
                <button id="addToList" class="btn btn-success pull-right mr-2" type="button">Add</button>
                <a asp-action="GetGsIndentMaster" class="btn btn-dark pull-right">Back to List</a>
            </div>

            <table class="table mt-2" id="partialView">
                <thead id="thead">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.FGsReturnableGpRcvDList.FirstOrDefault().PROD.PRODNAME)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FGsReturnableGpRcvDList.FirstOrDefault().RCV_QTY)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FGsReturnableGpRcvDList.FirstOrDefault().RCV_BAG)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FGsReturnableGpRcvDList.FirstOrDefault().GATE_ENTRYNO)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FGsReturnableGpRcvDList.FirstOrDefault().REMARKS)
                        </th>
                        <th>
                            @Html.DisplayName("REMOVE")
                        </th>
                    </tr>
                </thead>
                <tbody id="gSGatePassReturnRcvDetailsTable"></tbody>
            </table>

        </div>

    </form>
</div>

@section Styles {
    <link asp-append-version="true" href="~/css/CustomCSS/Stepper.css" rel="stylesheet" />
}

@section Scripts {
    @{await Html.RenderPartialAsync($"_ValidationScriptPartial_Except_jQuery");}
    <script asp-append-version="true" src="~/js/custom-js/Stepper.js"></script>
    <script asp-append-version="true" src="~/js/site-common.js"></script>
    <script asp-append-version="true" src="~/js/FGsGatePassReturnRcv/CreateFGsReturnRcvGatePass.js"></script>
}

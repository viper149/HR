@model FBasHrdDepartmentViewModel
<h2><i class="fa fa-plus-circle fa-lg text-success" aria-hidden="true"></i>Create @ViewData["Title"]</h2>
<hr />

<div class="container-fluid">
    <form id="form" role="form" asp-action="CreateFBasHrdDepartment">
        <div class="panel panel-default setup-content">
            <div class="panel-body row">
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FBasHrdDepartment.DEPTNAME" class="control-label"></label>
                        <input asp-for="FBasHrdDepartment.DEPTNAME" class="form-control" />
                        <span asp-validation-for="FBasHrdDepartment.DEPTNAME" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FBasHrdDepartment.DEPTNAME_BN" class="control-label"></label>
                        <input asp-for="FBasHrdDepartment.DEPTNAME_BN" class="form-control" />
                        <span asp-validation-for="FBasHrdDepartment.DEPTNAME_BN" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <div class="row">
                            <label asp-for="FBasHrdDepartment.LOCATIONID" class="control-label"></label>&emsp;
                            <a asp-controller="FBasHrdLocation" asp-action="CreateFBasHrdLocation" class="fa fa-plus-circle fa-lg text-info" aria-hidden="true" target="_blank"></a>&emsp;
                            <a class="fa fa-rotate-right fa-lg text-info" aria-hidden="true" onclick="Reload()"></a>
                        </div>
                        @Html.DropDownListFor(dt => dt.FBasHrdDepartment.LOCATIONID, new SelectList(Model.FBasHrdLocationList, "LOCID", "LOC_NAME"), "Select Location", new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="FBasHrdDepartment.LOCATIONID" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FBasHrdDepartment.DESCRIPTION" class="control-label"></label>
                        <input asp-for="FBasHrdDepartment.DESCRIPTION" class="form-control" />
                        <span asp-validation-for="FBasHrdDepartment.DESCRIPTION" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FBasHrdDepartment.REMARKS" class="control-label"></label>
                        <input asp-for="FBasHrdDepartment.REMARKS" class="form-control" />
                        <span asp-validation-for="FBasHrdDepartment.REMARKS" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <button class="btn btn-success pull-right" type="submit">Create</button>
                    <a asp-action="GetFBasHrdDepartment" class="btn btn-dark pull-right">Back to List</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync($"_ValidationScriptPartial_Except_jQuery");}
    <script asp-append-version="true" src="~/js/HR/FBasHrdDepartment/CreateFBasHrdDepartment.js"></script>
}

@model ComExInvoiceMasterCreateViewModel

@{
    ViewData["Title"] = "Commercial Invoice";
}

<div class="container-fluid">

    <h2><i class="fa fa-plus-circle text-success" aria-hidden="true"></i> Create @ViewData["Title"]</h2>

    <form id="form" role="form" asp-action="PostCreateComExInvoiceMaster" enctype="multipart/form-data">
        <div class="panel-body row">

            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <label asp-for="ComExInvoicemaster.ISACTIVE" class="control-label"></label>
                <div class="form-control custom-form-control">
                    <label class="switch">
                        <input asp-for="ComExInvoicemaster.ISACTIVE" />
                        <span class="slider round"></span>
                        <span class="absolute-no">NO</span>
                    </label>
                </div>
                <span asp-validation-for="ComExInvoicemaster.ISACTIVE" class="text-danger"></span>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="ComExInvoicemaster.IS_FINAL" class="control-label"></label>
                    <div class="form-control custom-form-control">
                        <label class="switch">
                            <input asp-for="ComExInvoicemaster.IS_FINAL" />
                            <span class="slider round"></span>
                            <span class="absolute-no">NO</span>
                        </label>
                    </div>
                    <span asp-validation-for="ComExInvoicemaster.IS_FINAL" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <strong class="pr-1"><label asp-for="ComExInvoicemaster.STATUS" class="control-label"></label></strong>
                <div>
                    @Html.HiddenFor(e => e.ComExInvoicemaster.STATUS)
                    <input type="button" disabled class="btn btn-warning" asp-for="ComExInvoicemaster.STATUS" />
                </div>
            </div>

            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="ComExInvoicemaster.INVNO" class="control-label"></label>
                    <input asp-for="ComExInvoicemaster.INVNO" class="form-control" readonly="readonly" />
                    <span asp-validation-for="ComExInvoicemaster.INVNO" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="ComExInvoicemaster.INVDATE" class="control-label"></label>
                    <input asp-for="ComExInvoicemaster.INVDATE" class="form-control" />
                    <span asp-validation-for="ComExInvoicemaster.INVDATE" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="ComExInvoicemaster.INVDURATION" class="control-label"></label>
                    <input asp-for="ComExInvoicemaster.INVDURATION" class="form-control" />
                    <span asp-validation-for="ComExInvoicemaster.INVDURATION" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="ComExInvoicemaster.NEGODATE" class="control-label"></label>
                    <input asp-for="ComExInvoicemaster.NEGODATE" class="form-control" />
                    <span asp-validation-for="ComExInvoicemaster.NEGODATE" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="ComExInvoicemaster.DOC_NOTES" class="control-label"></label>
                    <input asp-for="ComExInvoicemaster.DOC_NOTES" class="form-control" />
                    <span asp-validation-for="ComExInvoicemaster.DOC_NOTES" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="ComExInvoicemaster.LC.LCNO" class="control-label"></label>
                    @Html.DropDownListFor(lc => lc.ComExInvoicemaster.LCID, new SelectList(Model.ComExLcinfos, "LCID", "LCNO"), "Select LC Number", new { @class = "form-control js-example-basic-single", @id = "ComExInvoicemaster_LCID" })
                    <span asp-validation-for="ComExInvoicemaster.LCID" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="ComExInvoicemaster.PDOCNO" class="control-label"></label>
                    <input asp-for="ComExInvoicemaster.PDOCNO" class="form-control" id="ComExInvoicemaster_PDOCNO" />
                    <span asp-validation-for="ComExInvoicemaster.PDOCNO" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="ComExInvoicemaster.LC.VALUE" class="control-label"></label>
                    <input asp-for="ComExInvoicemaster.LC.VALUE" class="form-control" disabled="disabled" />
                    <span asp-validation-for="ComExInvoicemaster.LC.VALUE" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    @Html.HiddenFor(inv => inv.ComExInvoicemaster.BUYERID, new { @id = "ComExInvoicemaster_BUYERID" })
                    <label asp-for="ComExInvoicemaster.BUYER.BUYER_NAME" class="control-label"></label>
                    <input asp-for="ComExInvoicemaster.BUYER.BUYER_NAME" class="form-control" disabled="disabled" />
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="ComExInvoicemaster.TRUCKNO" class="control-label"></label>
                    <input asp-for="ComExInvoicemaster.TRUCKNO" class="form-control" />
                    <span asp-validation-for="ComExInvoicemaster.TRUCKNO" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="ComExInvoicemaster.TOTAL_CBM" class="control-label"></label>
                    <input asp-for="ComExInvoicemaster.TOTAL_CBM" class="form-control" />
                    <span asp-validation-for="ComExInvoicemaster.TOTAL_CBM" class="text-danger"></span>
                </div>
            </div>

            <div id="InvoiceList" class="col-lg-12 col-md-12 col-sm-12 col-xs-12 row"></div>

            <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="ComExInvdetails.ComExFabstyle.FABCODENavigation.STYLE_NAME" class="control-label"></label>
                    @Html.DropDownListFor(lc => lc.ComExInvdetails.PIIDD_TRNSID, new SelectList(Model.ComExPiDetailses, "STYLEID", "FABCODENavigation.STYLE_NAME"), "Select a Style Name", htmlAttributes: new { @class = "form-control js-example-basic-single", @id = "ComExInvdetails_STYLEID" })
                    <span asp-validation-for="ComExInvdetails.PIIDD_TRNSID" class="text-danger"></span>
                </div>
            </div>
            @Html.HiddenFor(e => e.ComExInvdetails.PREV_QTY)
            @*@Html.HiddenFor(e => e.ComExInvdetails.IS_FINAL)*@
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="ComExInvdetails.QTY" class="control-label"></label>
                    <input asp-for="ComExInvdetails.QTY" class="form-control" />
                    <span asp-validation-for="ComExInvdetails.QTY" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="ComExInvdetails.RATE" class="control-label"></label>
                    <input asp-for="ComExInvdetails.RATE" class="form-control" />
                    <span asp-validation-for="ComExInvdetails.RATE" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="ComExInvdetails.AMOUNT" class="control-label"></label>
                    <input readonly asp-for="ComExInvdetails.AMOUNT" class="form-control" />
                    <span asp-validation-for="ComExInvdetails.AMOUNT" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="ComExInvdetails.ROLL" class="control-label"></label>
                    <input asp-for="ComExInvdetails.ROLL" class="form-control" />
                    <span asp-validation-for="ComExInvdetails.ROLL" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="ComExInvdetails.REMARKS" class="control-label"></label>
                    <input asp-for="ComExInvdetails.REMARKS" class="form-control" />
                    <span asp-validation-for="ComExInvdetails.REMARKS" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <button class="btn btn-success pull-right" type="submit">Create</button>
                <button id="btnAdd" class="btn btn-success pull-right" type="button" accesskey="a">Add</button>
                <a class="btn btn-dark pull-right" asp-action="GetComExInvoiceMaster" accesskey="b">Back to List</a>
            </div>


            <div class="col-6">
                <div class="tile-stats">
                    <div class="icon"><i class="fa fa-balance-scale" aria-hidden="true"></i></div>
                    <div class="count text-warning" id="value"></div>
                    <h3>L/C Value</h3>
                </div>
            </div>


            <div class="col-6">
                <div class="tile-stats">
                    <div class="icon"><i class="fa fa-hourglass-end" aria-hidden="true"></i></div>
                    <div class="count text-danger" id="remaining"></div>
                    <h3>Remaining Balance</h3>
                </div>
            </div>

            <div id="AttachToExportInvoice" class="col-lg-12 col-md-12 col-sm-12 col-xs-12"></div>
        </div>
    </form>
</div>

@section Styles {
    <link href="~/css/CustomCSS/Stepper.css" rel="stylesheet" asp-append-version="true" />
}

@section Scripts {
    @{await Html.RenderPartialAsync($"_ValidationScriptPartial_Except_jQuery");}
    <script asp-append-version="true" src="~/js/custom-js/Stepper.js"></script>
    <script asp-append-version="true" src="~/js/comEx/CreateComExInvoiceMaster.js"></script>
}


@model RndYarnRequisitionViewModel

@{
    ViewData["Title"] = "Yarn Indent";
    Layout = Layout;
}

<h2><i class="fa fa-edit text-warning" aria-hidden="true"></i> Edit @ViewData["Title"]</h2>

<div class="container-fluid">
    <form id="form" enctype="multipart/form-data" role="form" asp-action="PostEditFYsIndentMaster">
        <div class="panel panel-default">
            <div class="panel-body row">

                @Html.HiddenFor(e => e.FysIndentMaster.EncryptedId)


                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h2 class="panel-title text-success"><i class="fa fa-hourglass-o" aria-hidden="true"></i> @ViewData["Title"] Details</h2>
                    <hr />
                </div>

                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FysIndentMaster.OPT5" class="control-label"></label>
                        <input asp-for="FysIndentMaster.OPT5" class="form-control" disabled="disabled" />
                        <span asp-validation-for="FysIndentMaster.OPT5" class="text-danger"></span>
                    </div>
                </div>
                
                @Html.HiddenFor(c=>c.FysIndentMaster.INDNO)
                @Html.HiddenFor(c=>c.FysIndentMaster.OPT3)
                @Html.HiddenFor(c=>c.FysIndentMaster.INDSLID)
                
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FysIndentMaster.INDDATE" class="control-label"></label>
                        <input asp-for="FysIndentMaster.INDDATE" class="form-control" readonly="readonly" />
                        <span asp-validation-for="FysIndentMaster.INDDATE" class="text-danger"></span>
                    </div>
                </div>

                @*<div class="col-6 row">
            @await Html.PartialAsync($"/Views/FYsIndentMaster/OtherDetailsViewModel.cshtml", Model)
        </div>*@

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h2 class="panel-title text-success"><i class="fa fa-eye"></i> @ViewData["Title"] Details</h2>
                    <hr />
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 table-responsive table-hover" id="yarnDetailsTableRetrieve">
                    @await Html.PartialAsync($"/Views/FYsIndentMaster/GetPreviousIndentDetailsPartialView.cshtml", Model)
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <button class="btn btn-warning pull-right" type="submit">Update</button>
                    <a asp-action="GetIndentMaster" class="btn btn-dark pull-right">Back to List</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Styles {
    <link asp-append-version="true" href="~/css/CustomCSS/Stepper.css" rel="stylesheet" />
}

@section Scripts {
    @{await Html.RenderPartialAsync($"_ValidationScriptPartial_Except_jQuery");}
    <script asp-append-version="true" src="~/js/custom-js/Stepper.js"></script>
    <script asp-append-version="true" src="~/js/site-common.js"></script>
    <script asp-append-version="true" src="~/js/Indent/CreateIndentMaster.js"></script>
}
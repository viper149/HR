
@model RndYarnRequisitionViewModel

@{
    ViewData["Title"] = "Details Yarn Indent";
    Layout = Layout;
}

@{
    if (Model != null)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-lg-12">
                        <h2 class="text-white btn btn-info">@Html.DisplayNameFor(e => e.FysIndentMaster.INDNO) : [ @Html.DisplayFor(e => e.FysIndentMaster.INDNO) ]</h2>
                        <hr />
                    </div>
                </div>
                <div class="row details">
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="FysIndentMaster.INDDATE" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.FysIndentMaster.INDDATE)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="FysIndentMaster.INDSLID" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.FysIndentMaster.INDSLID)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="FysIndentMaster.REMARKS" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.FysIndentMaster.REMARKS)
                            </span>
                        </div>
                    </div>

                    @if (Model.FysIndentDetailList.Any())
                    {
                        <div class="col-12 table-responsive">
                            <h2 class="panel-title text-success"><i class="fa fa-eye"></i> Receive Details</h2>
                            @await Html.PartialAsync($"/Views/FYsIndentMaster/DetailsFYsIndentMasterTable.cshtml", Model)
                        </div>
                    }
                </div>

                <div class="col-md-12">
                    <a asp-action="EditFYsIndentMaster" asp-controller="FYsIndentMaster" asp-route-id="@Model.FysIndentMaster.EncryptedId" class="btn btn-warning pull-right mt-2">Edit</a>
                    <a asp-action="GetIndentMaster" asp-controller="FYsIndentMaster" class="btn btn-dark pull-right mt-2">Back to List</a>
                </div>
            </div>
        </div>
    }
}
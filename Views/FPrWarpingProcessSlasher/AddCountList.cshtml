@model PrWarpingProcessSlasherViewModel

@if (Model.FPrWarpingProcessDwYarnConsumDetailsList.Any())
{
    <table class="table mt-2 table-condensed" style="border-collapse:collapse;" id="partialView">
        <thead id="thead">
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.FPrWarpingProcessDwYarnConsumDetailsList.FirstOrDefault().COUNT_ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FPrWarpingProcessDwYarnConsumDetailsList.FirstOrDefault().BGT_KG)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.FPrWarpingProcessRopeYarnConsumDetailsList.FirstOrDefault().BGT_KG_PER_SET)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.FPrWarpingProcessDwYarnConsumDetailsList.FirstOrDefault().CONSM)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FPrWarpingProcessDwYarnConsumDetailsList.FirstOrDefault().WASTE)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FPrWarpingProcessDwYarnConsumDetailsList.FirstOrDefault().WASTE_PERCENTAGE)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FPrWarpingProcessDwYarnConsumDetailsList.FirstOrDefault().REMARKS)
                </th>
                <th>
                    @Html.DisplayName("Remove")
                </th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.FPrWarpingProcessDwYarnConsumDetailsList.Count; i++)
            {
                <tr>
                    <td><span class="expand-button"></span></td>
                    <td>
                        @Html.HiddenFor(clc => clc.FPrWarpingProcessDwYarnConsumDetailsList[i].CONSM_ID)
                        @Html.HiddenFor(clc => clc.FPrWarpingProcessDwYarnConsumDetailsList[i].COUNT_ID)
                        @Model.FPrWarpingProcessDwYarnConsumDetailsList[i].COUNT_?.COUNT?.COUNTNAME
                    </td>
                    <td>
                        @Html.HiddenFor(clc => clc.FPrWarpingProcessDwYarnConsumDetailsList[i].BGT_KG)
                        @Model.FPrWarpingProcessDwYarnConsumDetailsList[i].BGT_KG
                    </td>
                    @*<td>
                            @Html.HiddenFor(clc => clc.FPrWarpingProcessDwYarnConsumDetailsList[i].BGT_KG_PER_SET)
                            @Model.FPrWarpingProcessDwYarnConsumDetailsList[i].BGT_KG_PER_SET
                        </td>*@
                    <td>
                        @Html.HiddenFor(clc => clc.FPrWarpingProcessDwYarnConsumDetailsList[i].CONSM)
                        @Model.FPrWarpingProcessDwYarnConsumDetailsList[i].CONSM
                    </td>
                    <td>
                        @Html.HiddenFor(clc => clc.FPrWarpingProcessDwYarnConsumDetailsList[i].WASTE)
                        @Model.FPrWarpingProcessDwYarnConsumDetailsList[i].WASTE
                    </td>
                    <td>
                        @Html.HiddenFor(clc => clc.FPrWarpingProcessDwYarnConsumDetailsList[i].WASTE_PERCENTAGE)
                        @Model.FPrWarpingProcessDwYarnConsumDetailsList[i].WASTE_PERCENTAGE
                    </td>
                    <td>
                        @Html.HiddenFor(clc => clc.FPrWarpingProcessDwYarnConsumDetailsList[i].REMARKS)
                        @Model.FPrWarpingProcessDwYarnConsumDetailsList[i].REMARKS
                    </td>
                    <td>
                        <i class="fa fa-trash fa-2x-custom text-danger" onclick="RemoveCountFromList(@i)" aria-hidden="true"></i>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


<script type="text/javascript" asp-append-version="true">
    function RemoveCountFromList(removeIndexValue) {
        var data = $('#form').serializeArray();
        data.push({ name: "removeIndexValue", value: removeIndexValue });
        $.ajax({
            async: true,
            cache: false,
            data: data,
            type: "POST",
            url: '/FPrWarpingProcessSlasher/RemoveCountFromList',
            success: function (partialView, status, xhr) {
                $('#CountDetails').html(partialView);
            },
            error: function (e) {
                console.log(e);
            }
        });
    }
</script>

@inject SignInManager<ApplicationUser> SignInManager
@using DenimERP.Models
@model RndSampleInfoWeavingWithDetailsViewModel

@{
    ViewData["Title"] = "Details RnD Sample Information Weaving";
    Layout = Layout;
}

<h2><i class="fa fa-info-circle fa-lg text-success" aria-hidden="true"></i> Details RnD Sample Information Weaving</h2>
<hr />
@{
    if (Model != null)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="m-b-md">
                            <h2 class="text-danger">@Html.DisplayNameFor(e => e.RndSampleInfoWeaving.FABCODE) : [ @Model.RndSampleInfoWeaving.FABCODE ]</h2>
                            <hr />
                        </div>
                    </div>
                </div>
                <div class="row details">
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="RndSampleInfoWeaving.SDID" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.RndSampleInfoWeaving.SDID)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="RndSampleInfoWeaving.PROG_ID" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.RndSampleInfoWeaving.PROG_ID)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="RndSampleInfoWeaving.FABCODE" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.RndSampleInfoWeaving.FABCODE)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="RndSampleInfoWeaving.CONCEPT" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.RndSampleInfoWeaving.CONCEPT)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="RndSampleInfoWeaving.BEAMNO" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.RndSampleInfoWeaving.BEAMNO)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="RndSampleInfoWeaving.TOTAL_ENDS" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.RndSampleInfoWeaving.TOTAL_ENDS)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="RndSampleInfoWeaving.REED_SPACE" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.RndSampleInfoWeaving.REED_SPACE)
                            </span>
                        </div>
                    </div>
                    <div class="col-2 d-none">
                        <div class="form-group">
                            <strong>
                                <label asp-for="RndSampleInfoWeaving.FNPPI" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.RndSampleInfoWeaving.FNPPI)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="RndSampleInfoWeaving.REED_COUNT" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.RndSampleInfoWeaving.REED_COUNT)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="RndSampleInfoWeaving.REED_DENT" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.RndSampleInfoWeaving.REED_DENT)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="RndSampleInfoWeaving.GR_EPI" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.RndSampleInfoWeaving.GR_EPI)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="RndSampleInfoWeaving.GR_PPI" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.RndSampleInfoWeaving.GR_PPI)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="RndSampleInfoWeaving.WEAVENavigation.NAME" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.RndSampleInfoWeaving.WEAVENavigation.NAME)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="RndSampleInfoWeaving.LOOM.LOOM_TYPE_NAME" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.RndSampleInfoWeaving.LOOM.LOOM_TYPE_NAME)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="RndSampleInfoWeaving.LENGTH_MTR" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.RndSampleInfoWeaving.LENGTH_MTR)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="RndSampleInfoWeaving.CLOSE_DATE" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.RndSampleInfoWeaving.CLOSE_DATE)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="RndSampleInfoWeaving.REMARKS" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.RndSampleInfoWeaving.REMARKS)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="RndSampleInfoWeaving.CREATED_BY" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @{
                                    if (Model.RndSampleInfoWeaving.CREATED_BY != null)
                                    {
                                        @SignInManager.UserManager.FindByIdAsync(Model.RndSampleInfoWeaving.CREATED_BY).Result.UserName
                                    }
                                    else
                                    {
                                        @Html.DisplayName("N/A")
                                    }
                                }
                            </span>
                        </div>
                    </div>
                </div>

                @if (Model.RndSampleInfoWeavingDetailses.Any())
                {
                    <h2 class="panel-title text-success">Yarn Details</h2>
                    <table class="table table-hover">
                        <thead id="thead">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.RndSampleInfoWeavingDetailses.FirstOrDefault().COUNT.COUNTNAME)</th>
                                <th>@Html.DisplayNameFor(model => model.RndSampleInfoWeavingDetailses.FirstOrDefault().YARNTYPE)</th>
                                <th>@Html.DisplayNameFor(model => model.RndSampleInfoWeavingDetailses.FirstOrDefault().LOT.LOTNO)</th>
                                <th>@Html.DisplayNameFor(model => model.RndSampleInfoWeavingDetailses.FirstOrDefault().SUPP.SUPPNAME)</th>
                                <th>@Html.DisplayNameFor(model => model.RndSampleInfoWeavingDetailses.FirstOrDefault().RATIO)</th>
                                <th>@Html.DisplayNameFor(model => model.RndSampleInfoWeavingDetailses.FirstOrDefault().NE)</th>
                                <th>@Html.DisplayNameFor(model => model.RndSampleInfoWeavingDetailses.FirstOrDefault().YARN.YARNNAME)</th>
                                <th>@Html.DisplayNameFor(model => model.RndSampleInfoWeavingDetailses.FirstOrDefault().BGT)</th>
                            </tr>
                        </thead>
                        <tbody>

                            @{
                                foreach (var item in Model.RndSampleInfoWeavingDetailses)
                                {
                                    <tr>
                                        <td>@item.COUNT.COUNTNAME</td>
                                        <td>@item.YARNTYPE</td>
                                        <td>@item.LOT.LOTNO</td>
                                        <td>@item.SUPP.SUPPNAME</td>
                                        <td>@item.RATIO</td>
                                        <td>@item.NE</td>
                                        <td>@item.YARN.YARNNAME</td>
                                        <td>@item.BGT</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                }
            </div>

            <div class="col-md-12">
                @Html.ActionLink("Edit", $"EditRndSampleInfoWeaving", new { wvId = Model.RndSampleInfoWeaving.EncryptedId }, new { @class = "btn btn-warning pull-right mt-2" })
                <a class="btn btn-dark pull-right mt-2" asp-action="GetRndSampleInfoWeaving" asp-controller="RndSampleInfoWeaving">Back to List</a>
            </div>
        </div>
    }
}
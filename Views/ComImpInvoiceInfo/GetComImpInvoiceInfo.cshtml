
@model COM_IMP_INVOICEINFO

@{
    ViewData["Title"] = "Commercial Invoice";
}

<div class="x_panel">
    <div class="x_title">
        <h2>
            <i class="fa fa-list text-info"></i> @ViewData["Title"] <i class="fa fa-at text-info">Import</i>
        </h2>
        <ul class="nav navbar-right panel_toolbox">
            @if (User.IsInRole("Com Imp") || User.IsInRole("Super Admin") || User.IsInRole("Admin"))
            {
                <li class="mr-2">
                    <p>
                        <a asp-action="CreateComImpInvoiceInfo" class="btn btn-primary"><i class="fa fa-plus-circle" aria-hidden="true"></i> Add </a>
                    </p>
                </li>
            }
            
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content table-responsive table-hover" id="lcList">
        <table class="table" id="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.INVID)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.INVNO)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.INVDATE)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.LPORT)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.DOCHANDSON)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.ETADATE)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.INVPATH)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.BLPATH)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.REMARKS)</th>
                    <th scope="col">@Html.DisplayName("Actions")</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Styles
{
    <link asp-append-version="true" href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link asp-append-version="true" href="~/lib/datatables/css/customerDatatable.css" rel="stylesheet" />
}

@section Scripts
{
    <script asp-append-version="true" src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script asp-append-version="true" src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script asp-append-version="true" src="~/js/comImpInvoiceInfo/GetComImpInvoiceInfo.js"></script>
}
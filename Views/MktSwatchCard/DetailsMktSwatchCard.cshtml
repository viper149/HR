@model CreateMktSwatchCardViewModel

@{
    ViewData["Title"] = "Details Marketing Swatch Card";
    Layout = Layout;
}

<h2><i class="fa fa-credit-card fa-lg text-success" aria-hidden="true"></i> Details Marketing Swatch Card.</h2>

@{
    if (Model != null)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="m-b-md">
                            <h2 class="text-danger">@Html.DisplayNameFor(e => e.MktSwatchCard.SWCDID) : [ @Model.MktSwatchCard.SWCDID ]</h2>
                            <hr />
                        </div>
                    </div>
                </div>
                <div class="row details">
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="MktSwatchCard.MKTQUERY" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.MktSwatchCard.MKTQUERY)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="MktSwatchCard.BUYER.BUYER_NAME" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.MktSwatchCard.BUYER.BUYER_NAME)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="MktSwatchCard.CONSTRUCTION" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.MktSwatchCard.CONSTRUCTION)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="MktSwatchCard.WIDTH" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.MktSwatchCard.WIDTH)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="MktSwatchCard.FNWEIGHT" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.MktSwatchCard.FNWEIGHT)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="MktSwatchCard.FN.TYPENAME" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.MktSwatchCard.FN.TYPENAME)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="MktSwatchCard.BasColor.COLOR" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.MktSwatchCard.BasColor.COLOR)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="MktSwatchCard.REMARKS" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.MktSwatchCard.REMARKS)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="MktSwatchCard.MKTTEAM" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.MktSwatchCard.MKTTEAM)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="MktSwatchCard.MKTPERSON" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.MktSwatchCard.MKTPERSON)
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                @Html.ActionLink("Edit", $"EditMktSwatchCard", new { swCdId = Model.MktSwatchCard.EncryptedId }, new { @class = "btn btn-warning pull-right mt-2" })
                <a class="btn btn-dark pull-right mt-2" asp-action="GetMktSwatchCard" asp-controller="MktSwatchCard">Back to List</a>
            </div>
        </div>
    }
}
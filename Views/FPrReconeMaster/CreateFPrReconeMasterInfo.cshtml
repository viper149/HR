@model FPrReconeMasterViewModel

@{
    ViewData["Title"] = "Recone Production Information";
    Layout = Layout;
}

<h2><i class="fa fa-plus-circle fa-lg text-success" aria-hidden="true"></i> Create @ViewData["Title"]</h2>

<div class="container-fluid">
    <form id="form" role="form" asp-action="CreateFPrReconeMasterInfo">
        <div class="panel-body row">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="F_PR_RECONE_MASTER.TRANSDATE" class="control-label"></label>
                        <input asp-for="F_PR_RECONE_MASTER.TRANSDATE" class="form-control" type="date" id="datePick" />
                        <span asp-validation-for="F_PR_RECONE_MASTER.TRANSDATE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="F_PR_RECONE_MASTER.SET_NO" class="control-label"></label>
                        @Html.DropDownListFor(c => c.F_PR_RECONE_MASTER.SET_NO, new SelectList(Model.SetList, "SETID", "PROG_.PROG_NO"), "Select Set No.", new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="F_PR_RECONE_MASTER.SET_NO" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="F_PR_RECONE_MASTER.NO_OF_BALL" class="control-label"></label>
                        <input asp-for="F_PR_RECONE_MASTER.NO_OF_BALL" class="form-control" />
                        <span asp-validation-for="F_PR_RECONE_MASTER.NO_OF_BALL" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="F_PR_RECONE_MASTER.WARP_LENGTH" class="control-label"></label>
                        <input asp-for="F_PR_RECONE_MASTER.WARP_LENGTH" class="form-control" />
                        <span asp-validation-for="F_PR_RECONE_MASTER.WARP_LENGTH" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="F_PR_RECONE_MASTER.WARP_RATIO" class="control-label"></label>
                        <input asp-for="F_PR_RECONE_MASTER.WARP_RATIO" class="form-control" />
                        <span asp-validation-for="F_PR_RECONE_MASTER.WARP_RATIO" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="F_PR_RECONE_MASTER.CONVERTED" class="control-label"></label>
                        <input asp-for="F_PR_RECONE_MASTER.CONVERTED" class="form-control" />
                        <span asp-validation-for="F_PR_RECONE_MASTER.CONVERTED" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="F_PR_RECONE_MASTER.REMARKS" class="control-label"></label>
                        <input asp-for="F_PR_RECONE_MASTER.REMARKS" class="form-control" />
                        <span asp-validation-for="F_PR_RECONE_MASTER.REMARKS" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h2 class="panel-title text-success">Recone Yarn Details</h2>
                    <hr />
                </div>

                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="F_PR_RECONE_YARN_DETAILS.BALL_NO" class="control-label"></label>
                        @Html.DropDownListFor(c => c.F_PR_RECONE_YARN_DETAILS.BALL_NO, new SelectList(Model.BallList, "LCB_D_ID", "CAN.BALL.BALL_ID_FKNavigation.BALL_NO"), "Select Ball No.", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="F_PR_RECONE_YARN_DETAILS.BALL_NO" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="F_PR_RECONE_YARN_DETAILS.BALL_LENGTH" class="control-label"></label>
                        <input asp-for="F_PR_RECONE_YARN_DETAILS.BALL_LENGTH" class="form-control" />
                        <span asp-validation-for="F_PR_RECONE_YARN_DETAILS.BALL_LENGTH" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="F_PR_RECONE_YARN_DETAILS.LINK_BALL" class="control-label"></label>
                        @Html.DropDownListFor(c => c.F_PR_RECONE_YARN_DETAILS.LINK_BALL, new SelectList(Model.LinkBallList, "LCB_D_ID", "CAN.BALL.BALL_ID_FKNavigation.BALL_NO"), "Select Link Ball No.", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="F_PR_RECONE_YARN_DETAILS.LINK_BALL" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="F_PR_RECONE_YARN_DETAILS.LINK_BALL_LENGTH" class="control-label"></label>
                        <input asp-for="F_PR_RECONE_YARN_DETAILS.LINK_BALL_LENGTH" class="form-control" />
                        <span asp-validation-for="F_PR_RECONE_YARN_DETAILS.LINK_BALL_LENGTH" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="F_PR_RECONE_YARN_DETAILS.SHIFT" class="control-label"></label>
                        @Html.DropDownListFor(c => c.F_PR_RECONE_YARN_DETAILS.SHIFT, new SelectList(Model.ShiftList, "ID", "SHIFT"), "Select Shift", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="F_PR_RECONE_YARN_DETAILS.SHIFT" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="F_PR_RECONE_YARN_DETAILS.COUNTID" class="control-label"></label>
                        @Html.DropDownListFor(c => c.F_PR_RECONE_YARN_DETAILS.COUNTID, new SelectList(Model.YarnCountList, "COUNTID", "COUNTNAME"), "Select Count", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="F_PR_RECONE_YARN_DETAILS.COUNTID" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="F_PR_RECONE_YARN_DETAILS.MACHINEID" class="control-label"></label>
                        @Html.DropDownListFor(c => c.F_PR_RECONE_YARN_DETAILS.MACHINEID, new SelectList(Model.MachineList, "ID", "MACHINE_NO"), "Select Machine", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="F_PR_RECONE_YARN_DETAILS.MACHINEID" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="F_PR_RECONE_YARN_DETAILS.ENDS_ROPE" class="control-label"></label>
                        <input asp-for="F_PR_RECONE_YARN_DETAILS.ENDS_ROPE" class="form-control" />
                        <span asp-validation-for="F_PR_RECONE_YARN_DETAILS.ENDS_ROPE" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="F_PR_RECONE_YARN_DETAILS.BREAK_ENDS" class="control-label"></label>
                        <input asp-for="F_PR_RECONE_YARN_DETAILS.BREAK_ENDS" class="form-control" />
                        <span asp-validation-for="F_PR_RECONE_YARN_DETAILS.BREAK_ENDS" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="F_PR_RECONE_YARN_DETAILS.REMARKS" class="control-label"></label>
                        <input asp-for="F_PR_RECONE_YARN_DETAILS.REMARKS" class="form-control" />
                        <span asp-validation-for="F_PR_RECONE_YARN_DETAILS.REMARKS" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h2 class="panel-title text-success">Recone Yarn Consumption Details</h2>
                    <hr />
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="F_PR_RECONE_YARN_CONSUMPTION.COUNTID" class="control-label"></label>
                        @Html.DropDownListFor(c => c.F_PR_RECONE_YARN_CONSUMPTION.COUNTID, new SelectList(Model.RndCountList, "COUNTID", "COUNT.COUNTNAME"), "Select Count", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="F_PR_RECONE_YARN_CONSUMPTION.COUNTID" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="F_PR_RECONE_YARN_CONSUMPTION.CONSUMP" class="control-label"></label>
                        <input asp-for="F_PR_RECONE_YARN_CONSUMPTION.CONSUMP" class="form-control" />
                        <span asp-validation-for="F_PR_RECONE_YARN_CONSUMPTION.CONSUMP" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="F_PR_RECONE_YARN_CONSUMPTION.WASTE" class="control-label"></label>
                        <input asp-for="F_PR_RECONE_YARN_CONSUMPTION.WASTE" class="form-control" />
                        <span asp-validation-for="F_PR_RECONE_YARN_CONSUMPTION.WASTE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="F_PR_RECONE_YARN_CONSUMPTION.WASTE_PERCENT" class="control-label"></label>
                        <input asp-for="F_PR_RECONE_YARN_CONSUMPTION.WASTE_PERCENT" class="form-control" />
                        <span asp-validation-for="F_PR_RECONE_YARN_CONSUMPTION.WASTE_PERCENT" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="F_PR_RECONE_YARN_CONSUMPTION.REMARKS" class="control-label"></label>
                        <input asp-for="F_PR_RECONE_YARN_CONSUMPTION.REMARKS" class="form-control" />
                        <span asp-validation-for="F_PR_RECONE_YARN_CONSUMPTION.REMARKS" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 row" id="AttachTo">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <button asp-action="CreateFPrReconeMasterInfo" id="btnCreateLoan" class="btn btn-success nextBtn pull-right" type="submit">Create</button>
                    <button id="addToListBtn" class="btn btn-info pull-right mr-2" type="button">Add Yarn Details</button>
                    <button id="addToListBtnYC" class="btn btn-info pull-right mr-2" type="button">Add Consumption Details</button>
                    <a asp-action="GetFPrReconeMasterInfo" class="btn btn-dark pull-right">Back to List</a>

                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 table-responsive table-hover" id="FPrReconeDetailsTable"></div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 table-responsive table-hover" id="FPrConsumptionTable"></div>

        </div>
    </form>
</div>



@section Styles {
    <link asp-append-version="true" href="~/css/CustomCSS/Stepper.css" rel="stylesheet" />

}

@section Scripts {
    @{await Html.RenderPartialAsync($"_ValidationScriptPartial_Except_jQuery");}
    <script asp-append-version="true" src="~/js/custom-js/Stepper.js"></script>
    <script asp-append-version="true" src="~/js/site-common.js"></script>
    <script asp-append-version="true" src="~/js/FPrReconeMaster/CreateFPrReconeMasterInfo.js"></script>
}



@model CreateHSampleFabricReceivingM

@{
    ViewData["Title"] = "HO Sample Fabric Receive";
}

<div class="container-fluid">

    <h2><i class="fa fa-plus-circle text-warning" aria-hidden="true"></i> <ins>Edit @ViewData["Title"]</ins></h2>

    <form id="form" role="form" asp-action="PostEditHSampleFabricReceivingM" enctype="multipart/form-data">

        <div class="panel-body row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 row">

                @Html.HiddenFor(e => e.HSampleFabricReceivingM.RCVID)
                @Html.HiddenFor(e => e.HSampleFabricReceivingM.EncryptedId)

                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="HSampleFabricReceivingM.RCVDATE" class="control-label"></label>
                        <input asp-for="HSampleFabricReceivingM.RCVDATE" class="form-control" />
                        <span asp-validation-for="HSampleFabricReceivingM.RCVDATE" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="HSampleFabricReceivingM.FSampleFabricDispatchMaster.GPNO" class="control-label"></label>
                        @Html.DropDownListFor(lc => lc.HSampleFabricReceivingM.DPID, new SelectList(Model.FSampleFabricDispatchMasters, "DPID", "GPNO"), "Select a Gate Pass", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="HSampleFabricReceivingM.DPID" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="HSampleFabricReceivingM.REMARKS" class="control-label"></label>
                        <input asp-for="HSampleFabricReceivingM.REMARKS" class="form-control" />
                        <span asp-validation-for="HSampleFabricReceivingM.REMARKS" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h2 class="panel-title text-success"><i class="fa fa-eye" aria-hidden="true"></i> Fabric Receive Details</h2>
                    <hr />
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 table-responsive" id="HSampleFabricReceivingM">
                    @await Html.PartialAsync($"~/Views/HSampleFabricReceivingM/CreateHSampleFabricReceivingMTable.cshtml", Model)
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <button class="btn btn-warning pull-right" type="submit"> Update</button>
                    <a asp-action="GetHSampleFabricReceivingM" asp-controller="HSampleFabricReceivingM" class="btn btn-dark pull-right"> Back to List</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script asp-append-version="true" src="~/js/HSampleFabricReceivingM/CreateHSampleFabricReceivingM.js"></script>
}
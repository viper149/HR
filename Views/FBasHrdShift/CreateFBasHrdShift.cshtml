@model FBasHrdShiftViewModel
<h2><i class="fa fa-plus-circle fa-lg text-success" aria-hidden="true"></i>Create @ViewData["Title"]</h2>
<hr />

<div class="container-fluid">
    <form id="form" role="form" asp-action="CreateFBasHrdShift">
        <div class="panel panel-default setup-content">
            <div class="panel-body row">
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FBasHrdShift.SHIFT_NAME" class="control-label"></label>
                        <input asp-for="FBasHrdShift.SHIFT_NAME" class="form-control" />
                        <span asp-validation-for="FBasHrdShift.SHIFT_NAME" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FBasHrdShift.SHORT_NAME" class="control-label"></label>
                        <input asp-for="FBasHrdShift.SHORT_NAME" class="form-control" />
                        <span asp-validation-for="FBasHrdShift.SHORT_NAME" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FBasHrdShift.TIME_START" class="control-label"></label>
                        <input asp-for="FBasHrdShift.TIME_START" class="form-control" type="time" />
                        <span asp-validation-for="FBasHrdShift.TIME_START" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FBasHrdShift.TIME_END" class="control-label"></label>
                        <input asp-for="FBasHrdShift.TIME_END" class="form-control" type="time" />
                        <span asp-validation-for="FBasHrdShift.TIME_END" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">Shift Duration (hh:mm)</label>
                        <span class="custom-form-control-bg form-control bg-e9ecef" id="duration"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FBasHrdShift.REMARKS" class="control-label"></label>
                        <input asp-for="FBasHrdShift.REMARKS" class="form-control" />
                        <span asp-validation-for="FBasHrdShift.REMARKS" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <button class="btn btn-success pull-right" type="submit">Create</button>
                    <a asp-action="GetFBasHrdShift" class="btn btn-dark pull-right">Back to List</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync($"_ValidationScriptPartial_Except_jQuery");}
    <script asp-append-version="true" src="~/js/HR/FBasHrdShift/CreateFBasHrdShift.js"></script>
}
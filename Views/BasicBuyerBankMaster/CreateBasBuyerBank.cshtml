@model BAS_BUYER_BANK_MASTER

@{
    ViewData["Title"] = "CreateBasBuyerBank";
    Layout = Layout;
}

<h2><i class="fa fa-plus-circle text-success" aria-hidden="true"></i> Create Buyer Bank</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateBasBuyerBank">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PARTY_BANK" class="control-label"></label>
                <input asp-for="PARTY_BANK" class="form-control" />
                <span asp-validation-for="PARTY_BANK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ADDRESS" class="control-label"></label>
                <input asp-for="ADDRESS" class="form-control" />
                <span asp-validation-for="ADDRESS" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BRANCH" class="control-label"></label>
                <input asp-for="BRANCH" class="form-control" />
                <span asp-validation-for="BRANCH" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="REMARKS" class="control-label"></label>
                <input asp-for="REMARKS" class="form-control" />
                <span asp-validation-for="REMARKS" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="GetBasBuyerBanksWithPaged" class="btn btn-dark" accesskey="b">Back to List</a>
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptPartial_Except_jQuery");}
    <script>
        $(function () {

            $('#form').submit(function () {
                $(this).find(':submit').attr('disabled', 'disabled');
            });
        })
    </script>
}

@model FGenSRequisitionViewModel

@{
    ViewData["Title"] = "General Store Purchase Requisition";
    Layout = Layout;
}

<h2><i class="fa fa-plus-circle text-success" aria-hidden="true"></i> Create @ViewData["Title"]</h2>

<div class="container-fluid">
    <form asp-action="PostCreateFGenSPurchaseRequisition" enctype="multipart/form-data" id="form" role="form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="panel-body row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 p-0">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 pull-left">
                    <h2 class="panel-title text-success"><i class="fa fa-flask" aria-hidden="true"></i> Basic Information</h2>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 d-none">
                    <div class="form-group">
                        <label asp-for="FGenSPurchaseRequisitionMaster.STATUS" class="control-label"></label>
                        <div class="form-control custom-form-control">
                            <label class="switch">
                                <input asp-for="FGenSPurchaseRequisitionMaster.STATUS" />
                                <span class="slider round"></span>
                                <span class="absolute-no">NO</span>
                            </label>
                        </div>
                        <span asp-validation-for="FGenSPurchaseRequisitionMaster.STATUS" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <hr />
            </div>

            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FGenSPurchaseRequisitionMaster.INDSLDATE" class="control-label"></label>
                    <input asp-for="FGenSPurchaseRequisitionMaster.INDSLDATE" class="form-control" />
                    <span asp-validation-for="FGenSPurchaseRequisitionMaster.INDSLDATE" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FGenSPurchaseRequisitionMaster.EMPID" class="control-label"></label>
                    @Html.DropDownListFor(dt => dt.FGenSPurchaseRequisitionMaster.EMPID, new SelectList(Model.FHrEmployeesList, "EMPID", "EMPNO"), "Select Employee", new { @class = "form-control js-example-basic-single" })
                    <span asp-validation-for="FGenSPurchaseRequisitionMaster.EMPID" class="text-danger"></span>
                </div>
            </div>
            @Html.HiddenFor(modelItem => Model.FGenSPurchaseRequisitionMaster.DEPTID)
            @Html.HiddenFor(modelItem => Model.FGenSPurchaseRequisitionMaster.SECID)
            @Html.HiddenFor(modelItem => Model.FGenSPurchaseRequisitionMaster.SSECID)
            <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
                <div class="form-group">
                    <label class="control-label">Department</label>
                    <span class="custom-form-control-bg form-control bg-e9ecef" id="deptn">
                    </span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
                <div class="form-group">
                    <label class="control-label">Section</label>
                    <span class="custom-form-control-bg form-control bg-e9ecef" id="secn">
                    </span>
                </div>
            </div>
            @*<div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
                <div class="form-group">
                    <label class="control-label">Sub-Section</label>
                    <span class="custom-form-control-bg form-control bg-e9ecef" id="ssecn">
                    </span>
                </div>
            </div>*@
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FGenSPurchaseRequisitionMaster.CN_PERSON" class="control-label"></label>
                    @Html.DropDownListFor(dt => dt.FGenSPurchaseRequisitionMaster.CN_PERSON, new SelectList(Model.FHrEmployeesList, "EMPID", "EMPNO"), "Select Employee", new { @class = "form-control js-example-basic-single" })
                    <span asp-validation-for="FGenSPurchaseRequisitionMaster.CN_PERSON" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FGenSPurchaseRequisitionMaster.REMARKS" class="control-label"></label>
                    <input asp-for="FGenSPurchaseRequisitionMaster.REMARKS" class="form-control" />
                    <span asp-validation-for="FGenSPurchaseRequisitionMaster.REMARKS" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h2 class="panel-title text-success"><i class="fa fa-eye" aria-hidden="true"></i> Requisition Details</h2>
                <hr />
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FGenSIndentdetails.PRODUCTID" class="control-label"></label>
                    @Html.DropDownListFor(dt => dt.FGenSIndentdetails.PRODUCTID, new SelectList(Model.FGsProductInformationsList, "PRODID", "PRODNAME"), "Select Product", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                    <span asp-validation-for="FGenSIndentdetails.PRODUCTID" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
                <div class="form-group">
                    <label class="control-label">Unit</label>
                    <span class="custom-form-control-bg form-control bg-e9ecef" id="unit">
                    </span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FGenSIndentdetails.QTY" class="control-label"></label>
                    <input asp-for="FGenSIndentdetails.QTY" class="form-control" />
                    <span asp-validation-for="FGenSIndentdetails.QTY" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="FGenSIndentdetails.REMARKS" class="control-label"></label>
                    <input asp-for="FGenSIndentdetails.REMARKS" class="form-control" />
                    <span asp-validation-for="FGenSIndentdetails.REMARKS" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <button class="btn btn-info nextBtn pull-right" id="btn_submit" type="submit">Create</button>
                <button class="btn btn-success pull-right" id="btnAdd" type="button">Add to List</button>
                <a asp-action="GetFGenSPurchaseRequisition" class="btn btn-dark pull-right">Back to List</a>
            </div>

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 table-responsive table-hover" id="fGenSPurchaseRequisitionTable"></div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync($"_ValidationScriptPartial_Except_jQuery");}
    <script asp-append-version="true" src="~/js/GeneralStore/PurchaseRequisition/CreateFGenSPurchaseRequisition.js"></script>
}
@model FDyeingProcessRopeViewModel

@if (Model.FDyeingProcessRopeChemList.Any())
{
    <table class="table mt-2 table-condensed" style="border-collapse:collapse;" id="partialView">
        <thead id="thead">
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.FDyeingProcessRopeChemList.FirstOrDefault().CHEM_PROD_ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FDyeingProcessRopeChemList.FirstOrDefault().QTY)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FDyeingProcessRopeChemList.FirstOrDefault().UNIT)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FDyeingProcessRopeChemList.FirstOrDefault().REMARKS)
                </th>
                <th>
                    @Html.DisplayName("Remove")
                </th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.FDyeingProcessRopeChemList.Count; i++)
            {
                <tr>

                    <td>
                        @if (Model.FDyeingProcessRopeDetailsList[i].ROPEID > 0)
                        {
                            <i class="fa fa-database text-danger" aria-hidden="true" title="From database."></i>
                        }
                        else
                        {
                            <i class="fa fa-plus-circle text-info" aria-hidden="true" title="New data."></i>
                        }
                    </td>
                    <td>
                        @Html.HiddenFor(clc => clc.FDyeingProcessRopeChemList[i].CHEM_ID)
                        @Html.HiddenFor(clc => clc.FDyeingProcessRopeChemList[i].ROPE_DID)
                        @Html.HiddenFor(clc => clc.FDyeingProcessRopeChemList[i].CHEM_PROD_ID)
                        @Model.FDyeingProcessRopeChemList[i].CHEM_PROD_?.PRODUCTNAME
                    </td>
                    <td>
                        @Html.HiddenFor(clc => clc.FDyeingProcessRopeChemList[i].QTY)
                        @Model.FDyeingProcessRopeChemList[i].QTY
                    </td>
                    <td>
                        @Html.HiddenFor(clc => clc.FDyeingProcessRopeChemList[i].UNIT)
                        @Model.FDyeingProcessRopeChemList[i].UNIT
                    </td>
                    <td>
                        @Html.HiddenFor(clc => clc.FDyeingProcessRopeChemList[i].REMARKS)
                        @Model.FDyeingProcessRopeChemList[i].REMARKS
                    </td>
                    <td>
                        <i class="fa fa-trash fa-2x-custom text-danger" onclick="RemoveChemFromList(@i)" aria-hidden="true"></i>
                    </td>
                </tr>
            }
        <tr class="bg-info">
            <td></td>
            <td class="text-right"><i class="fa fa-cart-plus" aria-hidden="true"></i> @Html.DisplayName("Sum Of Total :")</td>
            <td class="bg-info text-white">@($"{Model.FDyeingProcessRopeChemList.Sum(e => e.QTY)}")</td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
        </tbody>
    </table>
}


<script type="text/javascript" asp-append-version="true">
    function RemoveChemFromList(removeIndexValue) {
        var data = $('#form').serializeArray();
        data.push({ name: "removeIndexValue", value: removeIndexValue });
        $.ajax({
            async: true,
            cache: false,
            data: data,
            type: "POST",
            url: '/FDyeingProcessRopeMaster/RemoveChemFromList',
            success: function (partialView, status, xhr) {
                $('#ChemDetails').html(partialView);
            },
            error: function (e) {
                console.log(e);
            }
        });
    }
</script>
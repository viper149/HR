
@model YarnRequirementViewModel

@{
    ViewData["Title"] = "Yarn Requirement";
    Layout = Layout;
}

<h2><i class="fa fa-plus-circle fa-lg text-success" aria-hidden="true"></i> Create @ViewData["Title"]</h2>

<div class="container-fluid">
    <form id="form" enctype="multipart/form-data" role="form" asp-action="PostCreateYarnRequirement">
        <div class="panel panel-default">
            <div class="panel-body row">

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h2 class="panel-title text-success"><i class="fa fa-medium" aria-hidden="true"></i> Master</h2>
                    <hr />
                </div>

                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FYarnRequirementMaster.YSRNO" class="control-label"></label>
                        <input asp-for="FYarnRequirementMaster.YSRNO" class="form-control" readonly="readonly" />
                        <span asp-validation-for="FYarnRequirementMaster.YSRNO" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FYarnRequirementMaster.YSRDATE" class="control-label"></label>
                        <input asp-for="FYarnRequirementMaster.YSRDATE" class="form-control" />
                        <span asp-validation-for="FYarnRequirementMaster.YSRDATE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FYarnRequirementMaster.SECID" class="control-label"></label>
                        @Html.DropDownListFor(dt => dt.FYarnRequirementMaster.SECID, new SelectList(Model.FBasSectionList, "SECID", "SECNAME"),
                            "Select Section", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="FYarnRequirementMaster.SECID" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FYarnRequirementMaster.SUBSECID" class="control-label"></label>
                        @Html.DropDownListFor(dt => dt.FYarnRequirementMaster.SUBSECID, new SelectList(Model.FBasSubSectionList, "SSECID", "SSECNAME"),
                            "Select Sub Section", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="FYarnRequirementMaster.SUBSECID" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FYarnRequirementMaster.REMARKS" class="control-label"></label>
                        <textarea asp-for="FYarnRequirementMaster.REMARKS" class="form-control rounded" rows="1"></textarea>
                        <span asp-validation-for="FYarnRequirementMaster.REMARKS" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h2 class="panel-title text-success"><i class="fa fa-eye" aria-hidden="true"></i> Details</h2>
                    <hr />
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 row">

                    @Html.HiddenFor(c => c.FYarnRequirementDetails.TRNSID)
                    @Html.HiddenFor(c => c.FYarnRequirementDetails.YSRID)
                    @Html.HiddenFor(c => c.FYarnRequirementDetails.TRNSDATE)

                    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="FYarnRequirementDetails.ORDER_TYPE" class="control-label"></label>
                            <select asp-for="FYarnRequirementDetails.ORDER_TYPE" class = "form-control js-example-basic-single">
                                <option selected value="OrderNo">Bulk</option>
                                <option value="RSNO">Sample</option>
                            </select>
                            <span asp-validation-for="FYarnRequirementDetails.ORDER_TYPE" class="text-danger"></span>
                        </div>
                    </div>
                    <div id="orderNoInfo" class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="FYarnRequirementDetails.ORDERNO" class="control-label"></label>
                            @Html.DropDownListFor(dt => dt.FYarnRequirementDetails.ORDERNO, new SelectList(Model.PosoViewModels, "Poid", "SO_NO"),
                                "Select Order No.", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                            <span asp-validation-for="FYarnRequirementDetails.ORDERNO" class="text-danger"></span>
                        </div>
                    </div>
                    <div id="RSNoInfo" class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="FYarnRequirementDetails.RSID" class="control-label"></label>
                            @Html.DropDownListFor(dt => dt.FYarnRequirementDetails.RSID, new SelectList(Model.RndSampleInfoDyeingList, "SDID", "RSOrder"),
                               "Select RS No.", new { @class = "form-control js-example-basic-single" })
                            <span asp-validation-for="FYarnRequirementDetails.RSID" class="text-danger"></span>
                        </div>
                    </div>

                    <div id="fab" class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <strong>
                                <label asp-for="PiDetails.STYLE.FABCODENavigation.STYLE_NAME" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control-bg form-control bg-e9ecef">
                                <label id="fabcode"></label>
                            </span>
                        </div>
                    </div>


                    <div id="progNo" class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="FYarnRequirementDetails.SETID" class="control-label"></label>
                            @Html.DropDownListFor(dt => dt.FYarnRequirementDetails.SETID, new SelectList(Model.PlProductionSetDistributions, "ID", "Name"),
                                "Select Set/Prog. No", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                            <span asp-validation-for="FYarnRequirementDetails.SETID" class="text-danger"></span>
                        </div>
                    </div>

                    <div id="sizingSlasherLength" class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <strong>
                                <label class="control-label">Sizing/Slasher Length</label>
                            </strong>
                            <span class="custom-form-control-bg form-control bg-e9ecef">
                                <label id="sizingLength"></label>
                            </span>
                        </div>
                    </div>

                    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12" id="count">
                        <div class="form-group">
                            <label asp-for="FYarnRequirementDetails.COUNTID" class="control-label"></label>
                            <select asp-for="FYarnRequirementDetails.COUNTID" class="form-control js-example-basic-single">
                                <option value="">Select Count Name</option>
                            </select>
                            <span asp-validation-for="FYarnRequirementDetails.COUNTID" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12 d-none" id="countRs">
                        <div class="form-group">
                            <label asp-for="FYarnRequirementDetails.COUNTID_RS" class="control-label"></label>
                            <select asp-for="FYarnRequirementDetails.COUNTID_RS" class="form-control js-example-basic-single">
                                <option value="">Select Count Name</option>
                            </select>
                            <span asp-validation-for="FYarnRequirementDetails.COUNTID_RS" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="FYarnRequirementDetails.LOTID" class="control-label"></label>
                            @Html.DropDownListFor(dt => dt.FYarnRequirementDetails.LOTID, new SelectList(Model.Lot, "LOTID", "LOTNO"),
                                "Select Lot No", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                            <span asp-validation-for="FYarnRequirementDetails.LOTID" class="text-danger"></span>
                        </div>
                    </div>

                    <div id="lotPrevious" class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <strong>
                                <label class="control-label">LOT</label>
                            </strong>
                            <span class="custom-form-control-bg form-control bg-e9ecef">
                                <label id="lot"></label>
                            </span>
                        </div>
                    </div>
                    <div id="buyerName" class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <strong>
                                <label class="control-label">Buyer Name</label>
                            </strong>
                            <span class="custom-form-control-bg form-control bg-e9ecef">
                                <label id="buyer"></label>
                            </span>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="FYarnRequirementDetails.UNIT" class="control-label"></label>
                            @Html.DropDownListFor(dt => dt.FYarnRequirementDetails.UNIT, new SelectList(Model.BasUnits, "UID", "UNAME", Model.BasUnits.FirstOrDefault()?.UID), "Select Unit", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                            <span asp-validation-for="FYarnRequirementDetails.UNIT" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="FYarnRequirementDetails.REQ_QTY" class="control-label"></label>
                            <input asp-for="FYarnRequirementDetails.REQ_QTY" class="form-control " />
                            <span asp-validation-for="FYarnRequirementDetails.REQ_QTY" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="FYarnRequirementDetails.REMARKS" class="control-label"></label>
                            <textarea asp-for="FYarnRequirementDetails.REMARKS" class="form-control" rows="1"></textarea>
                            <span asp-validation-for="FYarnRequirementDetails.REMARKS" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12"></div>
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12" id="reqKgs"></div>
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12" id="remKgs"></div>
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12" id="reqKgsSet"></div>
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12" id="remKgsSet"></div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mt-1">
                    <button id="btnCreateYarnRequirement" class="btn btn-info nextBtn pull-right" type="submit">Create</button>
                    <button id="addToList" class="btn btn-success pull-right" type="button">Add</button>
                    <a asp-action="GetYarnRequirementMaster" class="btn btn-dark pull-right">Back to List</a>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 table-responsive" id="yarnRequirementDetailsAddItem"></div>
            </div>
        </div>
    </form>
</div>

@section Styles {
    <link asp-append-version="true" href="~/css/CustomCSS/Stepper.css" rel="stylesheet" />
}

@section Scripts {
    @{await Html.RenderPartialAsync($"_ValidationScriptPartial_Except_jQuery");}
    <script asp-append-version="true" src="~/js/custom-js/Stepper.js"></script>
    <script asp-append-version="true" src="~/js/site-common.js"></script>
    <script asp-append-version="true" src="~/js/YarnRequirement/CreateYarnRequirement.js"></script>
}
@model YarnRequirementViewModel

@{
    ViewData["Title"] = "Details Yarn Requirement";
    Layout = Layout;
}

@{
    if (Model != null)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="m-b-md">
                            <h2 class="text-white btn btn-info">@Html.DisplayNameFor(e => e.FYarnRequirementMaster.YSRNO) : [ @Html.DisplayFor(e => e.FYarnRequirementMaster.YSRNO) ]</h2>
                        </div>
                    </div>
                </div>
                <div class="row details">
                    <div class="col-12">
                        <h2 class="panel-title text-success"><i class="fa fa-medium" aria-hidden="true"></i> Master</h2>
                        <hr />
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="FYarnRequirementMaster.YSRDATE" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.FYarnRequirementMaster.YSRDATE)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="FYarnRequirementMaster.REMARKS" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.FYarnRequirementMaster.REMARKS)
                            </span>
                        </div>
                    </div>
                    <div class="col-12 table-responsive">
                        @await Html.PartialAsync($"~/Views/FYarnRequirement/DetailsFYarnRequirementTable.cshtml", Model)
                    </div>
                </div>

                <div class="col-md-12">
                    @Html.ActionLink("Edit", $"EditFYarnRequirement", new { ysrId = Model.FYarnRequirementMaster.EncryptedId }, new { @class = "btn btn-warning pull-right mt-2" })
                    <a class="btn btn-dark pull-right mt-2" asp-action="GetYarnRequirementMaster" asp-controller="FYarnRequirement">Back to List</a>
                </div>
            </div>
        </div>
    }
}
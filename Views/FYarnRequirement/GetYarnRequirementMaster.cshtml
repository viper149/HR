
@model F_YARN_REQ_MASTER

@{
    ViewData["Title"] = "Yarn Requirement List";
    Layout = Layout;
}

<div class="x_panel">
    <div class="x_title">
        <h2>
            <i class="fa fa-list fa-lg text-info" aria-hidden="true"></i> Get @ViewData["Title"]
        </h2>
        <ul class="nav navbar-right panel_toolbox">
            <li class="mr-2">
                <p>
                    <a asp-action="CreateYarnRequirement" class="btn btn-primary"><i class="fa fa-plus-circle" aria-hidden="true"></i> Add</a>
                </p>
            </li>
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content table-responsive">
        <table class="table table-hover" id="table">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.YSRID)</th>
                    <th>@Html.DisplayNameFor(model => model.YSRNO)</th>
                    <th>@Html.DisplayNameFor(model => model.YSRDATE)</th>
                    <th>@Html.DisplayNameFor(model => model.SECID)</th>
                    <th>@Html.DisplayNameFor(model => model.SUBSECID)</th>
                    <th>@Html.DisplayNameFor(model => model.ORD_TYPE)</th>
                    <th>@Html.DisplayNameFor(model => model.REMARKS) </th>
                    <th>@Html.DisplayName("Actions")</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Styles
{
    <link asp-append-version="true" href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

@section Scripts
{
    <script asp-append-version="true" src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script asp-append-version="true" src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script asp-append-version="true" src="~/js/FYarnRequirement/GetFYarnRequirement.js"></script>
}
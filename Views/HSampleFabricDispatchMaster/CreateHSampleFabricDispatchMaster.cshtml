
@model CreateHSampleFabricDispatchMaster

@{
    ViewData["Title"] = "Sample Fabric HO Dispatch";
}

<div class="container-fluid">

    <h2><i class="fa fa-plus-circle text-success" aria-hidden="true"></i> <ins>Create @ViewData["Title"]</ins></h2>

    <form id="form" role="form" asp-action="PostCreateHSampleFabricDispatchMaster" enctype="multipart/form-data">
        <div class="panel panel-default">
            <div class="panel-body row">

                <div class="col-12 p-0">
                    <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12 float-left">
                        <div class="form-group">
                            <input asp-for="HSampleFabricDispatchMaster.ISRETURNABLE" class="form-control js-switch js-check-change" />
                            <label asp-for="HSampleFabricDispatchMaster.ISRETURNABLE" class="control-label"></label>
                            <span asp-validation-for="HSampleFabricDispatchMaster.ISRETURNABLE" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 float-right">
                        <div class="form-group">
                            <label asp-for="HSampleFabricDispatchMaster.RETURN_DATE" class="control-label"></label>
                            <input asp-for="HSampleFabricDispatchMaster.RETURN_DATE" class="form-control" />
                            <span asp-validation-for="HSampleFabricDispatchMaster.RETURN_DATE" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="HSampleFabricDispatchMaster.GPNO" class="control-label"></label>
                        <input asp-for="HSampleFabricDispatchMaster.GPNO" class="form-control border-primary" readonly="readonly" />
                        <span asp-validation-for="HSampleFabricDispatchMaster.GPNO" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="HSampleFabricDispatchMaster.ISSUE_DATE" class="control-label"></label>
                        <input asp-for="HSampleFabricDispatchMaster.ISSUE_DATE" class="form-control border-primary" />
                        <span asp-validation-for="HSampleFabricDispatchMaster.ISSUE_DATE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="HSampleFabricDispatchMaster.BUYER.BUYER_NAME" class="control-label"></label>
                        @Html.DropDownListFor(lc => lc.HSampleFabricDispatchMaster.BUYERID, new SelectList(Model.BasBuyerinfos, "BUYERID", "BUYER_NAME"), "Select a Buyer", htmlAttributes: new { @class = "form-control js-example-data-ajax" })
                        <span asp-validation-for="HSampleFabricDispatchMaster.BUYERID" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="HSampleFabricDispatchMaster.BRAND.BRANDNAME" class="control-label"></label>
                        @Html.DropDownListFor(lc => lc.HSampleFabricDispatchMaster.BRANDID, new SelectList(Model.BasBrandinfos, "BRANDID", "BRANDNAME"), "Select a Brand", htmlAttributes: new { @class = "form-control js-example-data-ajax" })
                        <span asp-validation-for="HSampleFabricDispatchMaster.BRANDID" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="HSampleFabricDispatchMaster.MERCH.MERCHANDISER_NAME" class="control-label"></label>
                        @Html.DropDownListFor(lc => lc.HSampleFabricDispatchMaster.MERCID, new SelectList(Model.Merchandisers, "MERCID", "MERCHANDISER_NAME"), "Select a Merchandiser", htmlAttributes: new { @class = "form-control js-example-data-ajax" })
                        <span asp-validation-for="HSampleFabricDispatchMaster.MERCID" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="HSampleFabricDispatchMaster.PURPOSE" class="control-label"></label>
                        <input asp-for="HSampleFabricDispatchMaster.PURPOSE" class="form-control border-primary" />
                        <span asp-validation-for="HSampleFabricDispatchMaster.PURPOSE" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h2 class="panel-title text-success"><i class="fa fa-hand-o-right"></i> Dispatch Details</h2>
                    <hr />
                </div>

                <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="HSampleFabricDispatchDetails.RCVD.DPD.FSampleFabricRcvD.SITEM.NAME" class="control-label"></label>
                        @Html.DropDownListFor(e => e.HSampleFabricDispatchDetails.RCVDID, new SelectList(Model.HSampleFabricReceivingDs, "RCVDID", "DPD.FSampleFabricRcvD.SITEM.NAME"), "Select an Item", htmlAttributes: new { @class = "form-control js-example-data-ajax" })
                        <span asp-validation-for="HSampleFabricDispatchDetails.RCVDID" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="HSampleFabricDispatchDetails.DEL_QTY" class="control-label"></label>
                        <input asp-for="HSampleFabricDispatchDetails.DEL_QTY" class="form-control" />
                        <span asp-validation-for="HSampleFabricDispatchDetails.DEL_QTY" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="HSampleFabricDispatchDetails.CSPRICE" class="control-label"></label>
                        <input asp-for="HSampleFabricDispatchDetails.CSPRICE" class="form-control" />
                        <span asp-validation-for="HSampleFabricDispatchDetails.CSPRICE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="HSampleFabricDispatchDetails.NEGO_PRICE" class="control-label"></label>
                        <input asp-for="HSampleFabricDispatchDetails.NEGO_PRICE" class="form-control" />
                        <span asp-validation-for="HSampleFabricDispatchDetails.NEGO_PRICE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="HSampleFabricDispatchDetails.REMARKS" class="control-label"></label>
                        <input asp-for="HSampleFabricDispatchDetails.REMARKS" class="form-control" />
                        <span asp-validation-for="HSampleFabricDispatchDetails.REMARKS" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 pb-1" id="StyleInfo"></div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <button class="btn btn-success pull-right" type="submit">Create</button>
                    <button id="btnAdd" class="btn btn-success pull-right" type="button">Add</button>
                    <a class="btn btn-dark pull-right" asp-action="GetHSampleFabricDispatchMaster">Back to List</a>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 table-responsive" id="HSampleFabricDispatchDetails"></div>
            </div>
        </div>
    </form>
</div>

@section Styles
{
    <link asp-append-version="true" href="~/lib/switchery/switchery.css" rel="stylesheet" />
}

@section Scripts {
    @{await Html.RenderPartialAsync($"_ValidationScriptPartial_Except_jQuery");}
    <script asp-append-version="true" src="~/lib/switchery/switchery.js"></script>
    <script asp-append-version="true" src="~/js/HSampleFabricDispatchMaster/CreateHSampleFabricDispatchMaster.js"></script>
}

@model PL_PRODUCTION_SETDISTRIBUTION

@{
    ViewData["Title"] = "Production Planning Group";
    Layout = Layout;
}

@{
    <div class="x_panel">
        <div class="x_title">
            <h2>
                <i class="fa fa-list fa-lg text-info" aria-hidden="true"></i> @ViewData["Title"]
            </h2>
            <ul class="nav navbar-right panel_toolbox">
                <li class="mr-2">
                    <p>
                        <a asp-action="CreateProductionGroup" class="btn btn-primary"><i class="fa fa-plus-circle" aria-hidden="true"></i> Add</a>
                    </p>
                </li>
                <li class="mr-2">
                    <div class="dropdown">
                        <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-print"></i> Reports
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
                            <a asp-action="RProductionGroup" class="dropdown-item" target="_blank"><i class="fa fa-print text-primary" aria-hidden="true"></i> Production Planning</a>
                        </div>
                    </div>
                </li>
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content table-responsive">
            <table class="table table-hover" id="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TRNSDATE)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PROG_.PROG_NO)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SUBGROUP.SUBGROUPNO)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SUBGROUP.GROUP.GROUP_NO)
                        </th>
                        <th>
                            @Html.DisplayName("Status")
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.REMARKS)
                        </th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
    }

@section Styles
{
    <link asp-append-version="true" href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

@section Scripts
{
    <script asp-append-version="true" src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script asp-append-version="true" src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script asp-append-version="true" src="~/js/PlProductionPlanGroupMaster/GetPendingStatus.js"></script>
}
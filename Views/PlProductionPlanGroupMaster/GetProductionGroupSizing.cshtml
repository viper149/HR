
@model PL_PRODUCTION_PLAN_MASTER

@{
    ViewData["Title"] = "Production Planning Group";
    Layout = Layout;
}

@{
    <div class="x_panel">
        <div class="x_title">
            <h2>
                <i class="fa fa-list fa-lg text-info" aria-hidden="true"></i> @ViewData["Title"]
            </h2>
            <ul class="nav navbar-right panel_toolbox">
                <li class="mr-2">
                    <p>
                        <a asp-action="CreateProductionGroup" class="btn btn-primary"><i class="fa fa-plus-circle" aria-hidden="true"></i> Add</a>
                    </p>
                </li>
                <li class="mr-2">
                    <div class="dropdown">
                        <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-print"></i> Reports
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
                            <a asp-action="RProductionGroup" class="dropdown-item" target="_blank"><i class="fa fa-print text-primary" aria-hidden="true"></i> Production Planning</a>
                        </div>
                    </div>
                </li>
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content table-responsive">
            <table class="table table-hover" id="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.GROUP_NO)
                        </th>
                        <th>
                            @Html.DisplayName("Style")
                        </th>
                        <th>
                            @Html.DisplayName("SO No")
                        </th>
                        <th>
                            @Html.DisplayName("Buyer")
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DYEING_REFERANCE)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SERIAL_NO)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DYEING_TYPE)
                        </th>
                        <th>
                            @Html.DisplayName("Shade")
                        </th>
                        <th>
                            @Html.DisplayName("Dyeing Complete?")
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.REMARKS)
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Group Production Sl.</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form asp-action="UpdateSerialProductionGroup" role="form">
                        @Html.HiddenFor(c => c.GROUPID)
                        <div class="form-group">
                            <label asp-for="SERIAL_NO" class="col-form-label">Serial No</label>
                            <input type="text" class="form-control" asp-for="SERIAL_NO">
                        </div>
                        <div class="form-group">
                            <label asp-for="REMARKS" class="col-form-label">Remarks</label>
                            <input class="form-control" asp-for="REMARKS">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="reset" class="btn btn-danger">Reset</button>
                            <button type="submit" class="btn btn-warning">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section Styles
{
    <link asp-append-version="true" href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

@section Scripts
{
    <script asp-append-version="true" src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script asp-append-version="true" src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script asp-append-version="true" src="~/js/PlProductionPlanGroupMaster/GetProductionGroup.js"></script>
}
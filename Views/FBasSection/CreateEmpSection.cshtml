
@model FBasSectionViewModel

@{
    ViewData["Title"] = "Create Employee Section";
    Layout = Layout;
}

<h2><i class="fa fa-plus-circle fa-lg text-success" aria-hidden="true"></i> Create Section</h2>
<hr />

<div class="row">
    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
        <form asp-action="CreateEmpSection">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FBasSection.SECNAME" class="control-label"></label>
                <input asp-for="FBasSection.SECNAME" class="form-control" />
                <span asp-validation-for="FBasSection.SECNAME" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FBasSection.DEPTID" class="control-label"></label>
                @Html.DropDownListFor(c => c.FBasSection.DEPTID, new SelectList(Model.FBasDepartments, "DEPTID", "DEPTNAME"), "Select Department", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                <span asp-validation-for="FBasSection.DEPTID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FBasSection.REMARKS" class="control-label"></label>
                <input asp-for="FBasSection.REMARKS" class="form-control" />
                <span asp-validation-for="FBasSection.REMARKS" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="GetEmpSection" class="btn btn-dark">Back to List</a>
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync($"_ValidationScriptPartial_Except_jQuery");}
}

@model BasTransportInfoViewModel

@{
    ViewData["Title"] = "Transport Information";
}

<h2><i class="fa fa-plus-circle text-success" aria-hidden="true"></i> Create @ViewData["Title"]</h2>
<hr />

<div class="container-fluid">

    <form asp-action="PostCreateBasTransportInfo">
        <div class="panel-body row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="BasTransportinfo.TRNSPNAME" class="control-label"></label>
                    <input asp-for="BasTransportinfo.TRNSPNAME" class="form-control" />
                    <span asp-validation-for="BasTransportinfo.TRNSPNAME" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="BasTransportinfo.ADDRESS" class="control-label"></label>
                    <input asp-for="BasTransportinfo.ADDRESS" class="form-control" />
                    <span asp-validation-for="BasTransportinfo.ADDRESS" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="BasTransportinfo.CPERSON" class="control-label"></label>
                    <input asp-for="BasTransportinfo.CPERSON" class="form-control" />
                    <span asp-validation-for="BasTransportinfo.CPERSON" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="BasTransportinfo.EMAIL" class="control-label"></label>
                    <input asp-for="BasTransportinfo.EMAIL" class="form-control" />
                    <span asp-validation-for="BasTransportinfo.EMAIL" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="BasTransportinfo.PHONE" class="control-label"></label>
                    <input asp-for="BasTransportinfo.PHONE" class="form-control" />
                    <span asp-validation-for="BasTransportinfo.PHONE" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="BasTransportinfo.REMARKS" class="control-label"></label>
                    <input asp-for="BasTransportinfo.REMARKS" class="form-control" />
                    <span asp-validation-for="BasTransportinfo.REMARKS" class="text-danger"></span>
                </div>
            </div>

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-group pull-right">
                    <a asp-action="GetBasTransportInfo" class="btn btn-dark" accesskey="b">Back to List</a>
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts
{
    @{await Html.RenderPartialAsync($"_ValidationScriptPartial_Except_jQuery");}
    <script>
        $(function () {

            $('#form').submit(function () {
                $(this).find(':submit').attr('disabled', 'disabled');
            });
        })
    </script>
}

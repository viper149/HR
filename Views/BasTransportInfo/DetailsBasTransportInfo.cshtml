
@model BasTransportInfoViewModel

@{
    ViewData["Title"] = "Transport Information";
}

<h2><i class="fa fa-info-circle text-success" aria-hidden="true"></i> Details @ViewData["Title"]</h2>
<hr />

@{
    if (Model != null)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-lg-12">
                        <h2 class="text-danger">@Html.DisplayNameFor(e => e.BasTransportinfo.TRNSPNAME) : [ @Model.BasTransportinfo.TRNSPNAME ]</h2>
                        <hr />
                    </div>
                </div>
                <div class="row details">
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="BasTransportinfo.ADDRESS" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.BasTransportinfo.ADDRESS)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="BasTransportinfo.CPERSON" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.BasTransportinfo.CPERSON)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="BasTransportinfo.EMAIL" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.BasTransportinfo.EMAIL)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="BasTransportinfo.PHONE" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.BasTransportinfo.PHONE)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="BasTransportinfo.REMARKS" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.BasTransportinfo.REMARKS)
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                @Html.ActionLink("Edit", "EditBasTransportInfo", new { trnspId = Model.BasTransportinfo.EncryptedId }, new { @class = "btn btn-warning pull-right" })
                <a class="btn btn-dark pull-right" asp-action="GetBasTransportInfo" asp-controller="BasTransportInfo">Back to List</a>
            </div>
        </div>
    }
}
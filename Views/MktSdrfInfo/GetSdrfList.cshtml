
@model MKT_SDRF_INFO

@{
    ViewData["Title"] = "Simple Development Requisition Form";
    Layout = Layout;
}


<div class="x_panel">
    <div class="x_title">
        <h2>
            <i class="fa fa-list fa-lg text-info" aria-hidden="true"></i> Sample Development Requisition Form (SDRF)
        </h2>
        <ul class="nav navbar-right panel_toolbox">
            @if (User.IsInRole("Marketing"))
            {
                <li class="mr-2">
                    <p>
                        <a asp-action="CreateSdrf" class="btn btn-primary"><i class="fa fa-plus-circle" aria-hidden="true"></i> Add</a>
                    </p>
                </li>
            }
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content table-responsive">
        <table class="table table-striped" id="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.SDRF_NO)</th>
                    <th>@Html.DisplayNameFor(model => model.TRANSDATE)</th>
                    <th>@Html.DisplayNameFor(model => model.AID)</th>
                    <th>@Html.DisplayNameFor(model => model.CONSTRUCTION)</th>
                    <th>@Html.DisplayName("Mkt. Team")</th>
                    <th>@Html.DisplayName("R&D Team")</th>
                    <th>Mkt. DGM App.</th>
                    <th>R&D App.</th>
                    <th>Pln. App.</th>
                    <th>Plant Head App.</th>

                    <th>Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Styles
{
    <link asp-append-version="true" href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

@section Scripts
{
    <script asp-append-version="true" src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script asp-append-version="true" src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script asp-append-version="true" src="~/js/sqrfInfo/GetSdrfInfo.js"></script>
}
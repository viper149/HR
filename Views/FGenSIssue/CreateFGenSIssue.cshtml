
@model FGenSIssueViewModel

@{
    ViewData["Title"] = "General Store Issue";
}

<h2><i class="fa fa-plus-circle text-success" aria-hidden="true"></i> Create @ViewData["Title"]</h2>

<div class="container-fluid">
    <form id="form" enctype="multipart/form-data" role="form" asp-action="CreateFGenSIssue">
        <div class="panel panel-default">
            <div class="panel-body row">

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h2 class="panel-title text-success"><i class="fa fa-shopping-cart" aria-hidden="true"></i> Issue Information</h2>
                    <hr />
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FGenSIssueMaster.GISSUEDATE" class="control-label"></label>
                        <input asp-for="FGenSIssueMaster.GISSUEDATE" class="form-control" />
                        <span asp-validation-for="FGenSIssueMaster.GISSUEDATE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FGenSIssueMaster.ISSUEID" class="control-label"></label>
                        @Html.DropDownListFor(dt => dt.FGenSIssueMaster.ISSUEID, new SelectList(Model.FBasIssueTypesList, "ISSUID", "ISSUTYPE"),
                            "Select Issue Type", new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="FGenSIssueMaster.ISSUEID" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FGenSIssueMaster.GSRID" class="control-label"></label>
                        <select asp-for="FGenSIssueMaster.GSRID" class="form-control js-example-basic-single">
                            <option value="">Select Requirement No.</option>
                        </select>
                        <span asp-validation-for="FGenSIssueMaster.GSRID" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12 d-none">
                    <div class="form-group">
                        <label asp-for="FGenSIssueMaster.ISSUETO" class="control-label"></label>
                        <input asp-for="FGenSIssueMaster.ISSUETO" class="form-control" />
                        <span asp-validation-for="FGenSIssueMaster.ISSUETO" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12 d-none">
                    <div class="form-group">
                        <label asp-for="FGenSIssueMaster.PURPOSE" class="control-label"></label>
                        <input asp-for="FGenSIssueMaster.PURPOSE" class="form-control" />
                        <span asp-validation-for="FGenSIssueMaster.PURPOSE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12 d-none">
                    <div class="form-group">
                        <label asp-for="FGenSIssueMaster.ISRETURNABLE" class="control-label"></label>
                        <select class="form-control js-example-basic-single" asp-for="FGenSIssueMaster.ISRETURNABLE">
                            <option value="">Select Return Type-</option>
                            <option value="true">Yes</option>
                            <option selected="selected" value="false">No</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FGenSIssueMaster.ISSUEBY" class="control-label"></label> <i aria-hidden="true" class="fa fa-info-circle text-info" title="Employee shown from your department."></i>
                        @Html.DropDownListFor(dt => dt.FGenSIssueMaster.ISSUEBY, new SelectList(Model.IssueFHrEmployees, "EMPID", "FIRST_NAME"),
                            "Select Employee", new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="FGenSIssueMaster.ISSUEBY" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FGenSIssueMaster.RECEIVEBY" class="control-label"></label> <i aria-hidden="true" class="fa fa-info-circle text-info" title="Employee shown from requisition sections."></i>
                        @Html.DropDownListFor(dt => dt.FGenSIssueMaster.RECEIVEBY, new SelectList(Model.ReceiveFHrEmployees, "EMPID", "FIRST_NAME"),
                            "Select Employee", new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="FGenSIssueMaster.RECEIVEBY" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FGenSIssueMaster.REMARKS" class="control-label"></label>
                        <input asp-for="FGenSIssueMaster.REMARKS" class="form-control" />
                        <span asp-validation-for="FGenSIssueMaster.REMARKS" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FGenSReqMaster.GSRDATE" class="control-label" readonly></label>
                        <input asp-for="FGenSReqMaster.GSRDATE" class="form-control" readonly />
                        <span asp-validation-for="FGenSReqMaster.GSRDATE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">Requirement By</label>
                        <span class="custom-form-control-bg form-control bg-e9ecef" id="reqEmp">
                        </span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">Department</label>
                        <span class="custom-form-control-bg form-control bg-e9ecef" id="deptn">
                        </span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">Section</label>
                        <span class="custom-form-control-bg form-control bg-e9ecef" id="secn">
                        </span>
                    </div>
                </div>

                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FGenSIssueMaster.SRNO" class="control-label"></label>
                        <input asp-for="FGenSIssueMaster.SRNO" class="form-control" />
                        <span asp-validation-for="FGenSIssueMaster.SRNO" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FGenSIssueMaster.SRDATE" class="control-label"></label>
                        <input asp-for="FGenSIssueMaster.SRDATE" class="form-control" />
                        <span asp-validation-for="FGenSIssueMaster.SRDATE" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h2 class="panel-title text-success"><i class="fa fa-eye" aria-hidden="true"></i> Issue Details</h2>
                    <hr />
                </div>

                @Html.HiddenFor(c => c.FGenSIssueDetails.GISSUEID)
                @Html.HiddenFor(c => c.FGenSIssueDetails.GREQ_DET_ID)
                
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FGenSIssueDetails.PRODUCTID" class="control-label"></label>
                        <select asp-for="FGenSIssueDetails.PRODUCTID" class="form-control js-example-basic-single">
                            <option value="">Select Product</option>
                        </select>
                        <span asp-validation-for="FGenSIssueDetails.PRODUCTID" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">Unit</label>
                        <span class="custom-form-control-bg form-control bg-e9ecef" id="unit">
                        </span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">Remaining Balance</label>
                        <span class="custom-form-control-bg form-control bg-e9ecef" id="balance">
                        </span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">Request Quantity</label>
                        <span class="custom-form-control-bg form-control bg-e9ecef" id="req_qty">
                        </span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FGenSIssueDetails.ISSUE_QTY" class="control-label"></label>
                        <input asp-for="FGenSIssueDetails.ISSUE_QTY" class="form-control" />
                        <span asp-validation-for="FGenSIssueDetails.ISSUE_QTY" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FGenSIssueDetails.REMARKS" class="control-label"></label>
                        <input asp-for="FGenSIssueDetails.REMARKS" class="form-control" />
                        <span asp-validation-for="FGenSIssueDetails.REMARKS" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <button class="btn btn-success pull-right" type="submit" id="btn_submit">Create</button>
                    <button class="btn btn-info pull-right" id="addToList" type="button">Add</button>
                    <a asp-action="GetFGenSIssue" class="btn btn-dark pull-right">Back to List</a>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 table-hover table-responsive" id="fGenSIssueDetailsTable"></div>
            </div>

        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync($"_ValidationScriptPartial_Except_jQuery");}
    <script asp-append-version="true" src="~/js/GeneralStore/Issue/CreateFGenSIssue.js"></script>
}
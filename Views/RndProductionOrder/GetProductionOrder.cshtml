
@model RND_PRODUCTION_ORDER

@{
    ViewData["Title"] = "SO Information";
    Layout = Layout;
}

<div class="x_panel">
    <div class="x_title">
        <h2>
            <i class="fa fa-list fa-lg text-info" aria-hidden="true"></i> Get @ViewData["Title"]
        </h2>
        <ul class="nav navbar-right panel_toolbox">
            <li class="mr-2">
                <p>
                    <a asp-action="CreateProductionOrder" class="btn btn-primary">
                        <i class="fa fa-plus-circle" aria-hidden="true"></i> Add
                    </a>
                </p>
            </li>
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content table-responsive">
        <table class="table" id="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CREATED_AT)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OTYPEID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SO.PIMASTER.PINO)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ORDERNO)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SO.STYLE.FABCODE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ORPTID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ORDER_QTY_YDS)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ORDER_QTY_MTR)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.REMARKS)
                    </th>
                    <th>
                        @Html.DisplayName("Action")
                    </th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Styles
{
    <link asp-append-version="true" href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

@section Scripts
{
    <script asp-append-version="true" src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script asp-append-version="true" src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script asp-append-version="true" src="~/js/rndProduction/rndGetProductionOrder.js"></script>
}

@model COM_EX_PIMASTER

@{
    ViewData["Title"] = "PI Information";
}

<div class="x_panel">
    <div class="x_title">
        <h2>
            <i class="fa fa-list fa-lg text-info" aria-hidden="true"></i> @ViewData["Title"] List
        </h2>
        <ul class="nav navbar-right panel_toolbox">
            <li class="mr-2">
                <p>
                    <a asp-action="CreateComEXPIMaster" class="btn btn-primary"><i class="fa fa-plus-circle" aria-hidden="true"></i> Add</a>
                </p>
            </li>
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content table-responsive table-hover">
        <table class="table table-striped" id="table">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.PIID)</th>
                    <th>@Html.DisplayNameFor(model => model.PINO)</th>
                    <th>@Html.DisplayNameFor(model => model.PIDATE)</th>
                    <th>@Html.DisplayNameFor(model => model.LcNoPi)</th>
                    <th>@Html.DisplayNameFor(model => model.FileNo)</th>
                    <th>PI Qty</th>
                    <th>Total PI Value</th>
                    <th>@Html.DisplayNameFor(model => model.BUYER.BUYER_NAME)</th>
                    <th>Advising Bank</th>
                    <th>Team Person</th>
                    <th>@Html.DisplayName("Actions")</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Styles
{
    <link asp-append-version="true" href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

@section Scripts
{
    <script asp-append-version="true" src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script asp-append-version="true" src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script asp-append-version="true" src="~/js/comEx/GetComEXPIInfoWithPaged.js"></script>
}
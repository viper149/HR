@model FYarnReqSViewModel

@{
    ViewData["Title"] = "Details Yarn Requirement (Sample)";
    Layout = Layout;
}

@{
    if (Model != null)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="m-b-md">
                            <h2 class="text-white btn btn-info">@Html.DisplayNameFor(e => e.FYarnRequirementMasterS.YSRNO) : [ @Html.DisplayFor(e => e.FYarnRequirementMasterS.YSRNO) ]</h2>
                        </div>
                    </div>
                </div>
                <div class="row details">
                    <div class="col-12">
                        <h2 class="panel-title text-success"><i class="fa fa-medium" aria-hidden="true"></i> Master</h2>
                        <hr />
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="FYarnRequirementMasterS.YSRDATE" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.FYarnRequirementMasterS.YSRDATE)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="FYarnRequirementMasterS.REMARKS" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.FYarnRequirementMasterS.REMARKS)
                            </span>
                        </div>
                    </div>
                    <div class="col-12 table-responsive">
                        @await Html.PartialAsync($"~/Views/FYarnReqS/DetailsFYarnRequirementTable.cshtml", Model)
                    </div>
                </div>

                <div class="col-md-12">
                    <a asp-action="EditFYarnReqS" asp-route-ysrId="@Model.FYarnRequirementMasterS.EncryptedId" class="btn btn-warning pull-right">Edit</a>
                    <a class="btn btn-dark pull-right mt-2" asp-action="GetFYarnReqS" asp-controller="FYarnReqS">Back to List</a>
                </div>
            </div>
        </div>
    }
}
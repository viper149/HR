@model BAS_SUPP_CATEGORY

@{
    ViewData["Title"] = "EditBasSupplierCategory";
    Layout = Layout;
}

<h2><i class="fa fa-lg fa-edit text-warning"></i> Update Supplier Category</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditBasSupplierCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @Html.HiddenFor(c => c.SCATID)
            @Html.HiddenFor(c => c.EncryptedId)

            <div class="form-group">
                <label asp-for="CATNAME" class="control-label"></label>
                <input asp-for="CATNAME" class="form-control" />
                <span asp-validation-for="CATNAME" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="REMARKS" class="control-label"></label>
                <input asp-for="REMARKS" class="form-control" />
                <span asp-validation-for="REMARKS" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="GetBasSupplierCategoriesWithPaged" class="btn btn-dark" accesskey="b">Back to List</a>
                <input type="submit" value="Update" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>



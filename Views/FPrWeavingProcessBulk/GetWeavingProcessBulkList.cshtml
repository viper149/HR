
@model F_PR_WEAVING_PROCESS_MASTER_B
@{
    ViewData["Title"] = "Weaving Process Bulk";
    Layout = Layout;
}

@{
    <div class="x_panel">
        <div class="x_title">
            <h2>
                <i class="fa fa-list fa-lg text-info" aria-hidden="true"></i> Weaving Process Bulk
            </h2>
            <ul class="nav navbar-right panel_toolbox">
                <li class="mr-4">
                    <p>
                        <a asp-action="CreateWeavingProcessBulk" class="btn btn-primary"><i class="fa fa-plus-circle" aria-hidden="true"></i> Add</a>
                    </p>
                </li>
                <li class="mr-4">
                    <p>
                        <a asp-controller="Reports" asp-action="RWeavingDeliveryShiftWiseReport" class="btn btn-primary"><i class="fa fa-plus-circle" aria-hidden="true"></i> S/W Delivery Report</a>
                    </p>
                </li>
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content table-responsive">
            <table class="table" id="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.WV_PROCESSID)</th>
                        <th>@Html.DisplayName("SO NO / RS NO")</th>
                        <th>@Html.DisplayName("Style No / Dyeing Ref")</th>
                        <th>@Html.DisplayNameFor(model => model.SETID)</th>
                        <th>@Html.DisplayNameFor(model => model.WV_PROCESS_DATE)</th>
                        <th>@Html.DisplayNameFor(model => model.REMARKS)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

}

@section Styles
{
    <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/lib/datatables/css/customerDatatable.css" rel="stylesheet" />
}

@section Scripts
{
    <script asp-append-version="true" src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script asp-append-version="true" src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script asp-append-version="true" src="~/lib/datatables/js/customerDatatable.js"></script>
    <script asp-append-version="true">
        $(document).ready(function() {
            $('#table').dataTable({
                "searchPanes": true,
                "processing": true,
                "serverSide": true,
                "filter": true,
                "order": [0, "desc"],
                "pageLength": 25,
                "lengthMenu": [10, 25, 50, 100, 200, 500, 1000],
                "ajax": {
                    "async": "true",
                    "url": '@Url.Action("GetTableData", "FPrWeavingProcessBulk")',
                    "type": "POST",
                    "datatype": "json",
                    //"success": function (data) {
                    //    console.log(data);
                    //}
                },
                "columnDefs": [
                    {
                        "targets": [6],
                        "orderable": false,
                        "searchable": false
                    }
                ],
                "language": {
                    "searchPlaceholder": "Search for your desire results",
                    "search": '<i class="fa fa-2x fa-search" aria-hidden="true"></i>',
                    "emptyTable": '<h3>No data available</h3>',
                    "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                    "infoFiltered": "(filtered from _MAX_ total entries)",
                    "thousands": ",",
                    "processing": "<i class='fa fa-4x fa-spinner' aria-hidden='true'></i>",
                    "zeroRecords": "<h3>No matching records found</h3>",
                    "paginate": {
                        "first": "<i class='fa fa-angle-double-left' aria-hidden='true'></i>",
                        "last": "<i class='fa fa-angle-double-right' aria-hidden='true'></i>",
                        "next": "<i class='fa fa-angle-right' aria-hidden='true'></i>",
                        "previous": "<i class='fa fa-angle-left' aria-hidden='true'></i>"
                    },
                    "aria": {
                        "sortAscending": ": activate to sort column ascending",
                        "sortDescending": ": activate to sort column descending"
                    }
                },
                "columns": [
                    { "data": "wV_PROCESSID", "name": "WV_PROCESSID", "autoWidth": true, "visible": false },
                    {
                        "render": function (data, type, row) {
                           return row.set.proG_.blK_PROG_.rndProductionOrder.so != null ? row.set.proG_.blK_PROG_.rndProductionOrder.so.sO_NO : row.set.proG_.blK_PROG_.rndProductionOrder.rs.rsOrder;
                       } 
                    },
                    { "data": "set.proG_.blK_PROG_.rndProductionOrder.so.style.fabcodeNavigation.stylE_NAME", "name": "SO", "autoWidth": true },
                    { "data": "set.proG_.proG_NO", "name": "SET", "autoWidth": true },
                    { "data": "wV_PROCESS_DATE", "name": "DATE", "autoWidth": true },
                    { "data": "remarks", "name": "REMARKS", "autoWidth": true },
                    {
                        "render": function(data, type, row) {
                            return "<a target='_blank' title='Print Weaving Delivery Report' href='/FPrWeavingProcessBulk/RWeavingDeliveryReport?progNo=" + row.set.proG_.proG_NO + "' class='fa fa-print fa-2x-custom text-primary mr-2'></a>" + "<a href='/FPrWeavingProcessBulk/DetailsWeavingProcessBulk?id=" + row.encryptedId + "' class='fa fa-info-circle fa-2x-custom text-info mr-2'></a> <a href='/FPrWeavingProcessBulk/EditWeavingProcessBulk?id=" + row.encryptedId + "' class='fa fa-edit fa-2x-custom text-warning mr-2'></a>" + "<a href='/FPrWeavingProcessBulk/DeleteWeavingProcessBulk?id=" + row.encryptedId + "' class='fa fa-trash fa-2x-custom text-danger mr-2'></a>";
                        }
                    }
                ]
            });
        });
    </script>
}
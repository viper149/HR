@model FFsClearanceWastageTransferViewModel

@{
    ViewData["Title"] = "Wastage Transfer";
    Layout = Layout;
}

<h2><i class="fa fa-plus-circle fa-lg text-success" aria-hidden="true"></i>Create @ViewData["Title"]</h2>
<hr />

<div class="container-fluid">
    <form id="form" role="form" asp-action="CreateFFsClearanceWastageTransfer">
        <div class="panel panel-default setup-content" id="step-1">
            <div class="panel-body row">
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsClearanceWastageTransfer.TRANSDATE" class="control-label"></label>
                        <input asp-for="FFsClearanceWastageTransfer.TRANSDATE" class="form-control" />
                        <span asp-validation-for="FFsClearanceWastageTransfer.TRANSDATE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsClearanceWastageTransfer.ITEM" class="control-label"></label>
                        @Html.DropDownListFor(dt => dt.FFsClearanceWastageTransfer.ITEM, new SelectList(Model.FFsClearanceWastageItemsList, "IID", "INAME"), "Select Item", new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="FFsClearanceWastageTransfer.ITEM" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsClearanceWastageTransfer.QTY_YDS" class="control-label"></label>
                        <input asp-for="FFsClearanceWastageTransfer.QTY_YDS" class="form-control" />
                        <span asp-validation-for="FFsClearanceWastageTransfer.QTY_YDS" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsClearanceWastageTransfer.QTY_KG" class="control-label"></label>
                        <input asp-for="FFsClearanceWastageTransfer.QTY_KG" class="form-control" />
                        <span asp-validation-for="FFsClearanceWastageTransfer.QTY_KG" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsClearanceWastageTransfer.CLRBY" class="control-label"></label>
                        @Html.DropDownListFor(dt => dt.FFsClearanceWastageTransfer.CLRBY, new SelectList(Model.FHrEmployeesList, "EMPID", "FIRST_NAME"), "Select Employee", new { @class = "form-control js-example-basic-single" })
                        <span asp-validation-for="FFsClearanceWastageTransfer.CLRBY" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsClearanceWastageTransfer.WTRNO" class="control-label"></label>
                        <input asp-for="FFsClearanceWastageTransfer.WTRNO" class="form-control" />
                        <span asp-validation-for="FFsClearanceWastageTransfer.WTRNO" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="FFsClearanceWastageTransfer.REMARKS" class="control-label"></label>
                        <input asp-for="FFsClearanceWastageTransfer.REMARKS" class="form-control" />
                        <span asp-validation-for="FFsClearanceWastageTransfer.REMARKS" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <button class="btn btn-success pull-right" type="submit">Create</button>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 table-responsive table-hover">
                    @await Html.PartialAsync($"~/Views/FFsClearanceWastageTransfer/GetFFsClearanceWastageTransfer.cshtml", Model.FFsClearanceWastageTransfer)
                </div>
            </div>
        </div>
    </form>
</div>

@section Styles
{
    <link asp-append-version="true" href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

@section Scripts
{
    @{await Html.RenderPartialAsync($"_ValidationScriptPartial_Except_jQuery");}
    <script asp-append-version="true" src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script asp-append-version="true" src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script asp-append-version="true" src="~/js/FFsClearanceWastageTransfer/GetFFsClearanceWastageTransfer.js"></script>
}
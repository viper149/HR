@model WeavingChartDataViewModel

@{
    ViewData["Title"] = "Weaving Chart Data";
}

<div class="row text-primary">
    <h2>Weaving Data</h2>
</div>
<div class="row bg-light">
    <div class="form-group col-sm-6 col-md-6 col-lg-6 pt-2">
        <label asp-for="WeavingProductionRapier"></label>
        <span class="custom-form-control form-control text-dark ">
            @Model.WeavingProductionRapier
        </span>
    </div>
    <div class="form-group col-sm-6 col-md-6 col-lg-6 pt-2">
        <label asp-for="WeavingProductionAirjet"></label>
        <span class="custom-form-control form-control text-dark ">
            @Model.WeavingProductionAirjet
        </span>
    </div>
    <div class="form-group col-sm-12 col-md-12 col-lg-12 pt-2">
        <label>Total:</label>
        <span class="custom-form-control form-control text-dark ">
            @(Model.WeavingProductionRapier + Model.WeavingProductionAirjet)
        </span>
    </div>
</div>
    <div class="col-xl-4 col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Ball/Rope Warping</h5>
                <div class="card-header-right">
                    <ul class="list-unstyled card-option">
                        <li><i class="fa fa fa-wrench open-card-option"></i></li>
                        <li><i class="fa fa-window-maximize full-card"></i></li>
                        <li><i class="fa fa-minus minimize-card"></i></li>
                        <li><i class="fa fa-refresh reload-card"></i></li>
                        <li><i class="fa fa-trash close-card"></i></li>
                    </ul>
                </div>
            </div>

            <div class="card-block">
                @{ var low = Math.Abs(@ViewBag.RopeWarpingProductionData.ComparisonMonthlyRopeWarping);}
                @if (@ViewBag.RopeWarpingProductionData.ComparisonMonthlyRopeWarping >= 0)
                {
                    <p class="text-c-green f-w-500"><i class="feather icon-chevrons-up m-r-5"></i> @ViewBag.RopeWarpingProductionData.ComparisonMonthlyRopeWarping Yds Higher than last month</p>
                }
                else
                {
                    <p class="text-c-pink f-w-500"><i class="feather icon-chevrons-down m-r-5"></i> @low Yds Lower than last month</p>
                }

                <div class="row">
                    <div class="col-4 b-r-default">
                        <p class="text-muted m-b-5">Overall</p>
                        <h5>@ViewBag.RopeWarpingProductionData.TotalRopeWarping Yds</h5>
                    </div>
                    <div class="col-4 b-r-default">
                        <p class="text-muted m-b-5">Monthly</p>
                        <h5>@ViewBag.RopeWarpingProductionData.MonthlyRopeWarping Yds</h5>
                    </div>
                    <div class="col-4">
                        <p class="text-muted m-b-5">Day</p>
                        <h5>@ViewBag.RopeWarpingProductionData.TodaysRopeWarping Yds</h5>
                    </div>
                </div>
            </div>
            <canvas id="tot-lead" height="150"></canvas>
        </div>
    </div>

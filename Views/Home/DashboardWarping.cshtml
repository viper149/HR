    <div class="col-xl-12 col-md-12">
        <div class="card table-card">
            <div class="card-header">
                <h5>Pending Sets</h5>
                <div class="card-header-right">
                    <ul class="list-unstyled card-option">
                        <li><i class="fa fa fa-wrench open-card-option"></i></li>
                        <li><i class="fa fa-window-maximize full-card"></i></li>
                        <li><i class="fa fa-minus minimize-card"></i></li>
                        <li><i class="fa fa-refresh reload-card"></i></li>
                        <li><i class="fa fa-trash close-card"></i></li>
                    </ul>
                </div>
            </div>
            <div class="card-block">
                <div class="table-responsive">
                    <table class="table table-hover table-borderless">
                        <thead>
                            <tr>
                                <th>@Html.DisplayName("#")</th>
                                <th>@Html.DisplayName("Set No")</th>
                                <th>@Html.DisplayName("Type")</th>
                                <th>@Html.DisplayName("Plan Date")</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                @for (var i = 0; i < @ViewBag.WarpingPendingSetList.Count; i++)
                                {
                                <tr>
                                    <td>@(i+1)</td>
                                    <td>@ViewBag.WarpingPendingSetList[i].PROG_.PROG_NO</td>
                                    <td>@ViewBag.WarpingPendingSetList[i].PROG_.PROGRAM_TYPE</td>
                                    <td>@ViewBag.WarpingPendingSetList[i].TRNSDATE</td>
                                </tr>
                            }
                                </tr>
                            </tbody>
                        </table>
                        <div class="text-right m-r-20">
                            <a href="#!" class=" b-b-primary text-primary">View all Sets</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




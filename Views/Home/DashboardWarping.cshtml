                    </div>
                    <div class="col-6">
                        <div data-label="@ViewBag.MonthlyWarpingPendingsAndCompleteSets.MonthlyPendingPercent %" class="radial-bar radial-bar-30 radial-bar-lg radial-bar-primary"></div>
                        <h6 class="text-muted">Remaining(Sets)</h6>
                        <p class="text-muted">@ViewBag.MonthlyWarpingPendingsAndCompleteSets.MonthlyWarpingPendingSets</p>
                        <button class="btn btn-primary btn-outline-primary btn-round btn-sm">Manage</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- statustic-card start -->

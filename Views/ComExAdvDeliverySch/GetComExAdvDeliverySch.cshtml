@model COM_EX_ADV_DELIVERY_SCH_MASTER

@{
    ViewData["Title"] = "Advance Delivery Schedule";
}

<div class="x_panel">
    <div class="x_title">
        <h2>
            <i class="fa fa-list fa-lg text-info" aria-hidden="true"></i> @ViewData["Title"] List
        </h2>
        <ul class="nav navbar-right panel_toolbox">
            <li class="mr-2">
                <p>
                    <a asp-action="CreateComExAdvDeliverySch" class="btn btn-primary"><i class="fa fa-plus-circle" aria-hidden="true" accesskey="a"></i> Add</a>
                </p>
            </li>
            <li class="mr-2">
                <p>
                    <a asp-action="RComExAdvDeliverySch" asp-controller="Reports" class="btn btn-info"><i class="fa fa-print" aria-hidden="true" accesskey="r"></i> Report</a>
                </p>
            </li>
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content table-responsive table-hover">
        <table class="table table-striped" id="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.DSID)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.DSNO)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.DSDATE)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.DSTYPE)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.BUYER_ID) </th>
                <th scope="col">@Html.DisplayNameFor(model => model.REMARKS) </th>
                <th scope="col">@Html.DisplayName("Actions")</th>

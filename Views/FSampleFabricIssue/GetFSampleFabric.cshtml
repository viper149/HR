
@model F_SAMPLE_FABRIC_ISSUE

@{
    ViewData["Title"] = "Sample Fabric Issue";
}

<div class="x_panel">
    <div class="x_title">
        <h2><i class="fa fa-list fa-lg text-info" aria-hidden="true"></i> Get @ViewData["Title"]</h2>
        <ul class="nav navbar-right panel_toolbox">
            <li class="mr-2">
                <p>
                    <a asp-action="CreateFSampleFabric" class="btn btn-primary"><i class="fa fa-plus-circle" aria-hidden="true"></i> Add </a>
                </p>
            </li>
            <li class="mr-2">
                <p>
                    <a asp-action="RFSampleFabric" class="btn btn-info" target="_blank"><i class="fa fa-print" aria-hidden="true"></i> Reports </a>
                </p>
            </li>
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content table-responsive table-hover">
        <table class="table" id="table">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.SFIID)</th>
                    <th>@Html.DisplayNameFor(model => model.REQ_DATE)</th>
                    <th>@Html.DisplayNameFor(model => model.SRNO)</th>
                    <th>@Html.DisplayNameFor(model => model.ISSUE_DATE)</th>
                    <th>@Html.DisplayNameFor(model => model.BUYER.BUYER_NAME)</th>
                    <th>@Html.DisplayNameFor(model => model.BRAND.BRANDNAME)</th>
                    <th>@Html.DisplayNameFor(model => model.MARCHANDISER_NAME)</th>
                    <th>@Html.DisplayNameFor(model => model.MKT_TEAM.PERSON_NAME)</th>
                    <th>@Html.DisplayNameFor(model => model.REMARKS)</th>
                    <th>@Html.DisplayName("Actions")</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Styles
{
    <link asp-append-version="true" href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

@section Scripts
{
    <script asp-append-version="true" src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script asp-append-version="true" src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script asp-append-version="true" src="~/js/FSampleFabricIssue/GetFSampleFabricIssue.js"></script>
}
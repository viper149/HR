@model EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
}

<hr />

<form asp-action="EditRole">
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(yl => yl.Id)
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 d-flex justify-content-end">
                <a class="btn btn-dark" asp-action="ListRoles" asp-controller="Administrator" accesskey="b">Back to List</a>
                <input type="submit" value="Update" class="btn btn-warning" />
            </div>
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="card col-lg-4 col-md-4 col-sm-6 col-xs-12 mr-4">
            <div class="card-header d-flex justify-content-between">
                <div>
                    <h5>Users in this role</h5>
                </div>
                <div>
                    @Html.ActionLink("", "EditUsersInRole", new { roleId = @Model.Id }, new { @class = "fa fa-edit fa-2x text-warning mr-2" })
                    @*<a class="btn btn-warning" asp-action="EditUsersInRole" asp-controller="Administrator" asp-route-userId="@Model.Id">
                            Add/Remove Users
                        </a>*@
                </div>
            </div>
            <div class="card-body">
                @if (Model.Users.Any())
                {
                    foreach (var user in Model.Users)
                    {
                        <h5 class="card-title">@user</h5>
                    }
                }
                else
                {
                    <h6 class="card-title">None at the moment</h6>
                }
            </div>
        </div>
    </div>
</form>











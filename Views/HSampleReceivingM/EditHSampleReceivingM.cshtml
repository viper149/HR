
@using DenimERP.ViewModels.Tips
@model CreateHSampleReceivingMViewModel

@{
    ViewData["Title"] = "Edit Head Office Sample Receive";
    Layout = Layout;
}

<h2>
    <i class="fa fa-edit fa-lg text-success" aria-hidden="true"></i> Sample Garments <i class="fa fa-at text-info">Receive </i>
    <i class="fa fa-user-secret" aria-hidden="true" data-toggle="modal" data-target="#rules" title="User Secret"></i>
</h2>

@await Html.PartialAsync($"~/Views/Tips/UserSecrets.cshtml", new UserSecrets(new[] { true, true, true, true, true }))

<div class="container-fluid">

    <form id="form" role="form" asp-action="EditHSampleReceivingM" enctype="multipart/form-data">
        <div class="panel panel-default">
            <div class="panel-body row">
                @Html.HiddenFor(e => e.HSampleReceivingM.RCVID)
                @Html.HiddenFor(e => e.HSampleReceivingM.EncryptedId)
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="HSampleReceivingM.RCVDATE" class="control-label required"></label>
                        <input asp-for="HSampleReceivingM.RCVDATE" class="form-control" />
                        <span asp-validation-for="HSampleReceivingM.RCVDATE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="HSampleReceivingM.GPNO" class="control-label required"></label>
                        <input asp-for="HSampleReceivingM.GPNO" class="form-control" readonly />
                        <span asp-validation-for="HSampleReceivingM.GPNO" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="HSampleReceivingM.GPDATE" class="control-label required"></label>
                        <input asp-for="HSampleReceivingM.GPDATE" class="form-control" readonly />
                        <span asp-validation-for="HSampleReceivingM.GPDATE" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="HSampleReceivingM.DR.DRIVER_NAME" class="control-label required"></label>
                        <input asp-for="HSampleReceivingM.DR.DRIVER_NAME" class="form-control" readonly />
                        <span asp-validation-for="HSampleReceivingM.DR.DRIVER_NAME" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label asp-for="HSampleReceivingM.V.VNUMBER" class="control-label required"></label>
                        <input asp-for="HSampleReceivingM.V.VNUMBER" class="form-control" readonly />
                        <span asp-validation-for="HSampleReceivingM.V.VNUMBER" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 p-0">
                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="HSampleReceivingM.REMARKS" class="control-label"></label>
                            <textarea rows="5" asp-for="HSampleReceivingM.REMARKS" class="form-control bg-info text-white rounded"></textarea>
                            <span asp-validation-for="HSampleReceivingM.REMARKS" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <button class="btn btn-warning pull-right" type="submit">Update</button>
                    <a class="btn btn-dark pull-right" asp-action="GetHSampleReceivingM">Back to List</a>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 table-responsive" id="FSampleGarmentRcvD">
                    @{
                        if (Model.HSampleReceivingM.H_SAMPLE_RECEIVING_D.Any())
                        {
                            <table class="table table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>#</th>
                                        <th>@Html.DisplayNameFor(e => e.HSampleReceivingD.TRNS.SITEM.NAME)</th>
                                        <th>@Html.DisplayNameFor(e => e.HSampleReceivingD.BUYER.BUYER_NAME)</th>
                                        <th>@Html.DisplayNameFor(e => e.HSampleReceivingD.U.UNAME)</th>
                                        <th>@Html.DisplayNameFor(e => e.HSampleReceivingD.QTY)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (var i = 0; i < Model.HSampleReceivingM.H_SAMPLE_RECEIVING_D.ToList().Count; i++)
                                    {
                                        <tr>
                                            <td>@(i + 1)</td>
                                            <td>
                                                @Html.HiddenFor(e => e.HSampleReceivingM.H_SAMPLE_RECEIVING_D.ToList()[i].RCVDID)
                                                @Html.HiddenFor(e => e.HSampleReceivingM.H_SAMPLE_RECEIVING_D.ToList()[i].RCVID)
                                                @Model.HSampleReceivingM.H_SAMPLE_RECEIVING_D.ToList()[i].TRNS?.SITEM?.NAME
                                            </td>
                                            <td>
                                                @Html.HiddenFor(e => e.HSampleReceivingM.H_SAMPLE_RECEIVING_D.ToList()[i].BUYERID)
                                                @Model.HSampleReceivingM.H_SAMPLE_RECEIVING_D.ToList()[i].BUYER?.BUYER_NAME
                                            </td>
                                            <td>
                                                @Html.HiddenFor(e => e.HSampleReceivingM.H_SAMPLE_RECEIVING_D.ToList()[i].UID)
                                                @Model.HSampleReceivingM.H_SAMPLE_RECEIVING_D.ToList()[i].U?.UNAME
                                            </td>
                                            <td>
                                                @Html.HiddenFor(e => e.HSampleReceivingM.H_SAMPLE_RECEIVING_D.ToList()[i].QTY)
                                                @Model.HSampleReceivingM.H_SAMPLE_RECEIVING_D.ToList()[i].QTY
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    }
                </div>
            </div>
        </div>
    </form>
</div>

@section Styles {
    <link href="~/css/CustomCSS/Stepper.css" rel="stylesheet" asp-append-version="true" />
}

@section Scripts {
    @{await Html.RenderPartialAsync($"_ValidationScriptPartial_Except_jQuery");}
    <script asp-append-version="true" src="~/js/custom-js/Stepper.js"></script>
    <script asp-append-version="true" src="~/js/site-common.js"></script>
}

@model CreateHSampleReceivingMViewModel

@{
    ViewData["Title"] = "Details Head Office Sample Receive";
    Layout = Layout;
}

@{
    if (Model != null)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="m-b-md">
                            <h2 class="text-white btn btn-info">@Html.DisplayNameFor(e => e.HSampleReceivingM.RCVDATE) : [ @Html.DisplayFor(e => e.HSampleReceivingM.RCVDATE) ]</h2>
                            <hr />
                        </div>
                    </div>
                </div>
                <div class="row details">
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="HSampleReceivingM.GPNO" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.HSampleReceivingM.GPNO)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="HSampleReceivingM.GPDATE" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.HSampleReceivingM.GPDATE)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="HSampleReceivingM.DR.DRIVER_NAME" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.HSampleReceivingM.DR.DRIVER_NAME)
                            </span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <strong>
                                <label asp-for="HSampleReceivingM.V.VNUMBER" class="control-label"></label>
                            </strong>
                            <span class="custom-form-control form-control bg-e9ecef">
                                @Html.DisplayFor(model => model.HSampleReceivingM.V.VNUMBER)
                            </span>
                        </div>
                    </div>

                    @{
                        var hSampleReceivingDs = Model.HSampleReceivingM.H_SAMPLE_RECEIVING_D.ToList();

                        if (hSampleReceivingDs.Any())
                        {
                            <div class="col-12 table-responsive">
                                <h2 class="panel-title text-success"><i class="fa fa-get-pocket"></i> Receive Details</h2>
                                <table class="table table-hover">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>#</th>
                                            <th>@Html.DisplayNameFor(model => model.HSampleReceivingD.TRNS.SITEM.NAME)</th>
                                            <th>@Html.DisplayNameFor(model => model.HSampleReceivingD.BUYER.BUYER_NAME)</th>
                                            <th>@Html.DisplayNameFor(model => model.HSampleReceivingD.U.UNAME)</th>
                                            <th>@Html.DisplayNameFor(model => model.HSampleReceivingD.QTY)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (var i = 0; i < hSampleReceivingDs.Count; i++)
                                        {
                                            <tr>
                                                <td>@(i + 1)</td>
                                                <td>@hSampleReceivingDs[i].TRNS.SITEM.NAME</td>
                                                <td>@hSampleReceivingDs[i].BUYER.BUYER_NAME</td>
                                                <td>@hSampleReceivingDs[i].U.UNAME</td>
                                                <td>@hSampleReceivingDs[i].QTY</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    }
                </div>

                <div class="col-md-12">
                    @Html.ActionLink("Edit", $"EditHSampleReceivingM", new { hsrId = Model.HSampleReceivingM.EncryptedId }, new { @class = "btn btn-warning pull-right mt-2" })
                    <a class="btn btn-dark pull-right mt-2" asp-action="GetHSampleReceivingM" asp-controller="HSampleReceivingM">Back to List</a>
                </div>
            </div>
        </div>
    }
}
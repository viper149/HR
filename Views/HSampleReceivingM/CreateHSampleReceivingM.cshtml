@using DenimERP.ViewModels.Tips
@model CreateHSampleReceivingMViewModel

@{
    ViewData["Title"] = "Create HO Sample Receive";
    Layout = Layout;
}

<h2>
    <i class="fa fa-plus-circle fa-lg text-success" aria-hidden="true"></i> Sample Garments <i class="fa fa-at text-info">Head Office Receive </i>
    <i class="fa fa-user-secret" aria-hidden="true" data-toggle="modal" data-target="#rules" title="User Secret"></i>
</h2>

@await Html.PartialAsync($"~/Views/Tips/UserSecrets.cshtml", new UserSecrets(new[] { true, false, false, true, true }))

<div class="container-fluid">

    <form id="form" role="form" asp-action="CreateHSampleReceivingM" enctype="multipart/form-data">
        <div class="panel panel-default">
            <div class="panel-body row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 row">
                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="HSampleReceivingM.DP.GPNO" class="control-label required"></label>
                            @Html.DropDownListFor(lc => lc.HSampleReceivingM.DPID, new SelectList(Model.FSampleDespatchMasters, "DPID", "GPNO"), "Select a Gate Pass", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                            @Html.ValidationMessageFor(lc => lc.HSampleReceivingM.DPID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="HSampleReceivingM.RCVDATE" class="control-label required"></label>
                            <input asp-for="HSampleReceivingM.RCVDATE" class="form-control" />
                            <span asp-validation-for="HSampleReceivingM.RCVDATE" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <hr />
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 row" id="HSampleReceivingM"></div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <button class="btn btn-warning pull-right" type="submit"><i class="fa fa-floppy-o"></i> Save Data</button>
                    <a asp-action="GetHSampleReceivingM" asp-controller="HSampleReceivingM" class="btn btn-dark pull-right"><i class="fa fa-list-ul"></i> Back to List</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Styles {
    <link href="~/css/CustomCSS/Stepper.css" rel="stylesheet" asp-append-version="true" />
}

@section Scripts {
    @{await Html.RenderPartialAsync($"_ValidationScriptPartial_Except_jQuery");}
    <script asp-append-version="true" src="~/js/custom-js/Stepper.js"></script>
    <script asp-append-version="true" src="~/js/HSampleReceivingM/CreateHSampleReceivingM.js"></script>
    <script asp-append-version="true" src="~/js/site-common.js"></script>
}